// Ultra-reliable API fetching with retry logic
async function fetchWithRetry(fetchFn, retries = 2) {
  for (let i = 0; i < retries; i++) {
    try {
      return await fetchFn();
    } catch (error) {
      if (i === retries - 1) throw error;
      await new Promise((resolve) => setTimeout(resolve, 1000));
    }
  }
}

// üéØ SIMPLE: Single image optimizer for all types
async function optimizeImage(url, width, height, quality = 85) {
  if (!url) return null;
  try {
    const optimized = await getImage({
      src: url,
      width: width,
      height: height,
      format: "webp",
      quality: quality,
      fit: "cover",
      inferSize: true,
    });
    return optimized;
  } catch (error) {
    return { src: url };
  }
}

// Server-side data fetching
let data = {
  heroes: [],
  subHero: null,
  rooms: [],
  experiences: null,
  specialDeal: null,
};
let error = null;

try {
  data = await fetchWithRetry(() => fetchAllHomepageData());

  // üéØ OPTIMIZE: Hero image
  if (data.heroes?.length > 0 && data.heroes[0]?.backgroundImage?.heroMobile) {
    const optimizedHero = await optimizeImage(
      data.heroes[0].backgroundImage.heroMobile,
      1920,
      1080,
      70
    );
    if (optimizedHero) {
      data.heroes[0].optimizedImage = optimizedHero;
    }
  }

  // üéØ OPTIMIZE: Sub-hero image
  if (data.subHero?.image?.url) {
    const optimizedSubHero = await optimizeImage(
      data.subHero.image.url,
      800,
      600,
      65
    );
    if (optimizedSubHero) {
      data.subHero.optimizedImage = optimizedSubHero;
    }
  }

  // üéØ OPTIMIZE: All room images
  if (data.rooms?.length > 0) {
    data.rooms = await Promise.all(
      data.rooms.map(async (room) => {
        if (room.heroImage?.optimisedCard) {
          const optimized = await optimizeImage(
            room.heroImage.optimisedCard,
            400,
            300,
            65
          );
          return { ...room, optimizedImage: optimized };
        }
        return room;
      })
    );
  }

  // üéØ OPTIMIZE: Experience images
  if (data.experiences?.experience?.length > 0) {
    data.experiences.experience = await Promise.all(
      data.experiences.experience.map(async (exp) => {
        if (exp.image?.url) {
          const optimized = await optimizeImage(exp.image.url, 400, 200, 85);
          return { ...exp, optimizedImage: optimized };
        }
        return exp;
      })
    );
  }
} catch (err) {
  console.error("Failed to load homepage data:", err);
  error = "Failed to load content from CMS";
}

// Safe hero image
