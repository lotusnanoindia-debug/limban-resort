---
import Layout from "../layouts/Layout.astro";
import { AstroSEO } from "astro-seo-plugin";
import { Icon } from "astro-icon/components";
import ContactSection from "../components/ContactSection.astro";
import imageService from "../utils/ImageService.js";

// Placeholder spa images - replace with your actual hero image
const heroImage =
  "https://res.cloudinary.com/dfa5hhzej/image/fetch/w_800,c_limit,f_auto,q_auto/placeholder-spa-hero";

// Spa services data
const bodyTreatments = [
  {
    id: "ayurvedic-massage",
    title: "Traditional Ayurvedic Massages",
    description:
      "Ancient healing techniques using aromatic oils and traditional methods passed down through generations for ultimate relaxation and wellness.",
    image: "placeholder-ayurvedic-massage",
    icon: "ph:leaf-bold",
  },
  {
    id: "hot-stone",
    title: "Hot Stone Therapy",
    description:
      "Deep muscle relaxation using heated volcanic stones to melt away tension and restore natural energy flow.",
    image: "placeholder-hot-stone",
    icon: "ph:fire-bold",
  },
  {
    id: "herbal-wrap",
    title: "Herbal Body Wraps",
    description:
      "Detoxifying treatments with medicinal herbs and natural botanicals to purify and rejuvenate the skin.",
    image: "placeholder-herbal-wrap",
    icon: "ph:plant-bold",
  },
  {
    id: "detox-scrub",
    title: "Detoxifying Scrubs",
    description:
      "Exfoliating treatments using natural ingredients to remove impurities and reveal smooth, glowing skin.",
    image: "placeholder-detox-scrub",
    icon: "ph:sparkle-bold",
  },
];

const facialServices = [
  {
    id: "organic-facial",
    title: "Organic Plant-Based Facials",
    description:
      "Nourishing treatments using natural ingredients for healthy, radiant skin.",
    image: "placeholder-organic-facial",
    icon: "ph:flower-bold",
  },
  {
    id: "anti-aging",
    title: "Anti-Aging Treatments",
    description:
      "Rejuvenating therapies designed to restore youthful vitality and natural glow.",
    image: "placeholder-anti-aging",
    icon: "ph:magic-wand-bold",
  },
  {
    id: "hydration",
    title: "Hydration Therapies",
    description:
      "Deep moisturizing treatments to replenish and revitalize dry or tired skin.",
    image: "placeholder-hydration",
    icon: "ph:drop-bold",
  },
  {
    id: "relaxation-package",
    title: "Relaxation Packages",
    description:
      "Complete wellness experiences combining multiple treatments for ultimate rejuvenation.",
    image: "placeholder-relaxation-package",
    icon: "ph:heart-bold",
  },
];

// Process hero image
const heroImageUrl = imageService.processImage(
  { url: heroImage, alt: "Limban Spa sanctuary" },
  "heroDesktop",
  { quality: 70 },
);
---

<link rel="preload" as="image" href={heroImageUrl} fetchpriority="high" />

<Layout>
  <AstroSEO
    slot="head"
    title="Limban Spa | Wellness & Rejuvenation Sanctuary"
    description="Experience ultimate wellness at Limban Spa. Traditional Ayurvedic treatments, organic facials, and holistic therapies in the heart of nature's tranquility."
    canonical="https://limban.com/spa"
    openGraph={{
      title: "Limban Spa | Wellness & Rejuvenation Sanctuary",
      description:
        "Experience ultimate wellness at Limban Spa. Traditional Ayurvedic treatments, organic facials, and holistic therapies.",
      image: heroImageUrl,
      type: "website",
      url: "https://limban.com/spa",
    }}
  />

  <div class="bg-gray-950 text-gray-100 selection:bg-gray-700">
    <!-- Hero Section -->
    <section
      class="relative min-h-screen flex items-center justify-center overflow-hidden"
    >
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-black/60 z-10"></div>
        <img
          src={heroImageUrl}
          alt="Limban Spa sanctuary - wellness and rejuvenation"
          class="w-full h-full object-cover scale-105"
          fetchpriority="high"
        />
      </div>

      <div class="relative z-20 text-center max-w-6xl mx-auto px-6">
        <div class="space-y-8">
          <div
            class="inline-block px-6 py-3 bg-gradient-to-r from-amber-400/10 via-amber-500/10 to-amber-400/10 backdrop-blur-md border border-amber-400/30 rounded-full mb-8"
          >
            <span
              class="text-amber-300 text-sm font-medium tracking-[0.3em] uppercase flex items-center gap-2"
            >
              <Icon name="ph:leaf" class="w-4 h-4" />
              Wellness Sanctuary
            </span>
          </div>

          <h1
            class="font-serif italic text-6xl md:text-8xl lg:text-9xl text-white leading-[0.9] mb-8"
          >
            <span class="block">Limban</span>
            <span
              class="block text-transparent bg-gradient-to-r from-amber-300 via-amber-400 to-yellow-400 bg-clip-text"
            >
              Spa
            </span>
          </h1>

          <p
            class="text-2xl md:text-3xl text-gray-200 font-light leading-relaxed max-w-4xl mx-auto mb-12"
          >
            Where ancient wellness traditions meet modern luxury. Rejuvenate
            your mind, body, and soul in nature's embrace.
          </p>
        </div>
      </div>
    </section>

    <!-- Breadcrumb Navigation -->
    <nav
      class="py-6 bg-gray-900/50 border-b border-gray-800"
      aria-label="Breadcrumb"
    >
      <div class="max-w-7xl mx-auto px-6">
        <ol class="flex items-center justify-center space-x-2 text-sm">
          <li>
            <a
              href="/"
              title="Return to Limban Resort homepage"
              class="text-gray-400 hover:text-amber-400 transition-colors duration-300 flex items-center"
            >
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path
                  d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                ></path>
              </svg>
              Home
            </a>
          </li>
          <li>
            <svg
              class="w-4 h-4 text-gray-600"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </li>
          <li>
            <span class="text-amber-400 font-medium">Spa</span>
          </li>
        </ol>
      </div>
    </nav>

    <!-- Spa Philosophy -->
    <section class="py-32 bg-gradient-to-b from-gray-900 to-gray-950">
      <div class="max-w-5xl mx-auto px-6 text-center">
        <div
          class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-8"
        >
          <span
            class="text-amber-400 text-sm font-medium tracking-widest uppercase"
            >Our Philosophy</span
          >
        </div>

        <h2 class="font-serif italic text-5xl md:text-6xl text-white mb-8">
          Where Wellness <span class="text-amber-400">Meets Serenity</span>
        </h2>

        <p
          class="text-xl text-gray-300 font-light leading-relaxed mb-12 max-w-4xl mx-auto"
        >
          At Limban Spa, we honour ancient healing traditions while embracing
          modern wellness techniques. Each treatment is a journey of renewal,
          designed to restore harmony between mind, body, and spirit.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16">
          <div class="group text-center">
            <div
              class="w-16 h-16 bg-gradient-to-br from-amber-400/20 to-orange-500/20 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <Icon name="ph:leaf-bold" class="w-8 h-8 text-amber-400" />
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">
              Natural Healing
            </h3>
            <p class="text-gray-300 leading-relaxed">
              Pure, organic ingredients and time-honored techniques for
              authentic wellness experiences.
            </p>
          </div>

          <div class="group text-center">
            <div
              class="w-16 h-16 bg-gradient-to-br from-amber-400/20 to-orange-500/20 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <Icon name="ph:heart-bold" class="w-8 h-8 text-amber-400" />
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">
              Personalized Care
            </h3>
            <p class="text-gray-300 leading-relaxed">
              Treatments tailored to your unique needs, ensuring optimal
              relaxation and rejuvenation.
            </p>
          </div>

          <div class="group text-center">
            <div
              class="w-16 h-16 bg-gradient-to-br from-amber-400/20 to-orange-500/20 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <Icon
                name="ph:tree-evergreen-bold"
                class="w-8 h-8 text-amber-400"
              />
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">
              Tranquil Setting
            </h3>
            <p class="text-gray-300 leading-relaxed">
              Surrounded by nature's beauty, creating the perfect sanctuary for
              wellness and peace.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Body Treatments -->
    <section class="py-32 bg-gradient-to-b from-gray-900">
      <div class="max-w-7xl mx-auto px-6">
        <header class="text-center mb-16">
          <div
            class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-8"
          >
            <span
              class="text-amber-400 text-sm font-medium tracking-widest uppercase"
              >Body Treatments</span
            >
          </div>
          <h2 class="font-serif italic text-5xl md:text-6xl text-white mb-6">
            Healing <span class="text-amber-400">Touch</span>
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Therapeutic treatments designed to restore balance, release tension,
            and rejuvenate your entire being
          </p>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {
            bodyTreatments.map((treatment) => (
              <div
                key={treatment.id}
                class="bg-gray-800/30 rounded-2xl overflow-hidden border border-gray-700/50 flex flex-col group hover:border-amber-400/30 transition-all duration-300"
              >
                <div class="relative aspect-[4/3] overflow-hidden">
                  <img
                    src={`https://res.cloudinary.com/dfa5hhzej/image/fetch/w_400,h_300,c_fill,f_auto,q_auto/${treatment.image}`}
                    alt={treatment.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-gray-950/80 via-transparent to-transparent" />
                  <div class="absolute top-4 left-4 w-10 h-10 bg-amber-400/20 rounded-full flex items-center justify-center">
                    <Icon
                      name={treatment.icon}
                      class="w-5 h-5 text-amber-400"
                    />
                  </div>
                </div>

                <div class="p-6 flex flex-col flex-grow">
                  <h3 class="text-xl font-semibold text-amber-300 mb-3 group-hover:text-amber-400 transition-colors duration-300">
                    {treatment.title}
                  </h3>
                  <p class="text-gray-300 text-sm mb-6 flex-grow leading-relaxed">
                    {treatment.description}
                  </p>
                  <button class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-amber-400/10 to-orange-500/10 border border-amber-400/30 rounded-full hover:from-amber-400/20 hover:to-orange-500/20 hover:border-amber-400/50 transition-all duration-300 text-amber-400 text-sm font-medium self-start">
                    <span>Book Treatment</span>
                    <Icon name="ph:arrow-right" class="w-4 h-4" />
                  </button>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Facial Services -->
    <section class="py-32 bg-gray-900/50">
      <div class="max-w-7xl mx-auto px-6">
        <header class="text-center mb-16">
          <div
            class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-8"
          >
            <span
              class="text-amber-400 text-sm font-medium tracking-widest uppercase"
              >Facial Services</span
            >
          </div>
          <h2 class="font-serif italic text-5xl md:text-6xl text-white mb-6">
            Radiant <span class="text-amber-400">Glow</span>
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Luxurious facial treatments using premium organic products to reveal
            your skin's natural luminosity
          </p>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {
            facialServices.map((service) => (
              <div
                key={service.id}
                class="bg-gray-800/30 rounded-2xl overflow-hidden border border-gray-700/50 flex flex-col group hover:border-amber-400/30 transition-all duration-300"
              >
                <div class="relative aspect-[4/3] overflow-hidden">
                  <img
                    src={`https://res.cloudinary.com/dfa5hhzej/image/fetch/w_400,h_300,c_fill,f_auto,q_auto/${service.image}`}
                    alt={service.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-gray-950/80 via-transparent to-transparent" />
                  <div class="absolute top-4 left-4 w-10 h-10 bg-amber-400/20 rounded-full flex items-center justify-center">
                    <Icon name={service.icon} class="w-5 h-5 text-amber-400" />
                  </div>
                </div>

                <div class="p-6 flex flex-col flex-grow">
                  <h3 class="text-xl font-semibold text-amber-300 mb-3 group-hover:text-amber-400 transition-colors duration-300">
                    {service.title}
                  </h3>
                  <p class="text-gray-300 text-sm mb-6 flex-grow leading-relaxed">
                    {service.description}
                  </p>
                  <button class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-amber-400/10 to-orange-500/10 border border-amber-400/30 rounded-full hover:from-amber-400/20 hover:to-orange-500/20 hover:border-amber-400/50 transition-all duration-300 text-amber-400 text-sm font-medium self-start">
                    <span>Book Treatment</span>
                    <Icon name="ph:arrow-right" class="w-4 h-4" />
                  </button>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <ContactSection />
  </div>
</Layout>

<script>
  // Add any spa-specific interactions here
  document.addEventListener("DOMContentLoaded", function () {
    // Smooth scroll for booking buttons
    const bookingButtons = document.querySelectorAll(
      'button[class*="Book Treatment"]',
    );
    bookingButtons.forEach((button) => {
      button.addEventListener("click", () => {
        // Scroll to contact section or open booking modal
        document
          .querySelector("#contact")
          ?.scrollIntoView({ behavior: "smooth" });
      });
    });
  });
</script>
