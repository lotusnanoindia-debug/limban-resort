---
import Layout from "../layouts/Layout.astro";
import { AstroSEO } from "astro-seo-plugin";
import { fetchVibePageData } from "../api.js";

// Fetch wildlife data for individual images throughout the page
let vibeData = null;
try {
  vibeData = await fetchVibePageData();
} catch (err) {
  vibeData = { wildlifeImages: [] };
}

// Process individual wildlife images for sprinkling throughout
const wildlifeImages = (vibeData.wildlifeImages || [])
  .slice(0, 8)
  .map((item, index) => ({
    src: item.image?.grid || item.image?.url || "",
    alt: item.alt || `Tadoba wildlife ${index + 1}`,
    large: item.image?.large || item.image?.url || "",
  }));

const heroImage =
  wildlifeImages[0]?.large ||
  "https://ap-south-1.graphassets.com/tadoba-hero.jpg";
---

<Layout title="Tadoba Andhari Tiger Reserve - A Naturalist's Guide">
  <AstroSEO
    title="Tadoba Andhari Tiger Reserve | Complete Wildlife Guide"
    description="Comprehensive guide to Maharashtra's premier tiger reserve. 625 sq km of wilderness, 80+ Bengal tigers, and everything you need to know before visiting."
    canonical="https://limban.com/tadoba-national-park"
    openGraph={{
      title: "Tadoba Andhari Tiger Reserve - Complete Wildlife Guide",
      description:
        "Maharashtra's largest national park. Home to 80+ Bengal tigers across ancient forests.",
      image: heroImage,
      type: "website",
      url: "https://limban.com/tadoba-national-park",
    }}
  />

  <div
    class="bg-gray-950 text-gray-100 font-sans antialiased selection:bg-amber-400/20"
  >
    <!-- Skip to content -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-amber-400 text-gray-900 px-4 py-2 rounded z-50"
    >
      Skip to main content
    </a>

    <!-- Hero Section -->
    <section class="relative min-h-screen overflow-hidden" role="banner">
      <div class="absolute inset-0">
        <img
          src={heroImage}
          alt="Tadoba's ancient forests at dawn"
          class="w-full h-full object-cover"
          loading="eager"
          fetchpriority="high"
        />
      </div>

      <div
        class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/30 to-black/70"
      >
      </div>

      <div
        class="relative z-20 min-h-screen flex items-center justify-center text-center px-6"
      >
        <div class="max-w-6xl space-y-8">
          <div
            class="inline-block px-6 py-2 bg-green-500/20 border border-green-400/40 rounded-full mb-6"
          >
            <span
              class="text-green-400 text-sm font-medium tracking-widest uppercase"
              >Maharashtra's Crown Jewel</span
            >
          </div>

          <h1
            class="font-serif text-6xl md:text-8xl text-white leading-none tracking-tight"
          >
            Tadoba Andhari
            <span class="block text-amber-400 italic text-4xl md:text-5xl mt-4"
              >Tiger Reserve</span
            >
          </h1>

          <p
            class="text-xl md:text-2xl text-gray-200 font-light leading-relaxed max-w-4xl mx-auto"
          >
            A naturalist's guide to understanding 625 square kilometres of
            Central India's most significant wilderness
          </p>
        </div>
      </div>
    </section>

    <!-- Breadcrumb Navigation -->
    <nav
      class="py-6 bg-gray-900/50 border-b border-gray-800"
      aria-label="Breadcrumb"
    >
      <div class="max-w-7xl mx-auto px-6">
        <ol class="flex items-center justify-center space-x-2 text-sm">
          <li>
            <a
              href="/"
              class="text-gray-400 hover:text-amber-400 transition-colors duration-300 flex items-center focus:outline-none focus:ring-2 focus:ring-amber-400/50 rounded"
            >
              <svg
                class="w-4 h-4 mr-1"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path
                  d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                ></path>
              </svg>
              Home
            </a>
          </li>
          <li aria-hidden="true">
            <svg
              class="w-4 h-4 text-gray-600"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </li>
          <li aria-current="page">
            <span class="text-amber-400 font-medium">Tadoba National Park</span>
          </li>
        </ol>
      </div>
    </nav>

    <!-- Main Content -->
    <main id="main-content" role="main">
      <!-- Introduction with Tiger Image -->
      <section class="py-32 bg-gray-950">
        <div class="max-w-7xl mx-auto px-6">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div class="space-y-8">
              <h2
                class="font-serif italic text-5xl md:text-6xl text-white leading-tight"
              >
                What You're <span class="text-amber-400">Entering</span>
              </h2>

              <div class="prose prose-invert prose-xl max-w-none">
                <p
                  class="text-gray-300 text-xl leading-relaxed first-letter:text-7xl first-letter:font-bold first-letter:text-amber-400 first-letter:float-left first-letter:mr-3 first-letter:mt-1"
                >
                  Tadoba Andhari Tiger Reserve spans 625 square kilometres of
                  Central Indian forest in Maharashtra's Chandrapur district.
                  Established in 1955, it protects one of India's most
                  significant tiger populations alongside a complex ecosystem
                  that has adapted to seasonal rhythms for millennia.
                </p>

                <p class="text-gray-400 text-lg leading-relaxed mt-6">
                  This is not a zoo. What you witness here is authentic wildness
                  - raw, unpredictable, and entirely on nature's terms. The
                  80-90 Bengal tigers that call this forest home follow ancient
                  patterns unchanged by human presence.
                </p>
              </div>
            </div>

            {
              wildlifeImages[0] && (
                <div class="relative group">
                  <div class="overflow-hidden rounded-3xl bg-gray-800 hover:shadow-2xl hover:shadow-black/50 transition-all duration-1000">
                    <img
                      src={wildlifeImages[0].src}
                      alt={wildlifeImages[0].alt}
                      class="w-full h-96 object-cover group-hover:scale-105 transition-transform duration-700"
                      loading="lazy"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
                  </div>
                </div>
              )
            }
          </div>
        </div>
      </section>

      <!-- The Living Landscape with Flora -->
      <section class="py-32 bg-gradient-to-b from-gray-950 to-gray-900">
        <div class="max-w-7xl mx-auto px-6">
          <div class="text-center mb-20">
            <h2 class="font-serif italic text-5xl md:text-6xl text-white mb-8">
              The Living <span class="text-green-400">Landscape</span>
            </h2>
            <p class="text-xl text-gray-300 max-w-4xl mx-auto leading-relaxed">
              Understanding Tadoba means understanding its intricate web of
              terrain, water, and vegetation
            </p>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            <!-- Terrain -->
            <div
              class="bg-gradient-to-br from-gray-800/60 to-gray-900/60 backdrop-blur-xl border border-gray-600/50 rounded-3xl p-10 hover:border-amber-400/50 transition-all duration-700"
            >
              <div
                class="w-16 h-16 bg-amber-400/20 rounded-2xl flex items-center justify-center mb-6"
              >
                <svg
                  class="w-8 h-8 text-amber-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"
                  ></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-amber-400 mb-6">
                The Terrain
              </h3>
              <p class="text-gray-300 leading-relaxed">
                Undulating hills clothed in deciduous forest, interspersed with
                seasonal grasslands. The Pench River system threads through
                valleys that flood and recede with monsoon precision, creating
                habitat diversity that supports remarkable wildlife communities.
              </p>
            </div>

            <!-- Water Sources with Wildlife Image -->
            <div class="space-y-8">
              <div
                class="bg-gradient-to-br from-gray-800/60 to-gray-900/60 backdrop-blur-xl border border-gray-600/50 rounded-3xl p-10 hover:border-blue-400/50 transition-all duration-700"
              >
                <div
                  class="w-16 h-16 bg-blue-400/20 rounded-2xl flex items-center justify-center mb-6"
                >
                  <svg
                    class="w-8 h-8 text-blue-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M5 8a7 7 0 1114 0c0 5.25-7 13-7 13s-7-7.75-7-13z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-blue-400 mb-6">
                  Water Sources
                </h3>
                <p class="text-gray-300 leading-relaxed">
                  Tadoba Lake anchors the reserve - a permanent water body that
                  never fails even during severe droughts. Kolsa Lake,
                  Panchadhara waterhole, and Irai backwaters each support
                  distinct communities and serve as natural theaters during
                  harsh summer months.
                </p>
              </div>

              {
                wildlifeImages[1] && (
                  <div class="relative group overflow-hidden rounded-3xl">
                    <img
                      src={wildlifeImages[1].src}
                      alt={wildlifeImages[1].alt}
                      class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-700"
                      loading="lazy"
                    />
                  </div>
                )
              }
            </div>

            <!-- Forest Flora -->
            <div
              class="bg-gradient-to-br from-gray-800/60 to-gray-900/60 backdrop-blur-xl border border-gray-600/50 rounded-3xl p-10 hover:border-green-400/50 transition-all duration-700"
            >
              <div
                class="w-16 h-16 bg-green-400/20 rounded-2xl flex items-center justify-center mb-6"
              >
                <svg
                  class="w-8 h-8 text-green-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                  ></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-green-400 mb-6">
                Forest Composition
              </h3>
              <p class="text-gray-300 leading-relaxed mb-4">
                Ancient <strong class="text-green-300">teak forests</strong> form
                the canopy, with dense <strong class="text-green-300"
                  >bamboo groves</strong
                > creating understory cover. <strong class="text-green-300"
                  >Ain trees</strong
                > (crocodile bark) mark water courses, while <strong
                  class="text-green-300">dhawda</strong
                > and economically valuable <strong class="text-green-300"
                  >tendu</strong
                > create complex vertical layers.
              </p>
              <p class="text-gray-400 text-sm leading-relaxed">
                Understanding these trees helps decode animal movement - tigers
                follow bamboo corridors, leopards prefer rocky outcrops where
                ain trees indicate old water channels.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Wildlife Communities with Scattered Images -->
      <section class="py-32 bg-gray-900">
        <div class="max-w-7xl mx-auto px-6">
          <div class="text-center mb-20">
            <h2 class="font-serif italic text-5xl md:text-6xl text-white mb-8">
              Wildlife <span class="text-amber-400">Communities</span>
            </h2>
          </div>

          <div class="space-y-20">
            <!-- Apex Predators -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
              <div class="space-y-6">
                <h3 class="text-3xl font-bold text-amber-400">
                  Apex Predators
                </h3>
                <p class="text-gray-300 text-lg leading-relaxed">
                  The reserve supports approximately 80-90 tigers across defined
                  territories, with individuals identified through camera trap
                  technology. Notable residents include <strong
                    class="text-amber-300">Maya T-16</strong
                  >, <strong class="text-amber-300">Chotti Tara</strong>, and <strong
                    class="text-amber-300">Matkasur</strong
                  > - tigers whose territories and behaviors have been documented
                  over years.
                </p>
                <p class="text-gray-400 leading-relaxed">
                  Leopards occupy different ecological niches, often in rocky
                  terrain away from tiger corridors, demonstrating remarkable
                  adaptability to coexist with their larger cousins.
                </p>
              </div>

              {
                wildlifeImages[2] && (
                  <div class="relative group">
                    <div class="overflow-hidden rounded-3xl bg-gray-800 hover:shadow-2xl hover:shadow-amber-400/20 transition-all duration-1000">
                      <img
                        src={wildlifeImages[2].src}
                        alt={wildlifeImages[2].alt}
                        class="w-full h-96 object-cover group-hover:scale-105 transition-transform duration-700"
                        loading="lazy"
                      />
                    </div>
                  </div>
                )
              }
            </div>

            <!-- Herbivore Foundation with Multiple Images -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
              <div class="space-y-6">
                <h3 class="text-3xl font-bold text-green-400">
                  The Herbivore Foundation
                </h3>
                <p class="text-gray-300 leading-relaxed">
                  Spotted deer form the primary prey base, their alarm calls
                  serving as the forest's early warning system. Sambar deer
                  prefer deeper forest areas, while nilgai venture into
                  grasslands.
                </p>
              </div>

              {
                wildlifeImages[3] && (
                  <div class="relative group overflow-hidden rounded-3xl">
                    <img
                      src={wildlifeImages[3].src}
                      alt={wildlifeImages[3].alt}
                      class="w-full h-72 object-cover group-hover:scale-105 transition-transform duration-700"
                      loading="lazy"
                    />
                  </div>
                )
              }

              <div class="space-y-6">
                <p class="text-gray-400 leading-relaxed">
                  <strong class="text-green-300">Gaur</strong> - massive wild cattle
                  - create pathways through dense forest that smaller animals follow,
                  essentially serving as ecosystem engineers shaping the very landscape.
                </p>
                <blockquote
                  class="border-l-4 border-amber-400 pl-6 py-4 bg-gray-800/50 rounded-r-lg"
                >
                  <p class="text-amber-300 italic">
                    "In Tadoba, every species plays a role in the larger
                    symphony - from the smallest insect to the mighty tiger."
                  </p>
                </blockquote>
              </div>
            </div>

            <!-- Sloth Bears and Pack Hunters -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
              {
                wildlifeImages[4] && (
                  <div class="relative group overflow-hidden rounded-3xl">
                    <img
                      src={wildlifeImages[4].src}
                      alt={wildlifeImages[4].alt}
                      class="w-full h-80 object-cover group-hover:scale-105 transition-transform duration-700"
                      loading="lazy"
                    />
                  </div>
                )
              }

              <div class="space-y-8">
                <div>
                  <h3 class="text-2xl font-bold text-amber-400 mb-4">
                    Sloth Bears
                  </h3>
                  <p class="text-gray-300 leading-relaxed">
                    Tadoba hosts one of Central India's healthiest sloth bear
                    populations. These solitary, primarily insectivorous bears
                    are most active during early morning and late evening, often
                    heard before seen as they crash through bamboo stands.
                  </p>
                </div>

                <div>
                  <h3 class="text-2xl font-bold text-red-400 mb-4">
                    Pack Hunters
                  </h3>
                  <p class="text-gray-300 leading-relaxed">
                    Dhole (wild dog) packs of 8-12 individuals demonstrate
                    sophisticated cooperative hunting. Their presence indicates
                    healthy prey populations, while their territorial ranges
                    overlap with tigers in complex relationships researchers
                    continue studying.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Seasonal Rhythms -->
      <section class="py-32 bg-gradient-to-b from-gray-900 to-gray-800">
        <div class="max-w-7xl mx-auto px-6">
          <div class="text-center mb-20">
            <h2 class="font-serif italic text-5xl md:text-6xl text-white mb-8">
              Seasonal <span class="text-amber-400">Rhythms</span>
            </h2>
            <p class="text-xl text-gray-300 max-w-4xl mx-auto leading-relaxed">
              Tadoba transforms dramatically through Maharashtra's seasonal
              cycle
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div
              class="bg-gradient-to-br from-orange-900/30 to-red-900/30 border border-orange-400/30 rounded-3xl p-8 hover:border-orange-400/60 transition-colors duration-500"
            >
              <div class="text-center mb-6">
                <div
                  class="w-20 h-20 bg-orange-400/20 rounded-full flex items-center justify-center mx-auto mb-4"
                >
                  <svg
                    class="w-10 h-10 text-orange-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-orange-400 mb-4">Summer</h3>
                <p class="text-orange-200 text-sm font-medium mb-4">
                  March - June
                </p>
              </div>
              <p class="text-gray-300 leading-relaxed">
                Extreme heat (up to 47°C) concentrates animals around water
                sources. Highest tiger visibility as vegetation becomes sparse
                and movement predictable. Challenging but rewarding for
                dedicated enthusiasts.
              </p>
            </div>

            <div
              class="bg-gradient-to-br from-green-900/30 to-blue-900/30 border border-green-400/30 rounded-3xl p-8 hover:border-green-400/60 transition-colors duration-500"
            >
              <div class="text-center mb-6">
                <div
                  class="w-20 h-20 bg-green-400/20 rounded-full flex items-center justify-center mx-auto mb-4"
                >
                  <svg
                    class="w-10 h-10 text-green-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-green-400 mb-4">
                  Post-Monsoon
                </h3>
                <p class="text-green-200 text-sm font-medium mb-4">
                  October - February
                </p>
              </div>
              <p class="text-gray-300 leading-relaxed">
                Lush landscape with active birdlife including winter migrants.
                Tigers more elusive due to abundant water. Ideal photography
                light, comfortable temperatures, peak butterfly activity.
              </p>
            </div>

            <div
              class="bg-gradient-to-br from-blue-900/30 to-purple-900/30 border border-blue-400/30 rounded-3xl p-8 hover:border-blue-400/60 transition-colors duration-500"
            >
              <div class="text-center mb-6">
                <div
                  class="w-20 h-20 bg-blue-400/20 rounded-full flex items-center justify-center mx-auto mb-4"
                >
                  <svg
                    class="w-10 h-10 text-blue-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-blue-400 mb-4">
                  Pre-Monsoon
                </h3>
                <p class="text-blue-200 text-sm font-medium mb-4">
                  February - April
                </p>
              </div>
              <p class="text-gray-300 leading-relaxed">
                Balance of visibility and comfort. New grass growth attracts
                herbivores to meadows. Courting behavior among various species.
                Optimal for first-time visitors.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Things to Do - Innovative Layout -->
      <section class="py-32 bg-gray-950">
        <div class="max-w-7xl mx-auto px-6">
          <div class="text-center mb-20">
            <h2 class="font-serif italic text-5xl md:text-6xl text-white mb-8">
              Experiencing <span class="text-amber-400">Tadoba</span>
            </h2>
            <p class="text-xl text-gray-300 max-w-4xl mx-auto leading-relaxed">
              Activities that provide different perspectives on this complex
              ecosystem
            </p>
          </div>

          <!-- Core Wildlife Experiences -->
          <div class="mb-20">
            <h3 class="text-3xl font-bold text-amber-400 mb-12 text-center">
              Core Wildlife Experiences
            </h3>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
              <div class="space-y-8">
                <div class="border-l-4 border-amber-400 pl-8 py-6">
                  <h4 class="text-xl font-bold text-white mb-3">
                    Jeep Safaris
                  </h4>
                  <p class="text-gray-300 leading-relaxed">
                    Morning (0600-0930) and evening (1500-1800) drives through
                    core and buffer zones. Private jeeps with experienced
                    naturalist guides.
                  </p>
                </div>

                <div class="border-l-4 border-blue-400 pl-8 py-6">
                  <h4 class="text-xl font-bold text-white mb-3">
                    Boat Safari on Irai Lake
                  </h4>
                  <p class="text-gray-300 leading-relaxed">
                    Serene water-based wildlife viewing focusing on aquatic
                    birds and marsh crocodiles. Particularly rewarding during
                    early morning hours.
                  </p>
                </div>

                <div class="border-l-4 border-purple-400 pl-8 py-6">
                  <h4 class="text-xl font-bold text-white mb-3">
                    Night Safaris
                  </h4>
                  <p class="text-gray-300 leading-relaxed">
                    Limited availability in buffer zones. Three-hour experiences
                    revealing nocturnal behavior patterns invisible during
                    daylight.
                  </p>
                </div>
              </div>

              {
                wildlifeImages[5] && (
                  <div class="relative group">
                    <div class="overflow-hidden rounded-3xl bg-gray-800 hover:shadow-2xl hover:shadow-amber-400/20 transition-all duration-1000">
                      <img
                        src={wildlifeImages[5].src}
                        alt={wildlifeImages[5].alt}
                        class="w-full h-96 object-cover group-hover:scale-105 transition-transform duration-700"
                        loading="lazy"
                      />
