---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
import { AstroSEO } from "astro-seo-plugin";

// Helper for Cloudinary JPG (schema)
const toCloudinaryJpg = (url: string) => {
  if (!url) return "";
  return `https://res.cloudinary.com/dfa5hhzej/image/fetch/w_1200,h_675,c_fill,q_85,f_jpg/${url}`;
};

// Clean, optimized static background
const heroImageUrl =
  "https://res.cloudinary.com/dfa5hhzej/image/upload/f_avif,q_35,w_1400,c_scale/morning-in-tadoba-national-park_ytygcd.jpg";
const heroMobileUrl =
  "https://res.cloudinary.com/dfa5hhzej/image/upload/f_avif,q_35,w_600,c_scale/morning-in-tadoba-national-park_ytygcd.jpg";
const heroImageSchema =
  "https://res.cloudinary.com/dfa5hhzej/image/upload/w_1200,h_675,c_fill,q_85,f_jpg/morning-in-tadoba-national-park_ytygcd.jpg";

// Article schema
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "@id": "https://limban.com/tadoba#article",
  headline: "The Complete Guide to Tadoba National Park",
  description:
    "The definitive insider's guide to Maharashtra's greatest tiger reserve. From ancient Gond legends to modern conservation triumphs, understand what makes Tadoba truly extraordinary.",
  image: heroImageSchema,
  datePublished: "2024-01-15",
  dateModified: "2025-10-15",
  author: {
    "@type": "Hotel",
    "@id": "https://limban.com/#hotel",
    name: "Limban Resort",
  },
  publisher: {
    "@type": "Organization",
    "@id": "https://limban.com/#organization",
    name: "Limban Resort",
    logo: {
      "@type": "ImageObject",
      url: "https://limban.com/limban-resort-tadoba-logo.png",
    },
  },
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": "https://limban.com/tadoba",
  },
  about: {
    "@type": "TouristDestination",
    "@id": "https://limban.com/tadoba#destination",
    name: "Tadoba Andhari Tiger Reserve",
    description:
      "Maharashtra's oldest and largest national park, established in 1955. A premier tiger sanctuary covering 1,727 sq km with dense teak forests, ancient Gond heritage, and successful conservation programs hosting 97+ tigers.",
    url: "https://www.tadobanationalpark.in",
    address: {
      "@type": "PostalAddress",
      addressLocality: "Chandrapur",
      addressRegion: "Maharashtra",
      addressCountry: "IN",
    },
    geo: {
      "@type": "GeoCoordinates",
      latitude: 20.266667,
      longitude: 79.4,
    },
    touristType: [
      "Wildlife Enthusiasts",
      "Nature Photographers",
      "Conservation Advocates",
      "Adventure Travelers",
    ],
  },
};

// FAQ schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "@id": "https://limban.com/tadoba#faq",
  mainEntity: [
    {
      "@type": "Question",
      name: "How does safari booking work at Limban?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "As a Limban guest, we handle all safari bookings for you through the official Maharashtra portal. We recommend booking your stay first, then we'll secure the best available permits based on your preferences for gates and timing. We know which zones are performing well each season.",
      },
    },
    {
      "@type": "Question",
      name: "What are the weekly closure days?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Core zones are completely closed every Tuesday for wildlife rest. Buffer zones are closed every Wednesday. We build your itinerary around these closures and can suggest alternative activities on closure days.",
      },
    },
    {
      "@type": "Question",
      name: "What should I pack for different seasons?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "All seasons: Neutral colours only (khaki, olive, brown), full sleeves, closed shoes, hat, sunglasses. Winter: Layers for cold mornings (5-10°C), light jacket, scarf. Summer: Lightweight cotton, extra sun protection, electrolyte tablets. Monsoon: Light rain jacket, quick-dry fabrics, waterproof day pack.",
      },
    },
    {
      "@type": "Question",
      name: "How many safaris should I plan?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "We recommend minimum 4-6 safaris over 3-4 days for a meaningful experience. This allows you to visit different zones, experience both morning and afternoon timing, and increases your chances of diverse wildlife encounters. Each safari reveals different aspects of the ecosystem.",
      },
    },
    {
      "@type": "Question",
      name: "Why can't I use my mobile phone on safari?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Phones are deposited at the gate to prevent location sharing that causes vehicle crowding at sightings. This protects animal welfare and ensures better experiences for everyone. It also eliminates the distraction, letting you be fully present in the forest. Emergency communication happens via guide radios.",
      },
    },
    {
      "@type": "Question",
      name: "What if we don't see tigers?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Every safari offers something remarkable. Beyond tigers, you'll encounter leopards, wild dogs, sloth bears, massive gaur, and over 280 bird species. The forest's soundscape—alarm calls, bird songs, rustling leaves—tells stories as compelling as any sighting. Many guests say their 'no tiger' safaris were their most educational.",
      },
    },
    {
      "@type": "Question",
      name: "Can I carry a camera?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Camera fees apply to lenses above 250mm focal length, typically ₹250-500 per safari depending on lens size. Basic cameras and phones (when allowed in buffer zones) are usually free. We can advise on current fee structures and help with payments at gates.",
      },
    },
    {
      "@type": "Question",
      name: "Is it suitable for children and elderly guests?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Safaris require sitting quietly for 3-4 hours on sometimes rough tracks. Children 8+ typically do well with proper preparation. For younger kids or guests with mobility concerns, we can arrange shorter nature walks, resort-based activities, and visits to the interpretation centre. Our naturalists are skilled at engaging all age groups.",
      },
    },
  ],
};

// Combine schemas
const combinedJsonLd = [articleSchema, faqSchema];
---

<Layout>
  <AstroSEO
    slot="head"
    title="The Complete Guide to Tadoba National Park | Limban Resort"
    description="The definitive insider's guide to Maharashtra's greatest tiger reserve. From ancient Gond legends to modern conservation triumphs, understand what makes Tadoba truly extraordinary."
    openGraph={{
      title: "The Complete Guide to Tadoba National Park | Limban Resort",
      description:
        "Discover the secrets of India's premier tiger sanctuary. Ancient forests, legendary cats, and sacred heritage await.",
      image: heroImageSchema,
      type: "article",
      url: "https://limban.com/tadoba",
    }}
    jsonLd={combinedJsonLd}
  />

  <!-- Hero Section - Cinematic Introduction -->
  <section
    class="relative min-h-screen flex items-center justify-center overflow-hidden"
  >
    <!-- background -->
    <div class="absolute inset-0">
      <picture>
        <source media="(max-width: 768px)" srcset={heroMobileUrl} />
        <img
          src={heroImageUrl}
          class="w-full h-full object-cover"
          alt="Majestic nature in Tadoba National Park - experience it at Limban Resort"
          loading="eager"
          fetchpriority="high"
        />
      </picture>

      <div
        class="absolute inset-0 bg-gradient-to-b from-gray-950/40 via-transparent to-gray-950/80"
      >
      </div>
      <div
        class="absolute inset-0 bg-gradient-radial from-transparent via-gray-950/20 to-gray-950/60"
      >
      </div>
    </div>

    <div class="relative z-20 max-w-7xl mx-auto px-6 text-center">
      <!-- Welcome badge with sophisticated animation -->
      <div class="inline-block mb-8 group">
        <div
          class="bg-gradient-to-r from-green-400/20 via-green-500/20 to-emerald-400/20 backdrop-blur-md border border-green-400/40 rounded-full px-8 py-3 group-hover:scale-105 transition-all duration-700"
        >
          <span
            class="text-green-300 text-sm font-medium tracking-[0.3em] uppercase"
          >
            The Wild Heart of India
          </span>
        </div>
      </div>

      <!-- Main headline with sophisticated typography -->
      <h1
        class="font-serif text-7xl md:text-9xl xl:text-10xl text-white leading-[0.9] mb-8 relative"
      >
        <span
          class="block transform hover:scale-105 transition-transform duration-700"
          >This is</span
        >
        <span
          class="block text-transparent bg-gradient-to-r from-amber-300 via-amber-400 to-yellow-400 bg-clip-text transform hover:scale-105 transition-transform duration-700 delay-100"
        >
          Tadoba
        </span>
        <div
          class="absolute -top-4 -right-8 w-32 h-32 bg-amber-400/10 rounded-full blur-3xl animate-pulse"
        >
        </div>
      </h1>

      <!-- Sophisticated subtitle with staggered animation -->
      <div class="max-w-5xl mx-auto mb-16">
        <p
          class="text-2xl md:text-4xl xl:text-3xl text-gray-200 font-semibold leading-[1.3] mb-6"
        >
          <span class="inline-block animate-fade-in-up delay-300"
            >Maharashtra's greatest wilderness.</span
          >
          <span class="inline-block animate-fade-in-up delay-500"
            >Home to tigers,</span
          >
          <span class="inline-block animate-fade-in-up delay-700"
            >ancient forests,</span
          >
          <span class="inline-block animate-fade-in-up delay-900"
            >and experiences that will</span
          >
          <span
            class="inline-block text-amber-300 animate-fade-in-up delay-1100"
            >change you forever.</span
          >
        </p>
      </div>
    </div>

    <!-- Floating elements -->
    <div
      class="hidden lg:block absolute bottom-20 left-10 bg-gray-800/30 backdrop-blur-md rounded-2xl p-6 border border-gray-700/50 floating-card"
    >
      <div class="text-amber-400 text-sm font-medium mb-2">Tiger Sightings</div>
      <div class="text-white text-2xl font-bold">90+ Tigers</div>
      <div class="text-gray-400 text-xs">In 625 sq km</div>
    </div>

    <div
      class="hidden lg:block absolute bottom-32 right-10 bg-gray-800/30 backdrop-blur-md rounded-2xl p-6 border border-gray-700/50 floating-card delay-animation"
    >
      <div class="text-green-400 text-sm font-medium mb-2">Forest Age</div>
      <div class="text-white text-2xl font-bold">200+ Years</div>
      <div class="text-gray-400 text-xs">Ancient teak trees</div>
    </div>
  </section>
  <!-- Enhanced Breadcrumb Navigation -->
  <nav
    class="py-6 bg-gray-900/50 border-b border-gray-800"
    aria-label="Breadcrumb"
  >
    <div class="max-w-7xl mx-auto px-6">
      <ol class="flex items-center justify-center space-x-2 text-sm">
        <li>
          <a
            href="/"
            class="text-gray-400 hover:text-amber-400 transition-colors duration-300 flex items-center focus:outline-none focus:ring-2 focus:ring-amber-400/50 rounded"
          >
            <svg
              class="w-4 h-4 mr-1"
              fill="currentColor"
              viewBox="0 0 20 20"
              aria-hidden="true"
            >
              <path
                d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
              ></path>
            </svg>
            Home
          </a>
        </li>
        <li aria-hidden="true">
          <svg
            class="w-4 h-4 text-gray-600"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
              clip-rule="evenodd"></path>
          </svg>
        </li>
        <li aria-current="page">
          <span class="text-amber-400 font-medium">About Tadoba</span>
        </li>
      </ol>
    </div>
  </nav>

  <!-- The Ancient Story -->
  <section id="the-story" class="py-32 bg-gray-900/50">
    <div class="max-w-6xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
          <h2 class="font-serif text-4xl text-white mb-6">The Ancient Story</h2>
          <div
            class="prose prose-gray prose-lg max-w-none text-gray-300 space-y-6"
          >
            <p class="text-xl leading-relaxed">
              In the beginning, there was Taru. Not the park, not the
              reserve—just a Gond chieftain whose legend would outlive empires.
              When he fell to a tiger in mythic combat, his people didn't mourn;
              they deified him. Today, pilgrims still journey to his lakeside
              shrine, where incense mingles with forest air and ancient
              reverence shapes modern conservation.
            </p>

            <figure class="my-8">
              <img
                src="https://res.cloudinary.com/dfa5hhzej/image/upload/f_avif,q_45,w_725,c_scale/traditional-gond-art-deer-trees-against-colorful-background-tadoba_zjstno.webp"
                alt="Traditional Gond tribal artwork depicting forest spirits and wildlife"
                class="w-full aspect-video object-cover rounded-xl"
                loading="lazy"
              />

              <!-- Target: 1200px wide, WebP, <120KB -->
              <figcaption class="text-sm text-gray-500 mt-2 text-center">
                Gond tribal art reflects centuries of forest wisdom
              </figcaption>
            </figure>

            <p>
              The British recognised something special here, declaring it a
              Reserved Forest in 1879. But true protection came with
              independence—National Park status in 1955, expanded with the
              Andhari Wildlife Sanctuary merger in 1995. Today's Tadoba Andhari
              Tiger Reserve spans 1,727 km² of Southern Tropical Dry Deciduous
              Forest, where 625 km² of core habitat nurtures one of India's most
              successful tiger populations.
            </p>

            <h3 class="text-2xl font-semibold text-amber-400 mt-8 mb-4">
              The Gond Villages Today
            </h3>
            <p>
              Five Gond villages remain within the buffer zones—<strong
                >Moharli</strong
              >, <strong>Kolsa</strong>, <strong>Jamni</strong>, <strong
                >Kanha</strong
              >, and <strong>Navegaon</strong>—their inhabitants now partners in
              conservation. Traditional honey gatherers have become naturalist
              guides, and ancient tracking skills serve modern wildlife
              research. It's a living example of how indigenous knowledge
              enhances scientific conservation.
            </p>
          </div>
        </div>

        <div class="space-y-6">
          <div class="bg-gray-800/50 rounded-2xl p-6 border border-gray-700">
            <h4 class="font-semibold text-emerald-400 mb-3">
              Conservation Timeline
            </h4>
            <ul class="space-y-2 text-sm text-gray-300">
              <li><strong>1879:</strong> Reserved Forest status</li>
              <li><strong>1955:</strong> National Park declared</li>
              <li><strong>1986:</strong> Andhari Sanctuary created</li>
              <li><strong>1995:</strong> Tiger Reserve formed</li>
              <li><strong>2012:</strong> Core-buffer system refined</li>
            </ul>
          </div>

          <div class="bg-gray-800/50 rounded-2xl p-6 border border-gray-700">
            <h4 class="font-semibold text-amber-400 mb-3">By the Numbers</h4>
            <ul class="space-y-2 text-sm text-gray-300">
              <li><strong>Total Area:</strong> 1,727 km²</li>
              <li><strong>Core Zone:</strong> 625 km²</li>
              <li><strong>Tiger Population:</strong> 97 (2023 census)</li>
              <li><strong>Bird Species:</strong> 280+</li>
              <li><strong>Mammal Species:</strong> 60+</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- The Famous Tigers -->
  <section class="py-32">
    <div class="max-w-6xl mx-auto px-6">
      <h2 class="font-serif text-4xl text-white text-center mb-12">
        The Legendary Residents
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        <article
          class="bg-gray-800/30 rounded-2xl p-6 border border-orange-500/30"
        >
          <h3 class="text-xl font-semibold text-orange-400 mb-3">
            Maya (T-16)
          </h3>
          <p class="text-gray-300 text-sm mb-4">
            The undisputed queen of Pandharpauni Lake territory. Maya's domain
            includes some of Tadoba's most scenic waterholes, making her one of
            the most photographed tigers in India.
          </p>
          <div class="text-xs text-orange-300">
            <div><strong>Territory:</strong> Pandharpauni-Kolara circuit</div>
            <div>
              <strong>Known for:</strong> Calm demeanor, lakeside hunting
            </div>
          </div>
        </article>

        <article
          class="bg-gray-800/30 rounded-2xl p-6 border border-purple-500/30"
        >
          <h3 class="text-xl font-semibold text-purple-400 mb-3">
            Choti Tara (T-83)
          </h3>
          <p class="text-gray-300 text-sm mb-4">
            Named "Little Star" for the distinctive mark on her forehead. This
            young female has established herself in the Moharli sector, often
            seen with cubs near the main safari routes.
          </p>
          <div class="text-xs text-purple-300">
            <div><strong>Territory:</strong> Moharli-Khutwanda corridor</div>
            <div>
              <strong>Known for:</strong> Successful breeding, road crossings
            </div>
          </div>
        </article>

        <article
          class="bg-gray-800/30 rounded-2xl p-6 border border-green-500/30"
        >
          <h3 class="text-xl font-semibold text-green-400 mb-3">
            Matkasur (T-41)
          </h3>
          <p class="text-gray-300 text-sm mb-4">
            The "Broken-pot" tiger, named for his distinctive facial markings. A
            dominant male whose territory spans multiple zones, making
            encounters unpredictable and exciting.
          </p>
          <div class="text-xs text-green-300">
            <div><strong>Territory:</strong> Multi-zone roamer</div>
            <div>
              <strong>Known for:</strong> Large size, territorial disputes
            </div>
          </div>
        </article>
      </div>

      <figure class="relative">
        <img
          src="https://res.cloudinary.com/dfa5hhzej/image/upload/f_avif,q_35,w_1000,c_scale/bengal-tiger-tadoba_pqmech.jpg"
          alt="A Bengal tiger prominently posing in Tadoba's core territory"
          class="w-full aspect-[16/9] object-cover rounded-2xl"
          loading="lazy"
        />
        <figcaption class="text-sm text-gray-500 mt-2 text-center">
          Bengal tigers like Maya have made Tadoba famous worldwide
        </figcaption>
      </figure>
    </div>
  </section>

  <!-- The Forest Ecosystem -->
  <section class="py-32 bg-gray-900/50">
    <div class="max-w-6xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
        <div>
          <h2 class="font-serif text-4xl text-white mb-6">The Living Forest</h2>
          <div class="prose prose-gray prose-lg max-w-none text-gray-300">
            <p>
              Tadoba's Southern Tropical Dry Deciduous Forest is an intricate
              world built on Teak ("Tectona grandis"). These giants, some over
              200 years old, create a multi-layered canopy system that defines
              the entire ecosystem.
            </p>

            <h4 class="text-lg font-semibold text-emerald-400 mt-6 mb-3">
              Forest Architecture
            </h4>
            <ul class="space-y-2 text-sm">
              <li>
                <strong>Canopy Layer:</strong> Teak, Ain ("Terminalia tomentosa"),
                Bija ("Pterocarpus marsupium")
              </li>
              <li>
                <strong>Under-canopy:</strong> Dhok ("Anogeissus latifolia"), Haldu
                ("Haldina cordifolia")
              </li>
              <li>
                <strong>Understory:</strong> Dense bamboo ("Dendrocalamus strictus")
                groves
              </li>
              <li>
                <strong>Ground Layer:</strong> Seasonal grasses and forest floor
                herbs
              </li>
            </ul>

            <p class="mt-6">
              This layered system supports an incredible diversity of life. The
              bamboo understory alone harbors over 60% of the forest's mammal
              species, from tiny shrews to massive gaur.
            </p>
          </div>
        </div>

        <div class="space-y-6">
          <figure>
            <img
              src="https://res.cloudinary.com/dfa5hhzej/image/upload/f_avif,q_50,w_528,h_528,c_crop/bamboo-and-teak-tadoba_rvckkl.jpg"
              alt="Dense bamboo groves creating cathedral-like spaces in Tadoba forest"
              class="w-full aspect-square object-cover rounded-2xl"
              loading="lazy"
            />

            <!-- Target: 1000px wide, WebP, <100KB -->
          </figure>

          <div class="bg-gray-800/50 rounded-2xl p-6 border border-gray-700">
            <h4 class="font-semibold text-cyan-400 mb-4">
              Seasonal Transformations
            </h4>
            <div class="space-y-3 text-sm text-gray-300">
              <div>
                <strong class="text-white">Pre-monsoon (Apr-May):</strong> Bare teak
                branches, visible undergrowth, concentrated wildlife at water sources
              </div>
              <div>
                <strong class="text-white">Monsoon (Jun-Sep):</strong> Explosive
                green growth, dense canopy, dispersed wildlife
              </div>
              <div>
                <strong class="text-white">Post-monsoon (Oct-Mar):</strong> Golden
                grasslands, clear sight lines, active wildlife
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Zones and Access -->
  <section class="py-32">
    <div class="max-w-6xl mx-auto px-6">
      <h2 class="font-serif text-4xl text-white text-center mb-4">
        Zones, Gates & Geography
      </h2>
      <p class="text-center text-gray-400 mb-12 max-w-3xl mx-auto">
        Understanding Tadoba's layout is crucial for planning meaningful
        safaris. Each zone offers different experiences, from classic core
        wilderness to community-integrated buffer areas.
      </p>

      <!-- Map Section - Replace the existing map div -->
      <div
        class="bg-slate-800/30 rounded-2xl p-6 border border-slate-700 mb-12"
      >
        <div
          id="tadoba-map"
          class="w-full h-96 rounded-xl overflow-hidden bg-slate-900 border border-slate-600"
        >
        </div>
        <p class="text-xs text-slate-500 mt-6 text-center">
          Interactive map showing the exact central location of Limban Resort
        </p>
      </div>

      <!-- Zone Details -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-2xl font-semibold text-emerald-400 mb-4">
            Core Zones
          </h3>
          <p class="text-gray-300 mb-6">
            The protected heart of the reserve with minimal human presence and
            maximum wildlife density.
          </p>

          <div class="space-y-4">
            <div
              class="bg-gray-800/30 rounded-xl p-4 border-l-4 border-emerald-400"
            >
              <h4 class="font-semibold text-white">Khutwanda Gate</h4>
              <p class="text-sm text-gray-300 mt-1">
                15 minutes from Limban. Maya's primary territory with scenic
                lake circuits.
              </p>
            </div>
            <div
              class="bg-gray-800/30 rounded-xl p-4 border-l-4 border-emerald-400"
            >
              <h4 class="font-semibold text-white">Moharli Gate</h4>
              <p class="text-sm text-gray-300 mt-1">
                25 minutes from Limban. Most popular gate with excellent
                infrastructure and consistent sightings.
              </p>
            </div>
            <div
              class="bg-gray-800/30 rounded-xl p-4 border-l-4 border-emerald-400"
            >
              <h4 class="font-semibold text-white">Kolara Gate</h4>
              <p class="text-sm text-gray-300 mt-1">
                70 minutes from Limban. Remote and pristine, often less crowded.
              </p>
            </div>
          </div>
        </div>

        <div>
          <h3 class="text-2xl font-semibold text-amber-400 mb-4">
