---
import Layout from "../layouts/Layout.astro";
import { AstroSEO } from "astro-seo-plugin";
import GalleryGrid from "../components/GalleryGrid.astro";
import LoadMoreGallery from "../components/LoadMoreGallery.astro";
import { fetchVibePageData } from "../api.js"; // Reuse existing wildlife data

// Ultra-reliable API fetching with retry logic
async function fetchWithRetry(fetchFn, retries = 2) {
  for (let i = 0; i < retries; i++) {
    try {
      return await fetchFn();
    } catch (error) {
      if (i === retries - 1) throw error;
      await new Promise((resolve) => setTimeout(resolve, 1000));
    }
  }
}

// Bulletproof URL validation
function validateImageUrl(url) {
  if (!url || typeof url !== "string") return null;
  try {
    const parsed = new URL(url);
    return parsed.protocol === "https:" ? url : null;
  } catch {
    return null;
  }
}

// Fetch wildlife data
let vibeData = null;
try {
  vibeData = await fetchWithRetry(() => fetchVibePageData());
} catch (err) {
  console.error("Failed to load wildlife data:", err);
  vibeData = { wildlifeImages: [] };
}

// Standardized wildlife image processing
const wildlifeImages = (vibeData.wildlifeImages || [])
  .filter((item) => validateImageUrl(item?.image?.url))
  .map((item, index) => {
    const image = item.image;
    return {
      src: validateImageUrl(image.grid) || validateImageUrl(image.url) || "",
      srcset: `${validateImageUrl(image.grid) || ""} 300w, ${validateImageUrl(image.thumb400) || ""} 400w`,
      placeholder:
        validateImageUrl(image.placeholder) ||
        validateImageUrl(image.url) ||
        "",
      large: validateImageUrl(image.large) || validateImageUrl(image.url) || "",
      alt: (item.alt || "").trim() || `Tadoba wildlife encounter ${index + 1}`,
      width: parseInt(image.width) || 300,
      height: parseInt(image.height) || 300,
    };
  });

// Split for load more functionality
const initialWildlifeImages = wildlifeImages.slice(0, 12);
const remainingWildlifeImages = wildlifeImages.slice(12);

// Testimonials data - FIXED!
const testimonials = [
  {
    name: "Dr. Priya Sharma",
    image: "/img/testimonials/priya-wildlife.jpg",
    quote: "Tadoba changed how I see conservation. Limban made me part of it.",
    review:
      "The morning we spotted the legendary Maya tigress with her cubs just 25 minutes from our Limban suite - that was the moment wildlife photography became my calling.",
    location: "Mumbai, India",
    experience: "Wildlife Photography Retreat",
    stayDate: "April 2025",
  },
  {
    name: "Arjun Patel",
    image: "/img/testimonials/arjun-safari.jpg",
    quote:
      "90 tigers live here, but finding one still feels like discovering treasure.",
    review:
      "Our Limban guide knew exactly where Maya's territory overlapped with the morning light. Three safaris, two tiger sightings, countless memories that will last forever.",
    location: "Bangalore, India",
    experience: "Tiger Safari Adventure",
    stayDate: "March 2025",
  },
  {
    name: "Meera Krishnan",
    image: "/img/testimonials/meera-conservation.jpg",
    quote:
      "Staying at Limban taught me that luxury and conservation can be the same thing.",
    review:
      "Every morning safari felt like contributing to something bigger. When you see a sloth bear with cubs thriving in protected habitat, you understand why Tadoba matters.",
    location: "Chennai, India",
    experience: "Eco-Conservation Experience",
    stayDate: "February 2025",
  },
];

const heroImage =
  wildlifeImages.find((img) => img.src)?.src || "/img/tadoba-hero.jpg";
