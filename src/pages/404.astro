---
// src/pages/404.astro
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { AstroSEO } from "astro-seo-plugin";

const requestedPath = Astro.url.pathname;
---

<Layout>
  <AstroSEO
    slot="head"
    title="Page Not Found | Limban Resort Tadoba"
    description="The path you're seeking has vanished into the wilderness. Return to Limban Resort to discover luxury safari experiences at Tadoba Tiger Reserve."
    robots={{
      noindex: true,
      nofollow: true,
    }}
  />

  <div
    class="min-h-screen flex items-center justify-center selection:bg-gray-700 py-32"
  >
    <div class="max-w-5xl mx-auto px-6 text-center">
      <!-- Subtle decorative element -->
      <div class="mb-16 flex justify-center">
        <Icon name="ph:paw-print" class="w-32 h-32 text-amber-400" />
      </div>

      <!-- Error Message -->
      <div class="space-y-8 mb-20">
        <div
          class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-8"
        >
          <span
            class="text-amber-400 text-sm font-medium tracking-widest uppercase"
            >Page Not Found</span
          >
        </div>

        <h1
          class="font-serif italic text-6xl md:text-8xl text-white mb-6 leading-none"
        >
          Lost in the Wild
        </h1>

        <p
          class="text-xl md:text-2xl text-gray-300 font-light leading-relaxed max-w-2xl mx-auto"
        >
          The trail you're following has vanished into the forest. Sometimes the
          best paths lead us somewhere unexpected.
        </p>

        {
          requestedPath && requestedPath !== "/" && (
            <p class="text-sm text-gray-500 font-mono pt-4">
              Error Reported: {requestedPath}
            </p>
          )
        }
      </div>

      <!-- Primary Actions -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-36">
        <a href="/" class="cta-outlined">Limban Home</a>
        <a href="/rooms" class="cta-filled">Reserve Your Stay</a>
      </div>

      <!-- Navigation Grid -->
      <div class="border-t border-gray-800 py-20">
        <div
          class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-12"
        >
          <span
            class="text-amber-400 text-sm font-medium tracking-widest uppercase"
            >Find Your Way</span
          >
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          <!-- The Resort -->
          <div class="group">
            <div
              class="bg-gradient-to-br from-gray-800/30 to-gray-900/50 backdrop-blur-xl border border-gray-700 rounded-3xl p-8 hover:border-amber-400/30 hover:-translate-y-2 transition-all duration-500 h-full"
            >
              <h2
                class="text-amber-400 font-medium mb-6 text-sm uppercase tracking-widest"
              >
                The Resort
              </h2>
              <nav class="space-y-4">
                <a
                  href="/vibe"
                  title="Discover the unique atmosphere at Limban Resort"
                  class="block text-gray-300 hover:text-white transition-colors duration-300 text-left group/link"
                >
                  <span class="inline-flex items-center gap-2">
                    <Icon
                      name="ph:sparkle"
                      class="w-4 h-4 opacity-50 group-hover/link:opacity-100 transition-opacity"
                    />
                    The Limban Vibe
                  </span>
                </a>
                <a
                  href="/guest-gallery"
                  title="See photos submitted by guests from over 20 countries"
                  class="block text-gray-300 hover:text-white transition-colors duration-300 text-left group/link"
                >
                  <span class="inline-flex items-center gap-2">
                    <Icon
                      name="ph:images"
                      class="w-4 h-4 opacity-50 group-hover/link:opacity-100 transition-opacity"
                    />
                    Guest Gallery
                  </span>
                </a>
                <a
                  href="/tadoba"
                  title="Learn about Tadoba National Park and conservation"
                  class="block text-gray-300 hover:text-white transition-colors duration-300 text-left group/link"
                >
                  <span class="inline-flex items-center gap-2">
                    <Icon
                      name="ph:tree-evergreen"
                      class="w-4 h-4 opacity-50 group-hover/link:opacity-100 transition-opacity"
                    />
                    Tadoba National Park
                  </span>
                </a>
              </nav>
            </div>
          </div>

          <!-- The Experiences -->
          <div class="group">
            <div
              class="bg-gradient-to-br from-gray-800/30 to-gray-900/50 backdrop-blur-xl border border-gray-700 rounded-3xl p-8 hover:border-amber-400/30 hover:-translate-y-2 transition-all duration-500 h-full"
            >
              <h2
                class="text-amber-400 font-medium mb-6 text-sm uppercase tracking-widest"
              >
                The Experiences
              </h2>
              <nav class="space-y-4">
                <a
                  href="/rooms"
                  title="View luxury safari accommodations"
                  class="block text-gray-300 hover:text-white transition-colors duration-300 text-left group/link"
                >
                  <span class="inline-flex items-center gap-2">
                    <Icon
                      name="ph:bed"
                      class="w-4 h-4 opacity-50 group-hover/link:opacity-100 transition-opacity"
                    />
                    Rooms & Suites
                  </span>
                </a>
                <a
                  href="/dining"
                  title="Explore dining experiences"
                  class="block text-gray-300 hover:text-white transition-colors duration-300 text-left group/link"
                >
                  <span class="inline-flex items-center gap-2">
                    <Icon
                      name="ph:fork-knife"
                      class="w-4 h-4 opacity-50 group-hover/link:opacity-100 transition-opacity"
                    />
                    Dining Experiences
                  </span>
                </a>
                <a
                  href="/safaris"
                  title="Explore safari adventures"
                  class="block text-gray-300 hover:text-white transition-colors duration-300 text-left group/link"
                >
                  <span class="inline-flex items-center gap-2">
                    <Icon
                      name="ph:binoculars"
                      class="w-4 h-4 opacity-50 group-hover/link:opacity-100 transition-opacity"
                    />
                    Safari Adventures
                  </span>
                </a>
                <a
                  href="/wellness"
                  title="Discover wellness experiences"
                  class="block text-gray-300 hover:text-white transition-colors duration-300 text-left group/link"
                >
                  <span class="inline-flex items-center gap-2">
                    <Icon
                      name="ph:leaf"
                      class="w-4 h-4 opacity-50 group-hover/link:opacity-100 transition-opacity"
                    />
                    Wellness
                  </span>
                </a>
                <a
                  href="/activities"
                  title="Explore resort activities"
                  class="block text-gray-300 hover:text-white transition-colors duration-300 text-left group/link"
                >
                  <span class="inline-flex items-center gap-2">
                    <Icon
                      name="ph:compass"
                      class="w-4 h-4 opacity-50 group-hover/link:opacity-100 transition-opacity"
                    />
                    Activities
                  </span>
                </a>
                <a
                  href="/corporate-events"
                  title="View corporate event options"
                  class="block text-gray-300 hover:text-white transition-colors duration-300 text-left group/link"
                >
                  <span class="inline-flex items-center gap-2">
                    <Icon
                      name="ph:users-three"
                      class="w-4 h-4 opacity-50 group-hover/link:opacity-100 transition-opacity"
                    />
                    Corporate Events
                  </span>
                </a>
              </nav>
            </div>
          </div>

          <!-- Connect -->
          <div class="group">
            <div
              class="bg-gradient-to-br from-gray-800/30 to-gray-900/50 backdrop-blur-xl border border-gray-700 rounded-3xl p-8 hover:border-amber-400/30 hover:-translate-y-2 transition-all duration-500 h-full"
            >
              <h2
                class="text-amber-400 font-medium mb-6 text-sm uppercase tracking-widest"
              >
                Connect
              </h2>
              <nav class="space-y-4">
                <a
                  href="/about"
                  title="Learn about Limban Resort's story and vision"
                  class="block text-gray-300 hover:text-white transition-colors duration-300 text-left group/link"
                >
                  <span class="inline-flex items-center gap-2">
                    <Icon
                      name="ph:heart"
                      class="w-4 h-4 opacity-50 group-hover/link:opacity-100 transition-opacity"
                    />
                    About Us
                  </span>
                </a>
                <a
                  href="/contact"
                  title="Contact Limban Resort for inquiries and bookings"
                  class="block text-gray-300 hover:text-white transition-colors duration-300 text-left group/link"
                >
                  <span class="inline-flex items-center gap-2">
                    <Icon
                      name="ph:envelope-simple"
                      class="w-4 h-4 opacity-50 group-hover/link:opacity-100 transition-opacity"
                    />
                    Contact Us
                  </span>
                </a>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    /* Performance optimizations */
    .group {
      will-change: transform;
    }

    .transition-transform,
    .transition-all {
      will-change: transform;
    }

    /* Respect user motion preferences */
    @media (prefers-reduced-motion: reduce) {
      .transition-all,
      .transition-transform,
      .transition-colors,
      .hover\:scale-110,
      .hover\:-translate-y-1,
      .hover\:-translate-y-2 {
        transition: none !important;
        transform: none !important;
        animation: none !important;
      }
    }
  </style>
</Layout>
