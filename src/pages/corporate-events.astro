  "https://ap-south-1.graphassets.com/cmek3o6f00dcb07o59sno2s0e/cmf0pq9jbactk07pc8nlokgkz";

function validateImageUrl(url) {
  if (!url || typeof url !== "string") return null;
  try {
    const parsed = new URL(url);
    return parsed.protocol === "https:" ? url : null;
  } catch {
    return null;
  }
}

const validatedHeroImage =  validateImageUrl(heroImage);

