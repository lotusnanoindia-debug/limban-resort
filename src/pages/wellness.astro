---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
import { AstroSEO } from "astro-seo-plugin";
import { Icon } from "astro-icon/components";
import imageService from "../utils/ImageService.js";
import ContactSection from "../components/ContactSection.astro";
import { fetchWellnessOfferings } from "../api.js";

// Helper for Cloudinary JPG (schema)
const toCloudinaryJpg = (url: string) => {
  if (!url) return "";
  return `https://res.cloudinary.com/dfa5hhzej/image/fetch/w_1200,h_675,c_fill,q_85,f_jpg/${url}`;
};

// Hero image
const heroImage =
  "https://ap-south-1.graphassets.com/cmek3o6f00dcb07o59sno2s0e/cmg3bmkvz1dew07pmvga1m878";
const heroImageSchema = toCloudinaryJpg(heroImage);

let wellnessOfferings = [];
try {
  wellnessOfferings = (await fetchWellnessOfferings()) || [];
} catch (error) {
  console.error("Wellness data fetch error:", error);
}

// Group offerings by category
const spaOfferings = wellnessOfferings.filter(
  (w) => w.category === "spaTreatment",
);
const wellnessActivities = wellnessOfferings.filter(
  (w) => w.category === "wellnessActivity",
);
const combinedPackages = wellnessOfferings.filter(
  (w) => w.category === "combinedPackage",
);

// Hero image processing
const heroImageUrl = imageService.processImage(
  { url: heroImage, alt: "Wellness sanctuary at Limban Resort" },
  "heroDesktop",
  { quality: 70 },
);

// Wellness schema
const wellnessSchema = {
  "@context": "https://schema.org",
  "@type": "HealthAndBeautyBusiness",
  "@id": "https://limban.com/wellness#spa",
  name: "Limban Resort Wellness & Spa",
  description:
    "Luxury spa treatments, mindful wellness activities, and transformative retreat experiences in Tadoba National Park. Indigenous botanicals, certified therapists, and forest-inspired healing.",
  url: "https://limban.com/wellness",
  image: [heroImageSchema],
  address: {
    "@type": "PostalAddress",
    streetAddress: "Survey No. 306, Village Mudholi, Taluka Bhadravati",
    addressLocality: "Tadoba",
    addressRegion: "Maharashtra",
    postalCode: "442906",
    addressCountry: "IN",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: 20.25602486093492,
    longitude: 79.2847888101826,
  },
  telephone: "+91-90226-80451",
  priceRange: "₹₹₹",
  openingHours: "Mo-Su 08:00-20:00",
  amenityFeature: [
    {
      "@type": "LocationFeatureSpecification",
      name: "Spa Treatments",
      value: true,
    },
    {
      "@type": "LocationFeatureSpecification",
      name: "Yoga & Meditation",
      value: true,
    },
    {
      "@type": "LocationFeatureSpecification",
      name: "Forest Therapy",
      value: true,
    },
    {
      "@type": "LocationFeatureSpecification",
      name: "Wellness Packages",
      value: true,
    },
  ],
  makesOffer: [
    ...spaOfferings.slice(0, 3).map((treatment, index) => ({
      "@type": "Offer",
      itemOffered: {
        "@type": "Service",
        name: treatment.title,
        description: treatment.shortDescription,
        provider: {
          "@type": "HealthAndBeautyBusiness",
          "@id": "https://limban.com/wellness#spa",
        },
      },
    })),
    ...wellnessActivities.slice(0, 2).map((activity) => ({
      "@type": "Offer",
      itemOffered: {
        "@type": "Service",
        name: activity.title,
        description: activity.shortDescription,
        provider: {
          "@type": "HealthAndBeautyBusiness",
          "@id": "https://limban.com/wellness#spa",
        },
      },
    })),
  ],
  partOf: {
    "@type": "Hotel",
    "@id": "https://limban.com/#hotel",
    name: "Limban Resort",
  },
};
---

<link rel="preload" as="image" href={heroImageUrl} fetchpriority="high" />

<Layout>
  <AstroSEO
    slot="head"
    title="Wellness & Spa | Rejuvenation in the Heart of Tadoba - Limban Resort"
    description="Discover profound wellness in nature's embrace. Luxury spa treatments, mindful activities, and transformative retreat experiences designed around Tadoba's healing rhythms."
    openGraph={{
      title:
        "Wellness & Spa | Rejuvenation in the Heart of Tadoba - Limban Resort",
      description:
        "Discover profound wellness in nature's embrace. Luxury spa treatments, mindful activities, and transformative retreat experiences designed around Tadoba's healing rhythms.",
      image: heroImageSchema,
      type: "website",
      url: "https://limban.com/wellness",
    }}
    jsonLd={wellnessSchema}
  />

  <div class="bg-gray-950 text-gray-100 selection:bg-gray-700">
    <!-- Hero Section -->
    <section
      class="relative min-h-screen flex items-center justify-center overflow-hidden"
    >
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-black/60 z-10"></div>
        <img
          src={heroImageUrl}
          alt="Wellness sanctuary in Tadoba's pristine wilderness - Limban Resort"
          class="w-full h-full object-cover scale-105"
          fetchpriority="high"
        />
      </div>
      <div class="relative z-20 text-center max-w-6xl mx-auto px-6">
        <div class="space-y-8">
          <div
            class="inline-block px-6 py-3 bg-gradient-to-r from-emerald-400/10 via-teal-500/10 to-emerald-400/10 backdrop-blur-md border border-emerald-400/30 rounded-full mb-8"
          >
            <span
              class="text-emerald-300 text-sm font-medium tracking-[0.3em] uppercase flex items-center gap-2"
            >
              <Icon name="ph:leaf-bold" class="w-4 h-4" />
              Limban Wellness
            </span>
          </div>
          <h1
            class="font-serif text-6xl md:text-8xl lg:text-9xl text-white leading-[0.9] mb-8"
          >
            <span class="block">Wellness</span>
            <span
              class="block text-transparent bg-gradient-to-r from-emerald-300 via-teal-400 to-cyan-400 bg-clip-text"
            >
              Sanctuary
            </span>
          </h1>
          <p
            class="text-2xl md:text-3xl text-gray-200 font-light leading-relaxed max-w-4xl mx-auto mb-12"
          >
            Where wilderness meets wellness. Discover profound restoration in
            Tadoba's healing embrace through rejuvenating spa treatments and
            mindful forest experiences.
          </p>
        </div>
      </div>
    </section>

    <!-- Breadcrumb Navigation -->
    <nav
      class="py-6 bg-gray-900/50 border-b border-gray-800"
      aria-label="Breadcrumb"
    >
      <div class="max-w-7xl mx-auto px-6">
        <ol class="flex items-center justify-center space-x-2 text-sm">
          <li>
            <a
              href="/"
              title="Return to Limban Resort homepage"
              class="text-gray-400 hover:text-emerald-400 transition-colors duration-300 flex items-center"
            >
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path
                  d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                ></path>
              </svg>
              Home
            </a>
          </li>
          <li>
            <svg
              class="w-4 h-4 text-gray-600"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </li>
          <li>
            <span class="text-amber-400 font-medium">Wellness</span>
          </li>
        </ol>
      </div>
    </nav>

    <!-- Wellness Philosophy -->
    <section class="py-32 bg-gradient-to-b from-gray-900 to-gray-950">
      <div class="max-w-5xl mx-auto px-6 text-center">
        <div
          class="inline-block px-6 py-2 bg-emerald-400/10 border border-emerald-400/30 rounded-full mb-8"
        >
          <span
            class="text-emerald-400 text-sm font-medium tracking-widest uppercase"
            >Our Philosophy</span
          >
        </div>
        <h2 class="font-serif text-5xl md:text-6xl text-white mb-8">
          Nature's <span class="text-emerald-400">Healing Embrace</span>
        </h2>
        <p
          class="text-xl text-gray-300 font-light leading-relaxed mb-12 max-w-4xl mx-auto"
        >
          In Tadoba's ancient forest sanctuary, we've crafted wellness
          experiences that honour both luxury and nature's profound healing
          powers. Each treatment draws from the forest's wisdom, creating
          transformation that could only happen here.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-20">
          <!-- Card 1: Forest Wisdom -->
          <div
            class="group relative bg-gradient-to-br from-gray-800/60 to-gray-900/80 backdrop-blur-xl border border-gray-700/50 rounded-2xl p-8 text-center transition-all duration-300 hover:border-emerald-400/40 hover:-translate-y-2"
          >
            <div
              class="w-16 h-16 bg-gradient-to-br from-emerald-400/20 to-teal-500/20 rounded-full flex items-center justify-center mx-auto mb-6 transition-all duration-300 group-hover:scale-110"
            >
              <Icon name="ph:leaf-bold" class="w-8 h-8 text-emerald-400" />
            </div>
            <h3
              class="text-xl font-semibold text-white mb-4 transition-colors duration-300 group-hover:text-emerald-300"
            >
              Forest Wisdom
            </h3>
            <p
              class="text-gray-400 leading-relaxed group-hover:text-gray-300 transition-colors duration-300"
            >
              Every treatment incorporates indigenous botanicals and ancient
              healing traditions that have flourished in these forests for
              centuries.
            </p>
          </div>
          <!-- Card 2: Mind-Body Balance -->
          <div
            class="group relative bg-gradient-to-br from-gray-800/60 to-gray-900/80 backdrop-blur-xl border border-gray-700/50 rounded-2xl p-8 text-center transition-all duration-300 hover:border-emerald-400/40 hover:-translate-y-2"
          >
            <div
              class="w-16 h-16 bg-gradient-to-br from-emerald-400/20 to-teal-500/20 rounded-full flex items-center justify-center mx-auto mb-6 transition-all duration-300 group-hover:scale-110"
            >
              <Icon name="ph:heart-bold" class="w-8 h-8 text-emerald-400" />
            </div>
            <h3
              class="text-xl font-semibold text-white mb-4 transition-colors duration-300 group-hover:text-emerald-300"
            >
              Mind-Body Balance
            </h3>
            <p
              class="text-gray-400 leading-relaxed group-hover:text-gray-300 transition-colors duration-300"
            >
              Holistic experiences that restore harmony between adventure and
              relaxation, excitement and serenity.
            </p>
          </div>
          <!-- Card 3: Transformative Luxury -->
          <div
            class="group relative bg-gradient-to-br from-gray-800/60 to-gray-900/80 backdrop-blur-xl border border-gray-700/50 rounded-2xl p-8 text-center transition-all duration-300 hover:border-emerald-400/40 hover:-translate-y-2"
          >
            <div
              class="w-16 h-16 bg-gradient-to-br from-emerald-400/20 to-teal-500/20 rounded-full flex items-center justify-center mx-auto mb-6 transition-all duration-300 group-hover:scale-110"
            >
              <Icon name="ph:sparkle-bold" class="w-8 h-8 text-emerald-400" />
            </div>
            <h3
              class="text-xl font-semibold text-white mb-4 transition-colors duration-300 group-hover:text-emerald-300"
            >
              Transformative Luxury
            </h3>
            <p
              class="text-gray-400 leading-relaxed group-hover:text-gray-300 transition-colors duration-300"
            >
              Premium wellness experiences that create lasting renewal, designed
              exclusively for discerning travellers.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Spa Treatments Section -->
    {
      spaOfferings.length > 0 && (
        <section
          id="spa-treatments"
          class="py-32 bg-gradient-to-b from-gray-950 to-gray-900"
        >
          <div class="max-w-7xl mx-auto px-6">
            <header class="text-center mb-24">
              <div class="inline-flex items-center gap-3 px-8 py-3 bg-gradient-to-r from-rose-400/10 via-pink-500/10 to-rose-400/10 backdrop-blur-xl border border-rose-400/30 rounded-full mb-10">
                <div class="w-2 h-2 bg-rose-400 rounded-full" />
                <span class="text-rose-400 text-sm font-medium tracking-[0.2em] uppercase">
                  Spa Treatments
                </span>
                <div class="w-2 h-2 bg-rose-400 rounded-full" />
              </div>
              <h2 class="font-serif text-6xl md:text-7xl text-white mb-8 leading-none">
                Luxurious{" "}
                <span class="text-transparent bg-gradient-to-r from-rose-300 via-pink-400 to-rose-400 bg-clip-text">
                  Restoration
                </span>
              </h2>
              <p class="text-2xl text-gray-300 max-w-4xl mx-auto leading-relaxed font-light">
                Surrender to treatments that blend ancient wisdom with
                contemporary luxury, designed to restore between and after your
                wilderness adventures.
              </p>
            </header>

            <div class="space-y-40">
              {spaOfferings.map((treatment, index) => (
                <article
                  key={treatment.id}
                  class={`grid grid-cols-1 lg:grid-cols-2 gap-16 items-center ${index % 2 === 1 ? "lg:grid-flow-col-dense" : ""}`}
                >
                  {/* Image Section */}
                  <div
                    class={`relative group ${index % 2 === 1 ? "lg:col-start-2" : ""}`}
                  >
                    {treatment.image ? (
                      <div class="relative">
                        <div class="absolute -inset-4 bg-gradient-to-r from-rose-400/20 to-pink-500/20 rounded-3xl opacity-0 group-hover:opacity-100 transition-all duration-700 blur-xl" />
                        <div class="relative aspect-[4/5] overflow-hidden rounded-3xl border border-rose-400/20 group-hover:border-rose-400/40 transition-all duration-700">
                          <div class="absolute inset-0 bg-gradient-to-t from-gray-950/70 via-transparent to-gray-950/20 z-10" />
                          <img
                            src={imageService.processImage(
                              treatment.image,
                              "wellness",
                              {},
                            )}
                            alt={`${treatment.title} wellness experience - Limban Resort`}
                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-1000"
                            loading="lazy"
                          />
                          {treatment.isSignature && (
                            <div class="absolute top-4 left-8 bg-rose-700/60 border border-rose-400/30 rounded-full px-6 py-3 z-30">
                              <div class="flex items-center gap-3">
                                <div class="w-2 h-2 bg-rose-400 rounded-full" />
                                <span class="text-white text-sm font-medium uppercase tracking-wider">
                                  Signature
                                </span>
                              </div>
                            </div>
                          )}
                          <div class="absolute bottom-4 left-8 bg-rose-700/60 border border-rose-400/30 rounded-full px-6 py-3 z-30">
                            <div class="flex items-center gap-3">
                              <div class="w-2 h-2 bg-rose-400 rounded-full" />
                              <span class="text-white text-sm font-medium uppercase tracking-wider">
                                {treatment.duration}
                              </span>
                            </div>
                          </div>
                        </div>
                      </div>
                    ) : (
                      <div class="relative aspect-[4/5] overflow-hidden rounded-3xl border border-rose-400/20 group-hover:border-rose-400/40 transition-all duration-700 bg-gradient-to-br from-rose-900/20 to-pink-900/20">
                        <div class="absolute inset-0 bg-gradient-to-t from-gray-950/70 via-transparent to-gray-950/20 z-10" />
                        <div class="flex items-center justify-center h-full">
                          <div class="text-center space-y-4">
                            <Icon
                              name="ph:sparkle"
                              class="w-16 h-16 text-rose-400/60 mx-auto"
                            />
                            <p class="text-rose-400/60 text-sm uppercase tracking-wider">
                              Image Coming Soon
                            </p>
                          </div>
                        </div>
                      </div>
                    )}
                  </div>

                  {/* Content Section */}
                  <div
                    class={`space-y-8 ${index % 2 === 1 ? "lg:col-start-1" : ""}`}
                  >
                    <header class="space-y-6">
                      <div class="flex items-center gap-4">
                        <div class="w-16 h-px bg-gradient-to-r from-rose-400 to-transparent" />
                        <span class="text-rose-400/60 text-sm uppercase tracking-[0.3em] font-medium">
                          Experience {String(index + 1).padStart(2, "0")}
                        </span>
                      </div>
                      <h3 class="font-serif text-5xl md:text-6xl text-white leading-none hover:text-rose-400 transition-colors duration-500">
                        {treatment.title}
                      </h3>
                      <p class="text-2xl text-transparent bg-gradient-to-r from-rose-300 to-pink-400 bg-clip-text font-medium leading-relaxed">
                        {treatment.shortDescription}
                      </p>
                    </header>

                    {/* Smart Text with Read More */}
                    <div class="space-y-6">
                      <div
                        class={`treatment-text-${index} text-sm text-gray-300 leading-relaxed space-y-4`}
                      >
                        {(() => {
                          const paragraphs = treatment.fullDescription
                            .split("\n")
                            .filter((p) => p.trim());
                          const previewParagraphs = paragraphs.slice(0, 2);
                          const remainingParagraphs = paragraphs.slice(2);

                          return (
                            <div>
                              {previewParagraphs.map((paragraph, pIndex) => (
                                <p key={pIndex} class="whitespace-pre-line">
                                  {paragraph}
                                </p>
                              ))}

                              {remainingParagraphs.length > 0 && (
                                <div
                                  class={`remaining-content-${index} overflow-hidden transition-all duration-700 ease-out max-h-0 opacity-0`}
                                >
                                  <div class="pt-4 space-y-4">
                                    {remainingParagraphs.map(
                                      (paragraph, pIndex) => (
                                        <p
                                          key={pIndex}
                                          class="whitespace-pre-line"
                                        >
                                          {paragraph}
                                        </p>
                                      ),
                                    )}
                                  </div>
                                </div>
                              )}

                              {remainingParagraphs.length > 0 && (
                                <button
                                  class={`read-more-btn-${index} group inline-flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-rose-400/10 to-pink-500/10 backdrop-blur-sm border border-rose-400/30 rounded-full hover:from-rose-400/20 hover:to-pink-500/20 hover:border-rose-400/50 transition-all duration-300`}
                                  onclick={`toggleTreatmentContent(${index})`}
                                >
                                  <span class="text-rose-400 font-medium text-sm uppercase tracking-wider">
                                    Continue Reading
                                  </span>
                                  <div class="w-6 h-6 rounded-full bg-rose-400/20 flex items-center justify-center group-hover:bg-rose-400/30 transition-colors duration-300">
                                    <Icon
                                      name="ph:caret-down-bold"
                                      class="w-3 h-3 text-rose-400 transform group-hover:rotate-180 transition-transform duration-500"
                                    />
                                  </div>
                                </button>
                              )}
                            </div>
                          );
                        })()}
                      </div>

                      {/* Highlights */}
                      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="bg-gray-900/60 rounded-xl p-6 border border-rose-400/20">
                          <p class="text-sm text-rose-300 mb-3 font-semibold">
                            Treatment Includes:
                          </p>
                          <ul class="text-gray-300 text-sm space-y-2">
                            {treatment.highlights?.map((highlight) => (
                              <li
                                key={highlight}
                                class="flex items-center gap-2"
                              >
                                <div class="w-1.5 h-1.5 bg-rose-400 rounded-full flex-shrink-0" />
                                {highlight}
                              </li>
                            ))}
                          </ul>
                        </div>

                        <div class="bg-gray-900/60 rounded-xl p-6 border border-emerald-400/20">
                          <p class="text-sm text-emerald-300 mb-3 font-semibold">
                            Perfect For:
                          </p>
                          <ul class="text-gray-300 text-sm space-y-2">
                            {treatment.perfectFor?.map((perfect) => (
                              <li key={perfect} class="flex items-center gap-2">
                                <div class="w-1.5 h-1.5 bg-emerald-400 rounded-full flex-shrink-0" />
                                {perfect}
                              </li>
                            ))}
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </div>
        </section>
      )
    }

    <!-- Elegant Section Divider -->
    {
      spaOfferings.length > 0 && wellnessActivities.length > 0 && (
        <div class="py-16 bg-gray-900">
          <div class="max-w-xs mx-auto flex items-center justify-center gap-6">
            <div class="h-px flex-1 bg-gradient-to-l from-gray-700/80 to-transparent" />
            <Icon
              name="ph:flower-lotus-bold"
              class="w-8 h-8 text-emerald-400/60"
            />
            <div class="h-px flex-1 bg-gradient-to-r from-gray-700/80 to-transparent" />
          </div>
        </div>
      )
    }
    <!-- Wellness Activities Section -->
    {
      wellnessActivities.length > 0 && (
        <section
          id="wellness-activities"
          class="py-32 bg-gradient-to-b from-gray-900 to-gray-950"
        >
          <div class="max-w-7xl mx-auto px-6">
            <header class="text-center mb-24">
              <div class="inline-flex items-center gap-3 px-8 py-3 bg-gradient-to-r from-cyan-400/10 via-teal-500/10 to-cyan-400/10 backdrop-blur-xl border border-cyan-400/30 rounded-full mb-10">
                <div class="w-2 h-2 bg-cyan-400 rounded-full" />
                <span class="text-cyan-400 text-sm font-medium tracking-[0.2em] uppercase">
                  Wellness Activities
                </span>
                <div class="w-2 h-2 bg-cyan-400 rounded-full" />
              </div>
              <h2 class="font-serif text-6xl md:text-7xl text-white mb-8 leading-none">
                Mindful{" "}
                <span class="text-transparent bg-gradient-to-r from-cyan-300 via-teal-400 to-cyan-400 bg-clip-text">
                  Connection
                </span>
              </h2>
              <p class="text-2xl text-gray-300 max-w-4xl mx-auto leading-relaxed font-light">
                Embrace activities that deepen your connection with nature's
                rhythms and your inner wisdom.
              </p>
            </header>

            <div class="space-y-40">
              {wellnessActivities.map((activity, index) => (
                <article
                  key={activity.id}
                  class={`grid grid-cols-1 lg:grid-cols-2 gap-16 items-center ${index % 2 === 1 ? "lg:grid-flow-col-dense" : ""}`}
                >
                  {/* Image Section */}
                  <div
                    class={`relative group ${index % 2 === 1 ? "lg:col-start-2" : ""}`}
                  >
                    {activity.image ? (
                      <div class="relative">
                        <div class="absolute -inset-4 bg-gradient-to-r from-cyan-400/20 to-teal-500/20 rounded-3xl opacity-0 group-hover:opacity-100 transition-all duration-700 blur-xl" />
                        <div class="relative aspect-[4/5] overflow-hidden rounded-3xl border border-cyan-400/20 group-hover:border-cyan-400/40 transition-all duration-700">
                          <div class="absolute inset-0 bg-gradient-to-t from-gray-950/70 via-transparent to-gray-950/20 z-10" />
                          <img
                            src={imageService.processImage(
                              activity.image,
                              "wellness",
                              {},
                            )}
                            alt={`${activity.title} wellness activity - Limban Resort`}
                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-1000"
                            loading="lazy"
                          />
