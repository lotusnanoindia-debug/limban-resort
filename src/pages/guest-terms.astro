---
import Layout from "../layouts/Layout.astro";
import { AstroSEO } from "astro-seo-plugin";
import { Icon } from "astro-icon/components";

const pageTitle = "Guest Terms | Limban Resort";
const pageDescription =
  "Everything you need to know about staying with us - explained clearly and without the usual hotel and legal jargon.";
const heroImage =
  "https://res.cloudinary.com/dfa5hhzej/image/fetch/f_avif,q_45,w_1400/https://ap-south-1.graphassets.com/cmek3o6f00dcb07o59sno2s0e/cmfxqunnp0u5j08pogn9dd2si";
---

<Layout title="Guest Friendly Policies & Terms at Limban">
  <AstroSEO
    slot="head"
    title={pageTitle}
    description={pageDescription}
    canonical="https://limban.com/guest-terms"
    openGraph={{
      title: "Guest Policies at Limban",
      description: pageDescription,
      type: "website",
      url: "https://limban.com/guest-terms",
      image: heroImage,
    }}
    jsonLd={{
      "@context": "https://schema.org",
      "@type": "WebPage",
      name: "Guest Terms & Policies | Limban Resort",
      description:
        "Clear and simple guest policies for Limban Resort, covering booking, payments, cancellations, safari rules, and house guidelines.",
      url: "https://limban.com/guest-terms",
      publisher: {
        "@type": "Resort",
        "@id": "https://limban.com/#organization",
      },
      hasPart: [
        {
          "@type": "WebPageElement",
          headline: "How to Book Your Stay",
          url: "https://limban.com/guest-terms#booking",
        },
        {
          "@type": "WebPageElement",
          headline: "Payment & Costs",
          url: "https://limban.com/guest-terms#payment",
        },
        {
          "@type": "WebPageElement",
          headline: "Changes & Refunds",
          url: "https://limban.com/guest-terms#changes",
        },
        {
          "@type": "WebPageElement",
          headline: "Safari Rules & Realities",
          url: "https://limban.com/guest-terms#safari",
        },
      ],
    }}
  />

  <!-- Hero Section -->
  <section
    class="relative min-h-screen flex items-center justify-center overflow-hidden"
  >
    <div class="absolute inset-0">
      <img
        src={heroImage}
        alt="The peaceful wilderness of Tadoba at dawn"
        class="w-full h-full object-cover scale-110"
        loading="eager"
        fetchpriority="high"
      />
      <!-- New solid overlay for better text readability -->
      <div class="absolute inset-0 bg-black/60"></div>
      <div
        class="absolute inset-0 bg-gradient-to-b from-gray-950/40 via-transparent to-gray-950/90"
      >
      </div>
      <div
        class="absolute inset-0 bg-gradient-radial from-transparent via-gray-950/20 to-gray-950/60"
      >
      </div>
    </div>

    <div class="relative z-20 max-w-6xl mx-auto px-6 text-center">
      <div class="inline-block mb-8">
        <div
          class="bg-gradient-to-r from-green-400/20 via-green-500/20 to-emerald-400/20 backdrop-blur-md border border-green-400/40 rounded-full px-8 py-3"
        >
          <span
            class="text-green-300 text-sm font-medium tracking-[0.3em] uppercase"
          >
            Clear & Simple
          </span>
        </div>
      </div>

      <h1
        class="font-serif italic text-7xl md:text-9xl text-white leading-[0.9] mb-12"
      >
        <span class="block">Our Guest</span>
        <span
          class="block text-transparent bg-gradient-to-r from-amber-300 via-amber-400 to-yellow-400 bg-clip-text"
        >
          Terms & Policies
        </span>
      </h1>

      <div class="max-w-5xl mx-auto">
        <p
          class="text-2xl md:text-3xl text-gray-200 font-light leading-[1.4] mb-8"
        >
          Everything you need to know about staying with us — explained clearly,
          simply, and without the usual hotel jargon.
        </p>
      </div>
      <p class="text-xl text-gray-300 font-light">
        No legal scarecrows here. Just transparent conversations about how we do
        things.
      </p>
    </div>
  </section>

  <!-- Quick Navigation -->
  <nav
    class="py-6 bg-gray-900/60 border-b border-gray-800"
    aria-label="Page contents"
  >
    <div class="max-w-6xl mx-auto px-6">
      <div class="flex flex-wrap items-center justify-center gap-6 text-sm">
        <a
          href="#booking"
          class="text-gray-400 hover:text-amber-400 transition-colors duration-300"
          >How to Book</a
        >
        <span class="text-gray-600">•</span>
        <a
          href="#payment"
          class="text-gray-400 hover:text-amber-400 transition-colors duration-300"
          >Payment & Costs</a
        >
        <span class="text-gray-600">•</span>
        <a
          href="#changes"
          class="text-gray-400 hover:text-amber-400 transition-colors duration-300"
          >Changes & Refunds</a
        >
        <span class="text-gray-600">•</span>
        <a
          href="#safari"
          class="text-gray-400 hover:text-amber-400 transition-colors duration-300"
          >Safari Rules</a
        >
        <span class="text-gray-600">•</span>
        <a
          href="#staying"
          class="text-gray-400 hover:text-amber-400 transition-colors duration-300"
          >Staying with Us</a
        >
      </div>
    </div>
  </nav>

  <!-- How to Book -->
  <section id="booking" class="py-24 bg-gray-800">
    <div class="max-w-5xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="font-serif italic text-5xl text-white mb-6">
          How to Book Your Stay
        </h2>
        <p class="text-xl text-gray-300 leading-relaxed">
          We keep things personal. No booking engines or automated systems—just
          real conversations about your Tadoba adventure.
        </p>
      </div>

      <div class="space-y-12">
        <!-- Step 1 -->
        <div
          class="flex items-start space-x-8 bg-gray-900/50 border border-gray-700/50 rounded-2xl p-10"
        >
          <div
            class="bg-amber-400 text-gray-900 w-16 h-16 rounded-full flex items-center justify-center font-bold text-2xl flex-shrink-0"
          >
            1
          </div>
          <div class="flex-1">
            <h3 class="text-white text-2xl font-semibold mb-4">Get in Touch</h3>
            <p class="text-gray-300 text-lg leading-relaxed mb-4">
              Fill up our any form on Limban.com (with instant confirmation of
              receipt instantly to the email you entered), WhatsApp, email, or
              call us with your preferred dates and any special requests. We'll
              check availability and get back to you within 24 hours (usually
              much sooner).
            </p>
            <div
              class="bg-gray-900/60 rounded-xl p-6 border border-gray-700/50"
            >
              <p class="text-amber-400 font-medium mb-2">What we'll ask you:</p>
              <ul class="text-gray-300 space-y-1 text-sm">
                <li>• Your preferred dates and duration</li>
                <li>
                  • Number of guests (children's ages are important for safari
                  permits)
                </li>
                <li>• Any dietary requirements or special occasions</li>
                <li>
                  • Interest level in safaris (this helps us plan your
                  experience)
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Step 2 -->
        <div
          class="flex items-start space-x-8 bg-gray-900/50 border border-gray-700/50 rounded-2xl p-10"
        >
          <div
            class="bg-amber-400 text-gray-900 w-16 h-16 rounded-full flex items-center justify-center font-bold text-2xl flex-shrink-0"
          >
            2
          </div>
          <div class="flex-1">
            <h3 class="text-white text-2xl font-semibold mb-4">
              Written Confirmation
            </h3>
            <p class="text-gray-300 text-lg leading-relaxed mb-4">
              We'll send you a detailed confirmation email with everything
              spelled out clearly: dates, rates, what's included, what's extra,
              and payment details. No fine print, no surprises.
            </p>
            <div
              class="bg-gray-900/60 rounded-xl p-6 border border-gray-700/50"
            >
              <p class="text-amber-400 font-medium mb-2">
                Your confirmation includes:
              </p>
              <ul class="text-gray-300 space-y-1 text-sm">
                <li>
                  • Exact accommodation rates (exclusive of applicable taxes)
                </li>
                <li>• What meals and transfers are included</li>
                <li>• Safari coordination details and separate park fees</li>
                <li>• Payment schedule and methods</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Step 3 -->
        <div
          class="flex items-start space-x-8 bg-gray-900/50 border border-gray-700/50 rounded-2xl p-10"
        >
          <div
            class="bg-amber-400 text-gray-900 w-16 h-16 rounded-full flex items-center justify-center font-bold text-2xl flex-shrink-0"
          >
            3
          </div>
          <div class="flex-1">
            <h3 class="text-white text-2xl font-semibold mb-4">
              Secure Your Dates
            </h3>
            <p class="text-gray-300 text-lg leading-relaxed">
              A 50% deposit guarantees your reservation. The remaining balance
              would be due before you arrive. We accept bank transfers, UPI and
              all major credit cards. Simple as that.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Payment & Costs -->
  <section id="payment" class="py-24 bg-gray-950">
    <div class="max-w-5xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="font-serif italic text-5xl text-white mb-6">
          Payment & Costs
        </h2>
        <p class="text-xl text-gray-300 leading-relaxed">
          No hidden fees. No surprise charges. No surcharges for foreign
          visitors. Simple and straightforward.
        </p>
      </div>

      <div class="space-y-16">
        <!-- What You Pay Us -->
        <div>
          <h3 class="font-serif italic text-3xl text-white mb-8">
            What You Pay Limban
          </h3>
          <div class="grid lg:grid-cols-2 gap-8">
            <!-- Included -->
            <div
              class="bg-green-500/10 border border-green-500/20 rounded-2xl p-8"
            >
              <h4 class="text-green-400 font-bold text-xl mb-6">
                Your Rate Includes
              </h4>
              <ul class="space-y-4 text-gray-300 text-sm">
                <li class="flex items-start space-x-3">
                  <span class="text-green-400">•</span>
                  <span
                    >Your luxury room or suite - with everything that comes with
                    it</span
                  >
                </li>
                <li class="flex items-start space-x-3">
                  <span class="text-green-400">•</span>
                  <span>Packed breakfast for your morning safari adventure</span
                  >
                </li>
                <li class="flex items-start space-x-3">
                  <span class="text-green-400">•</span>
                  <span
                    >Leisurely and sumptuous breakfast at the resort when you
                    are not going for morning safaris</span
                  >
                </li>
                <li class="flex items-start space-x-3">
                  <span class="text-green-400">•</span>
                  <span
                    >Full access to all common facilities: swimming pool,
                    library, games room (foosball, table tennis), etc, and
                    outdoor lounging areas</span
                  >
                </li>
              </ul>
            </div>

            <!-- Extras -->
            <div
              class="bg-amber-500/10 border border-amber-500/20 rounded-2xl p-8"
            >
              <h4 class="text-amber-400 font-bold text-xl mb-6">
                What Costs Extra
              </h4>
              <ul class="space-y-4 text-gray-300 text-sm">
                <li class="flex items-start space-x-3">
                  <span class="text-amber-400">•</span>
                  <span
                    >Buffet, Lunch, Dinner & Snacks (our à la carte menu lets
                    you order what you want, when you want)</span
                  >
                </li>
                <li class="flex items-start space-x-3">
                  <span class="text-amber-400">•</span>
                  <span
                    >Airport/Station Transfers (we arrange seamless transport
                    from Nagpur for you)</span
                  >
                </li>
                <li class="flex items-start space-x-3">
                  <span class="text-amber-400">•</span>
                  <span
                    >Safari Park Fees, Vehicle and Guide / Naturalist Charges
                    (we coordinate all bookings directly and centrally)</span
                  >
                </li>
                <li class="flex items-start space-x-3">
                  <span class="text-amber-400">•</span>
                  <span>Alcoholic beverages and special requests</span>
                </li>
                <li class="flex items-start space-x-3">
                  <span class="text-amber-400">•</span>
                  <span
                    >Applicable government taxes (added to your final bill)</span
                  >
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Payment Schedule -->
        <div>
          <h3 class="font-serif italic text-3xl text-white mb-8">
            When You Pay
          </h3>
          <div class="grid md:grid-cols-2 gap-8">
            <div
              class="bg-green-500/10 border border-green-500/20 rounded-2xl p-8"
            >
              <div class="flex items-center space-x-4 mb-6">
                <div
                  class="bg-green-500/20 text-green-400 w-12 h-12 rounded-full flex items-center justify-center font-bold text-lg"
                >
                  ₹
                </div>
                <div>
                  <h4 class="text-white font-semibold text-lg">50% Deposit</h4>
                  <p class="text-green-400 text-sm">
                    When you confirm your booking
                  </p>
                </div>
              </div>
              <p class="text-gray-300 leading-relaxed">
                This holds your dates and confirms your reservation. We'll send
                payment details immediately after you give us the go-ahead.
              </p>
            </div>
            <div
              class="bg-blue-500/10 border border-blue-500/20 rounded-2xl p-8"
            >
              <div class="flex items-center space-x-4 mb-6">
                <div
                  class="bg-blue-500/20 text-blue-400 w-12 h-12 rounded-full flex items-center justify-center font-bold text-lg"
                >
                  ₹
                </div>
                <div>
                  <h4 class="text-white font-semibold text-lg">
                    50% Balance Payment
                  </h4>
                  <p class="text-blue-400 text-sm">Before you arrive</p>
                </div>
              </div>
              <p class="text-gray-300 leading-relaxed">
                The remaining 50% plus any applicable taxes. We'll send a
                reminder a week before your arrival with the exact amount and
                payment details.
              </p>
            </div>
          </div>

          <div
            class="mt-8 bg-amber-500/10 border border-amber-500/20 rounded-2xl p-8"
          >
            <h4 class="text-amber-400 font-semibold text-lg mb-4">
              Payment Methods
            </h4>
            <p class="text-gray-300 leading-relaxed mb-4">
              <strong>Bank transfer</strong> is our preferred method (we'll provide
              all details). <strong>Credit cards</strong> are accepted with standard
              processing fees. UPI payments are fine, too. <strong
                >International payments</strong
              > are welcome — we handle currency conversion at current market rates.
            </p>
            <p class="text-gray-300 text-sm">
              Once we confirm your booking, we guarantee your rate regardless of
              any future price changes. That's our promise.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Changes & Refunds -->
  <section id="changes" class="py-24 bg-gray-800">
    <div class="max-w-5xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="font-serif italic text-5xl text-white mb-6">
          Changes & Refunds
        </h2>
        <p class="text-xl text-gray-300 leading-relaxed">
          Life happens. Plans change. Here's how we handle it fairly for
          everyone.
        </p>
      </div>

      <div class="space-y-16">
        <!-- Refund Policy -->
        <div class="bg-gray-900/60 rounded-2xl p-10 border border-gray-700/50">
          <h3 class="font-serif italic text-3xl text-white mb-8 text-center">
            If You Really <span class="text-blue-400">Must</span> Cancel ...
          </h3>
          <p class="text-center text-gray-300 mb-12 text-lg">
            We understand that sometimes cancellation is unavoidable. Here's how
            we handle refunds based on how much notice you give us:
          </p>

          <div class="grid md:grid-cols-4 gap-6 mb-12">
            <div
              class="bg-green-500/15 border border-green-500/25 rounded-2xl p-8 text-center"
            >
              <div
                class="inline-block bg-green-500/10 border border-green-500/20 rounded-full px-6 py-3 mb-4"
              >
                <div class="text-green-400 text-3xl font-bold">14+</div>
              </div>
              <div class="text-gray-400 text-sm uppercase tracking-wider mb-4">
                Days before Arrival
              </div>
              <div
                class="inline-block bg-green-500/10 border border-green-500/20 rounded-lg px-4 py-1 mb-4"
              >
                <div class="text-green-400 font-medium text-lg">
                  Full Refund
                </div>
              </div>
              <div class="text-gray-300 text-sm leading-relaxed">
                Complete refund of your deposit. We can usually fill your dates
                with this much notice.
              </div>
            </div>

            <div
              class="bg-yellow-500/15 border border-yellow-500/25 rounded-2xl p-8 text-center"
            >
              <div
                class="inline-block bg-yellow-500/10 border border-yellow-500/20 rounded-full px-6 py-3 mb-4"
              >
                <div class="text-yellow-400 text-3xl font-bold">14 - 7</div>
              </div>
              <div class="text-gray-400 text-sm uppercase tracking-wider mb-4">
                Days before Arrival
              </div>
              <div
                class="inline-block bg-yellow-500/10 border border-yellow-500/20 rounded-lg px-4 py-1 mb-4"
              >
                <div class="text-yellow-400 font-medium text-lg">
                  50% Refund
                </div>
              </div>
              <div class="text-gray-300 text-sm leading-relaxed">
                Half your deposit back. The other half covers our lost
                opportunity to rebook.
              </div>
            </div>

            <div
              class="bg-orange-500/15 border border-orange-500/25 rounded-2xl p-8 text-center"
            >
              <div
                class="inline-block bg-orange-500/10 border border-orange-500/20 rounded-full px-6 py-3 mb-4"
              >
                <div class="text-orange-400 text-3xl font-bold">7 - 2</div>
              </div>
              <div class="text-gray-400 text-sm uppercase tracking-wider mb-4">
                Days before Arrival
              </div>
              <div
                class="inline-block bg-orange-500/10 border border-orange-500/20 rounded-lg px-4 py-1 mb-4"
              >
                <div class="text-orange-400 font-medium text-lg">
                  25% Refund
                </div>
              </div>
              <div class="text-gray-300 text-sm leading-relaxed">
                Quarter of your deposit returned. Short notice makes it very
                difficult to fill rooms.
              </div>
            </div>

            <div
              class="bg-red-500/15 border border-red-500/25 rounded-2xl p-8 text-center"
            >
              <div
                class="inline-block bg-red-500/10 border border-red-500/20 rounded-full px-6 py-3 mb-4"
              >
                <div class="text-red-400 text-3xl font-bold">2 - 0</div>
              </div>
              <div class="text-gray-400 text-sm uppercase tracking-wider mb-4">
                Last Minute / No Show
              </div>
              <div
                class="inline-block bg-red-500/10 border border-red-500/20 rounded-lg px-4 py-1 mb-4"
              >
                <div class="text-red-400 font-medium text-lg">No Refund</div>
              </div>
              <div class="text-gray-300 text-sm leading-relaxed">
                Unfortunately, there's no time to find replacement guests.
              </div>
            </div>
          </div>

          <div
            class="bg-gray-800/50 rounded-2xl p-10 border border-gray-700/50"
          >
            <h4 class="font-serif italic text-2xl text-white mb-6">
              Why These Timeframes?
            </h4>
            <p class="text-gray-300 leading-relaxed mb-6">
              We're a small property in a remote location. Unlike city hotels,
              we can't easily fill last-minute cancellations. These policies
              reflect the reality of our business while being as fair as
              possible to both guests and our small team.
            </p>
            <div class="grid md:grid-cols-2 gap-8 text-gray-300">
              <div
                class="bg-gray-800/50 border border-gray-700/60 rounded-xl p-6"
              >
                <strong class="text-white block mb-2"
                  >With 14+ days notice:</strong
                > We can usually find other guests who want your dates.
              </div>
              <div
                class="bg-gray-800/50 border border-gray-700/60 rounded-xl p-6"
              >
                <strong class="text-white block mb-2">With less notice:</strong>
                We lose the chance to offer your room to someone else.
              </div>
            </div>
          </div>
        </div>
        <!-- Rescheduling First -->
        <div
          class="bg-green-500/10 border border-green-500/20 rounded-2xl p-12 text-center"
        >
          <div
            class="inline-flex items-center justify-center w-20 h-20 bg-green-500/20 rounded-full mb-8"
          >
            <Icon name="carbon:idea" class="w-10 h-10 text-green-400" />
          </div>
          <h3 class="font-serif italic text-3xl text-white mb-6">
            First, Let's Try Rescheduling
          </h3>
          <p class="text-xl text-gray-300 leading-relaxed mb-8">
            Before thinking about cancellation, let's talk about new dates.
            We'll work with you to find alternatives and handle any seasonal
            rate differences transparently. Most problems can be solved this
            way.
          </p>
          <div class="grid md:grid-cols-3 gap-6 text-center">
            <div
              class="bg-green-500/10 border border-green-500/20 rounded-xl p-6"
            >
              <div class="text-green-400 font-semibold mb-2">
                Up to 2 Changes
              </div>
              <div class="text-gray-400 text-sm">
                Within 12 months of original booking
              </div>
            </div>
            <div
              class="bg-green-500/10 border border-green-500/20 rounded-xl p-6"
            >
              <div class="text-green-400 font-semibold mb-2">
                Fair Rate Adjustments
              </div>
              <div class="text-gray-400 text-sm">
                Pay difference for peak periods, get credit for off-seasons
              </div>
            </div>
            <div
              class="bg-green-500/10 border border-green-500/20 rounded-xl p-6"
            >
              <div class="text-green-400 font-semibold mb-2">
                Priority Access
              </div>
              <div class="text-gray-400 text-sm">
                First choice on alternative dates
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Safari Rules -->
  <section id="safari" class="py-24 bg-gray-950">
    <div class="max-w-5xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="font-serif italic text-5xl text-white mb-6">
          Safari Rules & Realities
        </h2>
        <p class="text-xl text-gray-300 leading-relaxed">
          These aren't our rules—they're the forest department's. But we want
          you to understand them clearly before you arrive.
        </p>
      </div>

      <div class="space-y-16">
        <!-- What You Need to Know -->
        <div class="grid lg:grid-cols-3 gap-8">
          <div
            class="bg-blue-500/10 border border-blue-500/20 rounded-2xl p-10"
          >
            <div
              class="w-16 h-16 bg-blue-500/20 rounded-full flex items-center justify-center mb-8"
            >
              <Icon name="carbon:document" class="w-8 h-8 text-blue-400" />
            </div>
            <h3 class="text-2xl text-white font-bold mb-6">
              Documents You'll Need
            </h3>
            <ul class="space-y-3 text-gray-300 text-sm">
              <li class="leading-relaxed">
                • Government-issued photo ID (passport for international guests)
              </li>
              <li>• Names must match your booking exactly</li>
              <li>
                • Children under 3 cannot enter the park (forest department
                rule)
              </li>
              <li>
                • Ages 3-12 need special permits (we arrange this for you)
              </li>
            </ul>
          </div>

          <div
