import { fetchRoomsData, fetchSpecialDealData } from '../api.js';

// Ultra-reliable API fetching with retry logic
async function fetchWithRetry(fetchFn, retries = 2) {
  for (let i = 0; i < retries; i++) {
    try {
      return await fetchFn();
    } catch (error) {
      if (i === retries - 1) throw error;
      await new Promise(resolve => setTimeout(resolve, 1000));
    }
  }
}

// Bulletproof URL validation
function validateImageUrl(url) {
  if (!url || typeof url !== 'string') return null;
  try {
    const parsed = new URL(url);
    return parsed.protocol === 'https:' ? url : null;
  } catch {
    return null;
  }
}

// Server-side data fetching with enhanced error handling
let data = { rooms: [], specialDeal: null };
let error = null;

try {
  const [rooms, specialDeal] = await Promise.all([
    fetchWithRetry(() => fetchRoomsData()),
    fetchWithRetry(() => fetchSpecialDealData())
  ]);
  
  // Validate and enhance room data
  data = {
    rooms: rooms.filter(room => room && room.roomName).map((room, index) => ({
      ...room,
      validatedImage: validateImageUrl(room.heroImage?.optimisedCard) || validateImageUrl(room.heroImage?.url) || '/img/room-placeholder.jpg',
      safePrice: Number(room.basePrice) || 0,
      priority: index < 4, // First 4 rooms get priority loading
      safeUrl: room.url?.startsWith('/') ? room.url : `/rooms/${room.url || room.id}`
    })),
    specialDeal
  };
} catch (err) {
  console.error('Failed to load rooms data:', err);
  error = 'Failed to load content from CMS';
}

// Enhanced hero image with validation
const roomsHeroImage = validateImageUrl(data.rooms[0]?.validatedImage) || '/img/rooms-hero.jpg';
