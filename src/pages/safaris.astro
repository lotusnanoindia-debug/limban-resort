---
import Layout from "../layouts/Layout.astro";
import { AstroSEO } from "astro-seo-plugin";
import { Icon } from "astro-icon/components";
import GalleryGrid from "../components/GalleryGrid.astro";
import LoadMoreGallery from "../components/LoadMoreGallery.astro";
import GalleryModal from "../components/GalleryModal.astro";
import imageService from "../utils/ImageService.js";
import { fetchSafariOverview, fetchSafariGallery } from "../api.js";

// Hero image
const heroImage =
  "https://res.cloudinary.com/dfa5hhzej/image/fetch/v1758544199/https://ap-south-1.graphassets.com/cmek3o6f00dcb07o59sno2s0e/cmetq5zs61pfu07oa7eaplprz";

// Fetch data
let safariOverview = [];
let safariGalleryImages = [];

try {
  safariOverview = (await fetchSafariOverview()) || [];
  safariGalleryImages = (await fetchSafariGallery()) || [];
} catch (error) {
  console.error("Safari data fetch error:", error);
}

// Process gallery images
const processedSafariImages =
  safariGalleryImages.length > 0
    ? safariGalleryImages.map((imageData, index) => ({
        id: imageData.id,
        alt:
          imageData.alt ||
          `Limban Safari Experience Photo No. ${index + 1} - Guest submitted.`,
        width: imageData.width,
        height: imageData.height,
        processedUrls: {
          thumbnail: imageService.processImage(imageData, "galleryThumbnail"),
          gallery: imageService.processImage(imageData, "serviceCard"),
          large: imageService.processImage(imageData, "galleryModal"),
          modal: imageService.processImage(imageData, "heroDesktop"),
        },
      }))
    : [];

// Split for load more
const initialSafariImages = processedSafariImages.slice(0, 12);
const remainingSafariImages = processedSafariImages.slice(12);

// Hero image processing
const heroImageUrl = imageService.processImage(
  { url: heroImage, alt: "Safari experience in Tadoba" },
  "heroDesktop",
  { quality: 70 },
);
---

<link rel="preload" as="image" href={heroImageUrl} fetchpriority="high" />

<Layout>
  <AstroSEO
    slot="head"
    title="Safari Experiences | Into the Heart of Tadoba - Limban Resort"
    description="Journey into India's most pristine tiger sanctuary. Expert-guided safari experiences through ancient forests where Bengal tigers roam free."
    canonical="https://limban.com/safaris"
    openGraph={{
      title: "Safari Experiences | Into the Heart of Tadoba - Limban Resort",
      description:
        "Journey into India's most pristine tiger sanctuary. Expert-guided safari experiences through ancient forests where Bengal tigers roam free.",
      image: heroImageUrl,
      type: "website",
      url: "https://limban.com/safaris",
    }}
  />

  <div class="bg-gray-950 text-gray-100 selection:bg-gray-700">
    <!-- Hero Section -->
    <section
      class="relative min-h-screen flex items-center justify-center overflow-hidden"
    >
      <div class="absolute inset-0">
        <div
          class="absolute inset-0 bg-gradient-to-b from-gray-950/60 via-gray-950/20 to-gray-950/80 z-10"
        >
        </div>
        <img
          src={heroImageUrl}
          alt="Safari experience in Tadoba National Park - Limban Resort"
          class="w-full h-full object-cover scale-105"
          fetchpriority="high"
        />
      </div>

      <div class="relative z-20 text-center max-w-6xl mx-auto px-6">
        <div class="space-y-8">
          <div
            class="inline-block px-6 py-3 bg-gradient-to-r from-amber-400/10 via-amber-500/10 to-amber-400/10 backdrop-blur-md border border-amber-400/30 rounded-full mb-8"
          >
            <span
              class="text-amber-300 text-sm font-medium tracking-[0.3em] uppercase flex items-center gap-2"
            >
              <Icon name="bi:tree" class="w-4 h-4" />
              Into the Wild
            </span>
          </div>

          <h1
            class="font-serif italic text-6xl md:text-8xl lg:text-9xl text-white leading-[0.9] mb-8"
          >
            <span class="block">Safari</span>
            <span
              class="block text-transparent bg-gradient-to-r from-amber-300 via-amber-400 to-yellow-400 bg-clip-text"
            >
              Experiences
            </span>
          </h1>

          <p
            class="text-2xl md:text-3xl text-gray-200 font-light leading-relaxed max-w-4xl mx-auto mb-12"
          >
            Journey into India's most pristine tiger sanctuary. Where ancient
            forests whisper secrets and Bengal tigers reign supreme.
          </p>
        </div>
      </div>
    </section>

    <!-- Breadcrumb Navigation -->
    <nav
      class="py-6 bg-gray-900/50 border-b border-gray-800"
      aria-label="Breadcrumb"
    >
      <div class="max-w-7xl mx-auto px-6">
        <ol class="flex items-center justify-center space-x-2 text-sm">
          <li>
            <a
              href="/"
              class="text-gray-400 hover:text-amber-400 transition-colors duration-300 flex items-center"
            >
              <Icon name="bi:tree" class="w-4 h-4 mr-1" />
              Home
            </a>
          </li>
          <li>
            <Icon name="bi:tree" class="w-4 h-4 text-gray-600" />
          </li>
          <li>
            <span class="text-amber-400 font-medium">Safaris</span>
          </li>
        </ol>
      </div>
    </nav>

    <!-- Safari Philosophy -->
    <section class="py-32 bg-gradient-to-b from-gray-900 to-gray-950">
      <div class="max-w-5xl mx-auto px-6 text-center">
        <div
          class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-8"
        >
          <span
            class="text-amber-400 text-sm font-medium tracking-widest uppercase"
            >Our Philosophy</span
          >
        </div>
        <h2 class="font-serif italic text-5xl md:text-6xl text-white mb-8">
          Where Wilderness <span class="text-amber-400">Meets Wonder</span>
        </h2>
        <p
          class="text-xl text-gray-300 font-light leading-relaxed mb-12 max-w-4xl mx-auto"
        >
          Every safari at Limban is a reverent journey into one of India's most
          sacred ecosystems. Our expert naturalists reveal stories written in
          pugmarks, calls, and morning mist.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16">
          <div class="group text-center">
            <div
              class="w-16 h-16 bg-gradient-to-br from-amber-400/20 to-orange-500/20 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <Icon name="bi:tree" class="w-8 h-8 text-amber-400" />
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">
              Conservation First
            </h3>
            <p class="text-gray-300 leading-relaxed">
              Every experience supports local conservation efforts, ensuring
              Tadoba's majesty endures for generations.
            </p>
          </div>

          <div class="group text-center">
            <div
              class="w-16 h-16 bg-gradient-to-br from-amber-400/20 to-orange-500/20 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <Icon name="bi:tree" class="w-8 h-8 text-amber-400" />
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">
              Expert Guidance
            </h3>
            <p class="text-gray-300 leading-relaxed">
              Our naturalists bring decades of forest wisdom, reading the
              jungle's moods like an ancient text.
            </p>
          </div>

          <div class="group text-center">
            <div
              class="w-16 h-16 bg-gradient-to-br from-amber-400/20 to-orange-500/20 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <Icon name="bi:tree" class="w-8 h-8 text-amber-400" />
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">
              Perfect Timing
            </h3>
            <p class="text-gray-300 leading-relaxed">
              Strategic timing and routes maximise your chances of witnessing
              Tadoba's legendary residents.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Safari Experiences - Alternating Layout -->
    <section
      id="safari-experiences"
      class="py-32 bg-gradient-to-b from-gray-900"
    >
      <div class="max-w-7xl mx-auto px-6">
        <header class="text-center mb-24">
          <div
            class="inline-flex items-center gap-3 px-8 py-3 bg-gradient-to-r from-amber-400/10 via-amber-500/10 to-amber-400/10 backdrop-blur-xl border border-amber-400/30 rounded-full mb-10"
          >
            <div class="w-2 h-2 bg-amber-400 rounded-full animate-pulse"></div>
            <span
              class="text-amber-400 text-sm font-medium tracking-[0.2em] uppercase"
              >Safari Experiences</span
            >
            <div class="w-2 h-2 bg-amber-400 rounded-full animate-pulse"></div>
          </div>
          <h2
            class="font-serif italic text-6xl md:text-7xl text-white mb-8 leading-none"
          >
            Curated <span
              class="text-transparent bg-gradient-to-r from-amber-300 via-amber-400 to-yellow-400 bg-clip-text"
              >Wild Encounters</span
            >
          </h2>
          <p
            class="text-2xl text-gray-300 max-w-4xl mx-auto leading-relaxed font-light"
          >
            Each safari experience is carefully crafted to reveal different
            facets of Tadoba's extraordinary ecosystem.
          </p>
        </header>

        {
          safariOverview.length > 0 ? (
            <div class="space-y-40">
              {safariOverview.map((safari, index) => (
                <article
                  key={safari.id}
                  class={`grid grid-cols-1 lg:grid-cols-2 gap-16 items-center ${index % 2 === 1 ? "lg:grid-flow-col-dense" : ""}`}
                >
                  {/* Image Section */}
                  <div
                    class={`relative group ${index % 2 === 1 ? "lg:col-start-2" : ""}`}
                  >
                    {safari.image && (
                      <div class="relative">
                        <div class="absolute -inset-4 bg-gradient-to-r from-amber-400/20 to-orange-500/20 rounded-3xl opacity-0 group-hover:opacity-100 transition-all duration-700 blur-xl" />
                        <div class="relative aspect-[5/4] overflow-hidden rounded-3xl border border-amber-400/20 group-hover:border-amber-400/40 transition-all duration-700">
                          <div class="absolute inset-0 bg-gradient-to-t from-gray-950/70 via-transparent to-gray-950/20 z-10" />
                          <img
                            src={imageService.processImage(
                              safari.image,
                              "medium",
                            )}
                            alt={
                              safari.altText ||
                              `${safari.title} safari experience`
                            }
                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-1000"
                            loading="lazy"
                          />
                        </div>

                        {safari.duration && (
                          <div class="absolute top-4 left-8 bg-amber-700/60 border border-amber-400/30 rounded-full px-6 py-3 group-hover:scale-105 transition-transform duration-300 z-30">
                            <div class="flex items-center gap-3">
                              <div class="w-2 h-2 bg-amber-400 rounded-full animate-pulse" />
                              <span class="text-white text-sm font-medium uppercase tracking-wider">
                                {safari.duration}
                              </span>
                            </div>
                          </div>
                        )}
                      </div>
                    )}
                  </div>

                  {/* Content Section */}
                  <div
                    class={`space-y-8 ${index % 2 === 1 ? "lg:col-start-1" : ""}`}
                  >
                    <header class="space-y-6">
                      <div class="flex items-center gap-4">
                        <div class="w-16 h-px bg-gradient-to-r from-amber-400 to-transparent" />
                        <span class="text-amber-400/60 text-sm uppercase tracking-[0.3em] font-medium">
                          Experience {String(index + 1).padStart(2, "0")}
                        </span>
                      </div>

                      <h3 class="font-serif italic text-5xl md:text-6xl text-white leading-none hover:text-amber-400 transition-colors duration-500">
                        {safari.title}
                      </h3>

                      {safari.subtitle && (
                        <p class="text-2xl text-transparent bg-gradient-to-r from-amber-300 to-yellow-400 bg-clip-text font-medium leading-relaxed">
                          {safari.subtitle}
                        </p>
                      )}
                    </header>

                    {/* Smart Text with Read More */}
                    <div class="space-y-6">
                      <div
                        class={`safari-text-${index} text-lg text-gray-300 leading-relaxed space-y-4`}
                      >
                        {(() => {
                          const paragraphs = safari.description
                            .split("\n\n")
                            .filter((p) => p.trim());
                          const previewParagraphs = paragraphs.slice(0, 2);
                          const remainingParagraphs = paragraphs.slice(2);

                          return (
                            <>
                              {previewParagraphs.map((paragraph, pIndex) => (
                                <p key={pIndex} class="whitespace-pre-line">
                                  {paragraph}
                                </p>
                              ))}

                              {remainingParagraphs.length > 0 && (
                                <>
                                  <div
                                    class={`remaining-content-${index} overflow-hidden transition-all duration-700 ease-out max-h-0 opacity-0`}
                                  >
                                    <div class="pt-4 space-y-4">
                                      {remainingParagraphs.map(
                                        (paragraph, pIndex) => (
                                          <p
                                            key={pIndex}
                                            class="whitespace-pre-line"
                                          >
                                            {paragraph}
                                          </p>
                                        ),
                                      )}
                                    </div>
                                  </div>

                                  <button
                                    class={`read-more-btn-${index} group inline-flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-amber-400/10 to-orange-500/10 backdrop-blur-sm border border-amber-400/30 rounded-full hover:from-amber-400/20 hover:to-orange-500/20 hover:border-amber-400/50 transition-all duration-300`}
                                    onclick={`toggleSafariContent(${index})`}
                                  >
                                    <span class="text-amber-400 font-medium text-sm uppercase tracking-wider">
                                      Continue Reading
                                    </span>
                                    <div class="w-6 h-6 rounded-full bg-amber-400/20 flex items-center justify-center group-hover:bg-amber-400/30 transition-colors duration-300">
                                      <Icon
                                        name="bi:tree"
                                        class="w-3 h-3 text-amber-400 transform group-hover:rotate-180 transition-transform duration-500"
                                      />
                                    </div>
                                  </button>
                                </>
                              )}
                            </>
                          );
                        })()}
                      </div>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          ) : (
            <div class="text-center py-24">
              <div class="inline-flex items-center gap-3 text-amber-400/60">
                <div class="w-2 h-2 bg-amber-400/60 rounded-full animate-pulse" />
                <p class="text-lg font-light">Safari experiences loading...</p>
                <div class="w-2 h-2 bg-amber-400/60 rounded-full animate-pulse" />
              </div>
            </div>
          )
        }
      </div>
    </section>

    <!-- Safari Gallery -->
    <section
      id="safari-gallery"
      class="py-32 bg-gradient-to-b from-gray-800 to-gray-950"
    >
      <div class="max-w-7xl mx-auto px-6">
        <header class="text-center mb-16">
          <div
            class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-8"
          >
            <span
              class="text-amber-400 text-sm font-medium tracking-widest uppercase"
              >Captured Moments</span
            >
          </div>
          <h2 class="font-serif italic text-5xl md:text-6xl text-white mb-6">
            Through the <span class="text-amber-400">Lens</span>
          </h2>
          <p class="text-xl text-gray-300 max-w-2xl mx-auto">
            Witness the raw beauty and untamed spirit of Tadoba through moments
            frozen in time
          </p>
        </header>

        {
          processedSafariImages.length > 0 ? (
            <>
              <GalleryGrid
                images={initialSafariImages}
                galleryType="safari"
                gridId="safari-gallery-grid"
                layout="grid"
                columns={{
                  mobile: 2,
                  tablet: 4,
                  desktop: 4,
                  xl: 6,
                }}
                aspectRatio="square"
                showOverlay={true}
                loadingStrategy="intersection"
              />

              {remainingSafariImages.length > 0 && (
                <LoadMoreGallery
                  buttonId="load-more-safari-gallery"
                  remainingImages={remainingSafariImages}
                  galleryType="safari"
                  galleryGridId="safari-gallery-grid"
                  initialCount={initialSafariImages.length}
                  batchSize={12}
                  customLabels={{ safari: "Safari Moments" }}
                />
              )}

              <div class="text-center mt-8">
                <p class="text-gray-400 font-light italic">
                  Click any image to immerse yourself in the wild beauty of
                  Tadoba
                </p>
              </div>
            </>
          ) : (
            <div class="text-center py-16">
              <p class="text-gray-400 text-lg">Safari gallery loading...</p>
            </div>
          )
        }
      </div>
    </section>

    <!-- Safari FAQ Section -->
    <section class="py-32 bg-gradient-to-b from-gray-800 to-gray-950">
      <div class="max-w-7xl mx-auto px-6">
        <header class="text-center mb-16">
          <div
            class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-8"
          >
            <span
              class="text-amber-400 text-sm font-medium tracking-widest uppercase"
              >Common Questions</span
            >
          </div>
          <h2 class="font-serif italic text-4xl md:text-6xl text-white mb-6">
            Safari <span class="text-amber-400">Essentials</span>
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Everything you need to know about experiencing Tadoba's wilderness
            with complete confidence
          </p>
        </header>

        <div class="max-w-4xl mx-auto">
          <div class="space-y-4">
            <!-- FAQ Item 1 - Safari Inclusion -->
            <!-- FAQ Item 1 - Safari Arrangements -->
            <div
              class="group bg-gradient-to-br from-gray-800/60 to-gray-900/80 backdrop-blur-xl border border-gray-700/50 rounded-2xl overflow-hidden"
            >
              <button
                class="w-full text-left p-8 flex items-center justify-between rounded-2xl"
                data-faq-toggle
              >
                <div>
                  <h3
                    class="text-xl font-semibold text-white mb-2 group-hover:text-amber-400 transition-colors duration-300"
                  >
                    How do safari bookings work with my stay?
                  </h3>
                  <p class="text-gray-400 text-sm">
                    Seamless coordination • Expert planning • Premium
                    experiences
                  </p>
                </div>
                <Icon
                  name="bi:tree"
                  class="w-6 h-6 text-amber-400 transition-transform duration-300 group-hover:rotate-180"
                />
              </button>
              <div
                class="faq-content max-h-0 overflow-hidden transition-all duration-300 ease-in-out"
              >
                <div class="px-8 pb-8 border-t border-gray-700/30 pt-6">
                  <p class="text-gray-300 leading-relaxed mb-4">
                    <strong class="text-amber-400"
                      >Safari experiences are curated add-ons to your stay</strong
                    >, designed to complement your accommodation with expertly
                    guided wilderness encounters. We handle all the complex
                    coordination—permits, timing, vehicles, and guides—so you
                    enjoy seamless experiences.
                  </p>
                  <div
                    class="bg-gray-900/60 rounded-xl p-4 border border-amber-400/20"
                  >
                    <p class="text-sm text-amber-300 mb-2">
                      <strong>Our turnkey safari service includes:</strong>
                    </p>
                    <ul class="text-gray-300 text-sm space-y-1">
                      <li>• Forest department permit coordination</li>
                      <li>• Expert naturalist guides</li>
                      <li>
                        • Premium safari vehicles with experienced drivers
                      </li>
                      <li>• Strategic timing and route planning</li>
                      <li>• Flexible scheduling around your preferences</li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>

            <!-- FAQ Item 2 - Custom Vehicles -->
            <div
              class="group bg-gradient-to-br from-gray-800/60 to-gray-900/80 backdrop-blur-xl border border-gray-700/50 rounded-2xl overflow-hidden"
            >
              <button
                class="w-full text-left p-8 flex items-center justify-between rounded-2xl"
                data-faq-toggle
              >
                <div>
                  <h3
                    class="text-xl font-semibold text-white mb-2 group-hover:text-amber-400 transition-colors duration-300"
                  >
                    Can I have a private safari vehicle just for my group?
                  </h3>
                  <p class="text-gray-400 text-sm">
                    Custom vehicles available • Private group experiences
                  </p>
                </div>
                <Icon
                  name="bi:tree"
                  class="w-6 h-6 text-amber-400 transition-transform duration-300 group-hover:rotate-180"
                />
              </button>
              <div
                class="faq-content max-h-0 overflow-hidden transition-all duration-300 ease-in-out"
              >
                <div class="px-8 pb-8 border-t border-gray-700/30 pt-6">
                  <p class="text-gray-300 leading-relaxed mb-4">
                    <strong class="text-amber-400">Absolutely!</strong> We offer
                    custom private vehicles for guests who prefer an exclusive safari
                    experience. Perfect for families, couples seeking intimacy, or
                    photography enthusiasts requiring flexibility.
                  </p>
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div
                      class="bg-gray-900/60 rounded-xl p-4 border border-green-400/20"
                    >
                      <p class="text-sm text-green-300 mb-2">
                        <strong>Private vehicle benefits:</strong>
                      </p>
                      <ul class="text-gray-300 text-sm space-y-1">
                        <li>• Set your own pace and stops</li>
                        <li>• Dedicated naturalist guide</li>
                        <li>• Photography-focused routes</li>
                        <li>• Flexible timing</li>
                      </ul>
                    </div>
                    <div
                      class="bg-gray-900/60 rounded-xl p-4 border border-amber-400/20"
                    >
                      <p class="text-sm text-amber-300 mb-2">
                        <strong>Booking private safaris:</strong>
                      </p>
                      <p class="text-gray-300 text-sm">
                        Request private vehicles when booking your stay. Subject
                        to availability and may involve additional coordination
                        with park authorities.
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- FAQ Item 3 - Best Times -->
            <div
              class="group bg-gradient-to-br from-gray-800/60 to-gray-900/80 backdrop-blur-xl border border-gray-700/50 rounded-2xl overflow-hidden"
            >
              <button
                class="w-full text-left p-8 flex items-center justify-between rounded-2xl"
                data-faq-toggle
              >
                <div>
                  <h3
                    class="text-xl font-semibold text-white mb-2 group-hover:text-amber-400 transition-colors duration-300"
                  >
                    What are the best times for tiger sightings?
                  </h3>
                  <p class="text-gray-400 text-sm">
                    Peak seasons • Optimal timing strategies
                  </p>
                </div>
                <Icon
                  name="bi:tree"
                  class="w-6 h-6 text-amber-400 transition-transform duration-300 group-hover:rotate-180"
                />
              </button>
              <div
                class="faq-content max-h-0 overflow-hidden transition-all duration-300 ease-in-out"
              >
                <div class="px-8 pb-8 border-t border-gray-700/30 pt-6">
                  <p class="text-gray-300 leading-relaxed mb-4">
                    <strong class="text-amber-400"
                      >Early morning and late afternoon safaris offer the
                      highest success rates</strong
                    > for tiger sightings, when these magnificent cats are most active
                    hunting and patrolling their territory.
                  </p>
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div
                      class="bg-blue-900/40 rounded-xl p-4 border border-blue-400/20 text-center"
                    >
                      <p class="text-blue-300 font-semibold mb-2">
                        Morning Safari
                      </p>
                      <p class="text-2xl font-bold text-white mb-1">6:00 AM</p>
                      <p class="text-gray-300 text-xs">
                        Tigers active after cool night
                      </p>
                    </div>
                    <div
                      class="bg-amber-900/40 rounded-xl p-4 border border-amber-400/20 text-center"
                    >
                      <p class="text-amber-300 font-semibold mb-2">
