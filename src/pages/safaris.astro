---
import Layout from "../layouts/Layout.astro";
import { AstroSEO } from "astro-seo-plugin";
import { Icon } from "astro-icon/components";
import UniversalGallery from "../components/UniversalGallery.astro";
import GalleryModal from "../components/GalleryModal.astro";
import imageService from "../utils/ImageService.js";
import ContactSection from "../components/ContactSection.astro";
import { fetchSafariOverview, fetchSafariGallery } from "../api.js";

// Helper for Cloudinary JPG (schema)
const toCloudinaryJpg = (url: string) => {
  if (!url) return "";
  return `https://res.cloudinary.com/dfa5hhzej/image/fetch/w_1200,h_675,c_fill,q_85,f_jpg/${url}`;
};

// Hero images
const heroImageUrl =
  "https://res.cloudinary.com/dfa5hhzej/image/fetch/f_avif,q_35,w_1200/https://ap-south-1.graphassets.com/cmek3o6f00dcb07o59sno2s0e/cmfgb57f60hfn07pl702le0mx";
const heroMobileUrl =
  "https://res.cloudinary.com/dfa5hhzej/image/fetch/f_auto,q_35,w_600,c_scale/https://ap-south-1.graphassets.com/cmek3o6f00dcb07o59sno2s0e/cmfgb57f60hfn07pl702le0mx";
const heroImageSchema = toCloudinaryJpg(
  "https://ap-south-1.graphassets.com/cmek3o6f00dcb07o59sno2s0e/cmfgb57f60hfn07pl702le0mx",
);

// Fetch data
let safariOverview = [];
let safariGalleryImages = [];

try {
  safariOverview = (await fetchSafariOverview()) || [];
  safariGalleryImages = (await fetchSafariGallery()) || [];
} catch (error) {
  console.error("Safari data fetch error:", error);
}

// Safari schema with FAQ
const safariSchema = {
  "@context": "https://schema.org",
  "@type": "TouristAttraction",
  "@id": "https://limban.com/safaris#attraction",
  name: "Tadoba Tiger Safari Experiences",
  description:
    "Expert-guided safari experiences through Tadoba National Park's ancient forests where Bengal tigers roam free. Witness India's most pristine tiger sanctuary with certified naturalists.",
  url: "https://limban.com/safaris",
  image: [heroImageSchema],
  address: {
    "@type": "PostalAddress",
    streetAddress: "Survey No. 306, Village Mudholi, Taluka Bhadravati",
    addressLocality: "Tadoba",
    addressRegion: "Maharashtra",
    postalCode: "442906",
    addressCountry: "IN",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: 20.25602486093492,
    longitude: 79.2847888101826,
  },
  touristType: [
    "Wildlife Enthusiasts",
    "Photographers",
    "Families",
    "Nature Lovers",
  ],
  availableLanguage: ["English", "Hindi", "Marathi"],
  isAccessibleForFree: false,
  tourBookingPage: "https://limban.com/contact",
  partOf: {
    "@type": "Hotel",
    "@id": "https://limban.com/#hotel",
    name: "Limban Resort",
  },
  provider: {
    "@type": "Organization",
    "@id": "https://limban.com/#organization",
    name: "Limban Resort",
  },
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "How do safari bookings work with my stay?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Safari experiences are curated add-ons to your stay, designed to complement your accommodation with expertly guided wilderness encounters. We handle all the complex coordination—permits, timing, vehicles, and guides—so you enjoy seamless experiences. Our turnkey safari service includes: forest department permit coordination, expert naturalist guides, premium safari vehicles with experienced drivers, strategic timing and route planning, and flexible scheduling around your preferences.",
      },
    },
    {
      "@type": "Question",
      name: "Can I have a private safari vehicle just for my group?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Absolutely! We offer custom private vehicles for guests who prefer an exclusive safari experience. Perfect for families, couples seeking intimacy, or photography enthusiasts requiring flexibility. Private vehicle benefits include: set your own pace and stops, dedicated naturalist guide, photography-focused routes, and flexible timing. For booking, request private vehicles when booking your stay. Subject to availability and may involve additional coordination with park authorities.",
      },
    },
    {
      "@type": "Question",
      name: "What are the best times for tiger sightings?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Early morning and late afternoon safaris offer the highest success rates for tiger sightings, when these magnificent cats are most active hunting and patrolling their territory. Morning safari is at 6:00 AM when tigers are active after cool night. Afternoon safari is at 3:30 PM for evening hunt preparation. The best season is November to March with cooler weather and active wildlife.",
      },
    },
    {
      "@type": "Question",
      name: "What should I bring on safari?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "We provide water and basic refreshments, but here are essential items to enhance your safari experience and ensure maximum comfort. Essential items include: wide-brimmed hat, sunglasses, sunscreen (SPF 30+), and light jacket for early mornings. Photography items: camera with telephoto lens, extra batteries, memory cards, and lens cleaning cloth. Comfort items: binoculars (we provide backup), small backpack, personal snacks, and insect repellent.",
      },
    },
    {
      "@type": "Question",
      name: "Do I need to worry about permits and bookings?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Not at all! Safari permits and bookings are entirely handled by our team. While safari availability ultimately depends on forest department authorities, we manage all the complex coordination so you can focus on the experience. Our turnkey service includes: daily permit applications, gate coordination and timing, guide and vehicle assignments, weather contingency planning, alternative route preparation, and all entry fee payments.",
      },
    },
    {
      "@type": "Question",
      name: "How safe are the safari experiences?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Safety is our absolute priority. Our experienced naturalists and drivers follow strict forest department protocols, maintain respectful distances from wildlife, and carry emergency communication equipment. Safety measures include: certified naturalist guides, regular vehicle maintenance, first aid kit on every vehicle, and radio communication with base. Wildlife protocols: maintain safe distances from animals, no sudden movements or loud noises, follow all forest department rules, and emergency evacuation procedures.",
      },
    },
    {
      "@type": "Question",
      name: "Will I actually see tigers, or could I go home disappointed?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Tadoba hosts 97 tigers across its core zones, giving excellent sighting opportunities, though wildlife encounters are never guaranteed—that's what makes them magical. Even without tigers, every safari reveals incredible biodiversity: leopards, wild dogs, sloth bears, deer, and over 200 bird species. What you will see includes: diverse wildlife every safari, ancient forest ecosystems, bird species and butterflies, and traditional tribal landscapes. Tiger sighting factors include: season and weather conditions, time of day and temperature, multiple safari opportunities, and expert guide knowledge.",
      },
    },
    {
      "@type": "Question",
      name: "Are safaris suitable for families with children of different ages?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Safaris are wonderful for families! We welcome children of all ages and elderly family members. Our naturalists are skilled at engaging young minds with age-appropriate wildlife education, while our comfortable vehicles accommodate various mobility needs. For young children: can sit on laps (under 5), shorter safari options, early return if needed, and educational engagement. For older adults: comfortable seating, easy vehicle access, regular rest stops, and flexible pacing. For family groups: private vehicle options, customised timing, photography assistance, and shared learning experience.",
      },
    },
    {
      "@type": "Question",
      name: "How do you ensure safe and educational safari experiences?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "All our organised safaris are briefed and attended by trained and experienced staff. Our certified naturalists undergo continuous training, while our drivers have decades of experience navigating Tadoba's terrain and wildlife behaviour patterns. Professional expertise includes: certified naturalist guides, experienced safari drivers, wildlife behaviour specialists, and continuous education programmes. Safety protocols: pre-safari safety briefings, radio communication systems, emergency response procedures, and regular vehicle maintenance. Our naturalists don't just spot animals—they interpret behaviour, ecology, and conservation stories, transforming every sighting into a deeper understanding of Tadoba's ecosystem.",
      },
    },
  ],
};

// Combine both schemas
const combinedJsonLd = [safariSchema, faqSchema];
---

<link rel="preload" as="image" href={heroImageUrl} fetchpriority="high" />

<Layout>
  <AstroSEO
    slot="head"
    title="Safari Experiences | Into the Heart of Tadoba - Limban Resort"
    description="Journey into India's most pristine tiger sanctuary. Expert-guided safari experiences through ancient forests where Bengal tigers roam free."
    openGraph={{
      title: "Safari Experiences | Into the Heart of Tadoba - Limban Resort",
      description:
        "Journey into India's most pristine tiger sanctuary. Expert-guided safari experiences through ancient forests where Bengal tigers roam free.",
      image: heroImageSchema,
      type: "website",
      url: "https://limban.com/safaris",
    }}
    jsonLd={combinedJsonLd}
  />

  <div class="bg-gray-950 text-gray-100 selection:bg-gray-700">
    <!-- Hero Section -->
    <section
      class="relative min-h-screen flex items-center justify-center overflow-hidden"
    >
      <div class="absolute inset-0">
        <div
          class="absolute inset-0 bg-black/60 z-10"
          data-astro-cid-kh7btl4r=""
        >
        </div>
        <picture>
          <source media="(max-width: 768px)" srcset={heroMobileUrl} />
          <img
            src={heroImageUrl}
            class="w-full h-full object-cover"
            alt="Safari experience in Tadoba National Park - Limban Resort"
            loading="eager"
            fetchpriority="high"
          />
        </picture>
      </div>

      <div class="relative z-20 text-center max-w-6xl mx-auto px-6">
        <div class="space-y-8">
          <div
            class="inline-block px-6 py-3 bg-gradient-to-r from-amber-400/10 via-amber-500/10 to-amber-400/10 backdrop-blur-md border border-amber-400/30 rounded-full mb-8"
          >
            <span
              class="text-amber-300 text-sm font-medium tracking-[0.3em] uppercase flex items-center gap-2"
            >
              <Icon name="bi:tree" class="w-4 h-4" />
              Into the Wild
            </span>
          </div>

          <h1
            class="font-serif text-6xl md:text-8xl lg:text-9xl text-white leading-[0.9] mb-8"
          >
            <span class="block">Limban Safari</span>
            <span
              class="block text-transparent bg-gradient-to-r from-amber-300 via-amber-400 to-yellow-400 bg-clip-text"
            >
              Experiences
            </span>
          </h1>

          <p
            class="text-2xl md:text-3xl text-gray-200 font-light leading-relaxed max-w-4xl mx-auto mb-12"
          >
            Journey into India's most pristine tiger sanctuary. Where ancient
            forests whisper secrets and Bengal tigers reign supreme.
          </p>
        </div>
      </div>
    </section>

    <!-- Breadcrumb Navigation -->
    <nav
      class="py-6 bg-gray-900/50 border-b border-gray-800"
      aria-label="Breadcrumb"
    >
      <div class="max-w-7xl mx-auto px-6">
        <ol class="flex items-center justify-center space-x-2 text-sm">
          <li>
            <a
              href="/"
              title="Return to Limban Resort homepage"
              class="text-gray-400 hover:text-amber-400 transition-colors duration-300 flex items-center"
            >
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path
                  d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                ></path>
              </svg>
              Home
            </a>
          </li>
          <li>
            <svg
              class="w-4 h-4 text-gray-600"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </li>
          <li>
            <span class="text-amber-400 font-medium">Safaris</span>
          </li>
        </ol>
      </div>
    </nav>

    <!-- Safari Philosophy -->
    <section class="py-32 bg-gray-0">
      <div class="max-w-5xl mx-auto px-6 text-center">
        <div
          class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-8"
        >
          <span
            class="text-amber-400 text-sm font-medium tracking-widest uppercase"
            >Our Philosophy</span
          >
        </div>
        <h2 class="font-serif text-5xl md:text-6xl text-white mb-8">
          Where Wilderness <span class="text-amber-400">Meets Wonder</span>
        </h2>
        <p
          class="text-xl text-gray-300 font-light leading-relaxed mb-12 max-w-4xl mx-auto"
        >
          Every safari at Limban is a reverent journey into one of India's most
          sacred ecosystems. Our expert naturalists reveal stories written in
          pugmarks, calls, and morning mist.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16">
          <div class="group text-center">
            <div
              class="w-16 h-16 bg-gradient-to-br from-amber-400/20 to-orange-500/20 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <Icon
                name="ph:tree-evergreen-bold"
                class="w-8 h-8 text-amber-400"
              />
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">
              Conservation First
            </h3>
            <p class="text-gray-300 leading-relaxed">
              Every experience supports local conservation efforts, ensuring
              Tadoba's majesty endures for generations.
            </p>
          </div>

          <div class="group text-center">
            <div
              class="w-16 h-16 bg-gradient-to-br from-amber-400/20 to-orange-500/20 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <Icon name="bi:browser-safari" class="w-8 h-8 text-amber-400" />
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">
              Expert Guidance
            </h3>
            <p class="text-gray-300 leading-relaxed">
              Our naturalists bring decades of forest wisdom, reading the
              jungle's moods like an ancient text.
            </p>
          </div>

          <div class="group text-center">
            <div
              class="w-16 h-16 bg-gradient-to-br from-amber-400/20 to-orange-500/20 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <Icon name="carbon:time" class="w-8 h-8 text-amber-400" />
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">
              Perfect Timing
            </h3>
            <p class="text-gray-300 leading-relaxed">
              Strategic timing and routes maximise your chances of witnessing
              Tadoba's legendary residents.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Safari Experiences - Alternating Layout -->
    <section id="safari-experiences" class="py-32 bg-gray-1">
      <div class="max-w-7xl mx-auto px-6">
        <header class="text-center mb-24">
          <div
            class="inline-flex items-center gap-3 px-8 py-3 bg-gradient-to-r from-amber-400/10 via-amber-500/10 to-amber-400/10 backdrop-blur-xl border border-amber-400/30 rounded-full mb-10"
          >
            <div class="w-2 h-2 bg-amber-400 rounded-full"></div>
            <span
              class="text-amber-400 text-sm font-medium tracking-[0.2em] uppercase"
              >Safari Experiences</span
            >
            <div class="w-2 h-2 bg-amber-400 rounded-full"></div>
          </div>
          <h2
            class="font-serif text-6xl md:text-7xl text-white mb-8 leading-none"
          >
            Curated <span
              class="text-transparent bg-gradient-to-r from-amber-300 via-amber-400 to-yellow-400 bg-clip-text"
              >Wild Encounters</span
            >
          </h2>
          <p
            class="text-2xl text-gray-300 max-w-4xl mx-auto leading-relaxed font-light"
          >
            Each safari experience is carefully crafted to reveal different
            facets of Tadoba's extraordinary ecosystem.
          </p>
        </header>

        {
          safariOverview.length > 0 ? (
            <div class="space-y-40">
              {safariOverview.map((safari, index) => (
                <article
                  key={safari.id}
                  class={`grid grid-cols-1 lg:grid-cols-2 gap-16 items-center ${index % 2 === 1 ? "lg:grid-flow-col-dense" : ""}`}
                >
                  {/* Image Section */}
                  <div
                    class={`relative group ${index % 2 === 1 ? "lg:col-start-2" : ""}`}
                  >
                    {safari.image && (
                      <div class="relative">
                        <div class="absolute -inset-4 bg-gradient-to-r from-amber-400/20 to-orange-500/20 rounded-3xl opacity-0 group-hover:opacity-100 transition-all duration-700 blur-xl" />
                        <div class="relative aspect-[5/4] overflow-hidden rounded-3xl border border-amber-400/20 group-hover:border-amber-400/40 transition-all duration-700">
                          <div class="absolute inset-0 bg-gradient-to-t from-gray-950/70 via-transparent to-gray-950/20 z-10" />
                          <img
                            src={imageService.processImage(
                              safari.image,
                              "medium",
                            )}
                            alt={
                              safari.altText ||
                              `${safari.title} safari experience`
                            }
                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-1000"
                            loading="lazy"
                          />
                        </div>

                        {safari.duration && (
                          <div class="absolute top-4 left-8 bg-amber-700/60 border border-amber-400/30 rounded-full px-6 py-3 group-hover:scale-105 transition-transform duration-300 z-30">
                            <div class="flex items-center gap-3">
                              <div class="w-2 h-2 bg-amber-400 rounded-full" />
                              <span class="text-white text-sm font-medium uppercase tracking-wider">
                                {safari.duration}
                              </span>
                            </div>
                          </div>
                        )}
                      </div>
                    )}
                  </div>

                  {/* Content Section */}
                  <div
                    class={`space-y-8 ${index % 2 === 1 ? "lg:col-start-1" : ""}`}
                  >
                    <header class="space-y-6">
                      <div class="flex items-center gap-4">
                        <div class="w-16 h-px bg-gradient-to-r from-amber-400 to-transparent" />
                        <span class="text-amber-400/60 text-sm uppercase tracking-[0.3em] font-medium">
                          Experience {String(index + 1).padStart(2, "0")}
                        </span>
                      </div>

                      <h3 class="font-serif text-5xl md:text-6xl text-white leading-none hover:text-amber-400 transition-colors duration-500">
                        {safari.title}
                      </h3>

                      {safari.subtitle && (
                        <p class="text-2xl text-transparent bg-gradient-to-r from-amber-300 to-yellow-400 bg-clip-text font-medium leading-relaxed">
                          {safari.subtitle}
                        </p>
                      )}
                    </header>

                    {/* Smart Text with Read More */}
                    <div class="space-y-6">
                      <div
                        class={`safari-text-${index} text-lg text-gray-300 leading-relaxed space-y-4`}
                      >
                        {(() => {
                          const paragraphs = safari.description
                            .split("\n\n")
                            .filter((p) => p.trim());
                          const previewParagraphs = paragraphs.slice(0, 2);
                          const remainingParagraphs = paragraphs.slice(2);

                          return (
                            <>
                              {previewParagraphs.map((paragraph, pIndex) => (
                                <p key={pIndex} class="whitespace-pre-line">
                                  {paragraph}
                                </p>
                              ))}

                              {remainingParagraphs.length > 0 && (
                                <>
                                  <div
                                    class={`remaining-content-${index} overflow-hidden transition-all duration-700 ease-out max-h-0 opacity-0`}
                                  >
                                    <div class="pt-4 space-y-4">
                                      {remainingParagraphs.map(
                                        (paragraph, pIndex) => (
                                          <p
                                            key={pIndex}
                                            class="whitespace-pre-line"
                                          >
                                            {paragraph}
                                          </p>
                                        ),
                                      )}
                                    </div>
                                  </div>

                                  <button
                                    class={`read-more-btn-${index} group inline-flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-amber-400/10 to-orange-500/10 backdrop-blur-sm border border-amber-400/30 rounded-full hover:from-amber-400/20 hover:to-orange-500/20 hover:border-amber-400/50 transition-all duration-300`}
                                    onclick={`toggleSafariContent(${index})`}
                                  >
                                    <span class="text-amber-400 font-medium text-sm uppercase tracking-wider">
                                      Continue Reading
                                    </span>
                                    <div class="w-6 h-6 rounded-full bg-amber-400/20 flex items-center justify-center group-hover:bg-amber-400/30 transition-colors duration-300">
                                      <Icon
                                        name="ph:caret-down-bold"
                                        class="w-3 h-3 text-amber-400 transform group-hover:rotate-180 transition-transform duration-500"
                                      />
                                    </div>
                                  </button>
                                </>
                              )}
                            </>
                          );
                        })()}
                      </div>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          ) : (
            <div class="text-center py-24">
              <div class="inline-flex items-center gap-3 text-amber-400/60">
                <div class="w-2 h-2 bg-amber-400/60 rounded-full" />
                <p class="text-lg font-light">Safari experiences loading...</p>
                <div class="w-2 h-2 bg-amber-400/60 rounded-full" />
              </div>
            </div>
          )
        }
      </div>
    </section>

    <!-- Safari Gallery -->
    <section id="safari-gallery" class="py-32 bg-gray-0">
      <div class="max-w-7xl mx-auto px-6">
        <header class="text-center mb-16">
          <div
            class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-8"
          >
            <span
              class="text-amber-400 text-sm font-medium tracking-widest uppercase"
              >Captured Moments</span
            >
          </div>
          <h2 class="font-serif text-5xl md:text-6xl text-white mb-6">
            Through our <span class="text-amber-400">Guests' Lens</span>
          </h2>
          <p class="text-xl text-gray-300 max-w-2xl mx-auto">
            Witness the raw beauty and untamed spirit of Tadoba through moments
            frozen in time
          </p>
        </header>

        <UniversalGallery
          rawImages={safariGalleryImages}
          galleryType="safari"
        />
      </div>
    </section>
  </div>

  <!-- Safari FAQ Section -->
  <section class="py-32 bg-gray-1">
    <div class="max-w-7xl mx-auto px-6">
      <header class="text-center mb-16">
        <div
          class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-8"
        >
          <span
            class="text-amber-400 text-sm font-medium tracking-widest uppercase"
            >Common Questions</span
          >
        </div>
        <h2 class="font-serif text-4xl md:text-6xl text-white mb-6">
          Safari <span class="text-amber-400">Essentials</span>
        </h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
          Everything you need to know about experiencing Tadoba's wilderness
          with complete confidence
        </p>
      </header>

      <div class="max-w-4xl mx-auto">
        <div class="space-y-4">
          <!-- FAQ Item 1 - Safari Arrangements -->
          <div
            class="group bg-gradient-to-br from-gray-800/60 to-gray-900/80 backdrop-blur-xl border border-gray-700/50 rounded-2xl overflow-hidden"
          >
            <button
              class="w-full text-left p-8 flex items-center justify-between rounded-2xl"
              data-faq-toggle
            >
              <div>
                <h3
                  class="text-xl font-semibold text-white mb-2 group-hover:text-amber-400 transition-colors duration-300"
                >
                  How do safari bookings work with my stay?
                </h3>
                <p class="text-gray-400 text-sm">
                  Seamless coordination • Expert planning • Premium experiences
                </p>
              </div>
              <Icon
                name="ph:caret-down-bold"
                class="w-6 h-6 text-amber-400 transition-transform duration-300 group-hover:rotate-180"
              />
