  const [corporateGallery, specialDeal] = await Promise.all([
    fetchWithRetry(() => fetchCorporateGallery()),
    fetchWithRetry(() => fetchSpecialDealData()),
  ]);
  data = { corporateGallery: corporateGallery || [], specialDeal };
} catch (err) {
