// Ultra-reliable API fetching with retry logic
async function fetchWithRetry(fetchFn, retries = 2) {
  for (let i = 0; i < retries; i++) {
    try {
      return await fetchFn();
    } catch (error) {
      if (i === retries - 1) throw error;
      await new Promise((resolve) => setTimeout(resolve, 1000));
    }
  }
}

// Enhanced image optimizer
async function optimizeImage(url, width, height, quality = 85) {
  if (!url) return null;
  try {
    const optimized = await getImage({
      src: url,
      width: width,
      height: height,
      format: "avif",
      quality: quality,
      fit: "cover",
      inferSize: true,
    });
    return optimized;
  } catch (error) {
    return { src: url };
  }
}

// Server-side data fetching
let data = { corporateGallery: [], specialDeal: null };
let error = null;

