---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { AstroSEO } from "astro-seo-plugin";
import GalleryGrid from "../components/GalleryGrid.astro";
import LoadMoreGallery from "../components/LoadMoreGallery.astro";
import GalleryModal from "../components/GalleryModal.astro";
import TestimonialsSection from "../components/TestimonialsSection.astro";
import AwardsSection from "../components/AwardsSection.astro";
import imageService from "../utils/ImageService.js"; // REMOVED processGalleryImages import
import { fetchAboutPage } from "../api.js";

// Server-side data fetching with error handling
let aboutData = null;
try {
  aboutData = await fetchAboutPage();
} catch (err) {
  console.error("Failed to load about data:", err);
  aboutData = {
    aboutPage: {},
    vibeGallery: { images: [] },
    guestGallery: { images: [] },
  };
}

const aboutPage = aboutData?.aboutPage || {};
const vibeGallery = aboutData?.vibeGallery || { images: [] };
const guestGallery = aboutData?.guestGallery || { images: [] };

// FIXED: Complete image processing with all required URLs (matching your working vibe page)
const processedVibeImages =
  vibeGallery?.images && vibeGallery.images.length > 0
    ? vibeGallery.images.map((item, index) => {
        const imageData = item.image || item;

        return {
          id: imageData.id,
          alt: imageData.alt || item.altText || `Limban vibe ${index + 1}`,
          width: imageData.width,
          height: imageData.height,
          processedUrls: {
            thumbnail: imageService.processImage(imageData, "galleryThumbnail"),
            gallery: imageService.processImage(imageData, "galleryLarge"),
            large: imageService.processImage(imageData, "galleryModal"),
            modal: imageService.processImage(imageData, "heroDesktop"),
          },
        };
      })
    : [];

const processedGuestImages =
  guestGallery?.images && guestGallery.images.length > 0
    ? guestGallery.images.map((item, index) => {
        const imageData = item.image || item;

        return {
          id: imageData.id,
          alt: imageData.alt || item.altText || `Guest moments ${index + 1}`,
          width: imageData.width,
          height: imageData.height,
          processedUrls: {
            thumbnail: imageService.processImage(imageData, "galleryThumbnail"),
            gallery: imageService.processImage(imageData, "galleryLarge"),
            large: imageService.processImage(imageData, "galleryModal"),
            modal: imageService.processImage(imageData, "heroDesktop"),
          },
        };
      })
    : [];

const processedTeamImages =
  aboutPage?.teamImages && aboutPage.teamImages.length > 0
    ? aboutPage.teamImages.map((item, index) => {
        const imageData = item.image || item;

        return {
          id: imageData.id,
          alt: imageData.alt || item.alt || `Team member ${index + 1}`,
          width: imageData.width,
          height: imageData.height,
          processedUrls: {
            thumbnail: imageService.processImage(imageData, "galleryThumbnail"),
            gallery: imageService.processImage(imageData, "galleryLarge"),
            large: imageService.processImage(imageData, "galleryModal"),
            modal: imageService.processImage(imageData, "heroDesktop"),
          },
        };
      })
    : [];

const heroImageData = aboutPage?.heroImage || null;
const philosophyImageData = aboutPage?.philosophyImage || null;
const foundersImageData = aboutPage?.foundersImage || null;

// Split for load more functionality
const initialVibeImages = processedVibeImages.slice(0, 12);
const remainingVibeImages = processedVibeImages.slice(12);

const initialGuestImages = processedGuestImages.slice(0, 12);
const remainingGuestImages = processedGuestImages.slice(12);

const initialTeamImages = processedTeamImages.slice(0, 12);
const remainingTeamImages = processedTeamImages.slice(12);

// FIXED: Simple image processing without complex context objects
const heroImageUrl = aboutPage?.heroImage
  ? imageService.processImage(aboutPage.heroImage, "heroDesktop", {
      quality: 80,
    })
  : "https://limban.com/img/about-hero.avif";

const philosophyImageUrl = aboutPage?.philosophyImage
  ? imageService.processImage(aboutPage.philosophyImage, "heroMobile", {
      quality: 80,
    })
  : "";

const foundersImageUrl = aboutPage?.foundersImage
  ? imageService.processImage(aboutPage.foundersImage, "subhero", {
      quality: 85,
    })
  : "";

const schemaImages = [
  heroImageUrl,
  philosophyImageUrl,
  foundersImageUrl,
  ...processedVibeImages.slice(0, 3).map((img) => img.processedUrls.large),
  ...processedGuestImages.slice(0, 2).map((img) => img.processedUrls.large),
  ...processedTeamImages.slice(0, 2).map((img) => img.processedUrls.large),
].filter(Boolean);
