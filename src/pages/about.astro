---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { AstroSEO } from "astro-seo-plugin";
import UniversalGallery from "../components/UniversalGallery.astro";
import GalleryModal from "../components/GalleryModal.astro";
import TestimonialsSection from "../components/TestimonialsSection.astro";
import AwardsSection from "../components/AwardsSection.astro";
import imageService from "../utils/ImageService.js";
import { fetchAboutPage } from "../api.js";

// Helper for Cloudinary JPG (schema)
const toCloudinaryJpg = (url: string) => {
  if (!url) return "";
  return `https://res.cloudinary.com/dfa5hhzej/image/fetch/w_1200,h_675,c_fill,q_85,f_jpg/${url}`;
};

// Server-side data fetching with error handling
let aboutData = null;
try {
  aboutData = await fetchAboutPage();
} catch (err) {
  console.error("Failed to load about data:", err);
  aboutData = {
    aboutPage: {},
    vibeGallery: { images: [] },
    guestGallery: { images: [] },
  };
}

const aboutPage = aboutData?.aboutPage || {};
const vibeGallery = aboutData?.vibeGallery || { images: [] };
const guestGallery = aboutData?.guestGallery || { images: [] };

// Display images (AVIF for users)
const heroImageUrl = aboutPage?.heroImage
  ? imageService.processImage(aboutPage.heroImage, "heroDesktop", {
      quality: 80,
    })
  : "https://limban.com/img/about-hero.avif";

const philosophyImageUrl = aboutPage?.philosophyImage
  ? imageService.processImage(aboutPage.philosophyImage, "heroMobile", {
      quality: 80,
    })
  : "";

const foundersImageUrl = aboutPage?.foundersImage
  ? imageService.processImage(aboutPage.foundersImage, "subhero", {
      quality: 85,
    })
  : "";

// Schema images (JPG for Google/OG/Twitter)
const schemaImages = [
  aboutPage?.heroImage?.url ? toCloudinaryJpg(aboutPage.heroImage.url) : "",
  aboutPage?.philosophyImage?.url
    ? toCloudinaryJpg(aboutPage.philosophyImage.url)
    : "",
  aboutPage?.foundersImage?.url
    ? toCloudinaryJpg(aboutPage.foundersImage.url)
    : "",
].filter(Boolean);

// Robust OG image with fallback
const ogImage =
  schemaImages[0] ||
  "https://res.cloudinary.com/dfa5hhzej/image/fetch/w_1200,h_675,c_fill,q_85,f_jpg/https://limban.com/img/limban-default-og.jpg";

// About page schema with enhanced image objects
const aboutPageSchema = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "@id": "https://limban.com/about#page",
  name: "About Limban Resort Tadoba - Where the Wild Meets the Soul",
  description:
    "Discover the philosophy behind Limban Resort - a luxury safari sanctuary crafted by visionary architects in the heart of Tadoba National Park.",
  url: "https://limban.com/about",
  image: schemaImages.map((img) => ({
    "@type": "ImageObject",
    url: img,
    width: 1200,
    height: 675,
  })),
  mainEntity: {
    "@type": "Hotel",
    "@id": "https://limban.com/#hotel",
    name: "Limban Resort",
  },
  about: {
    "@type": "Organization",
    "@id": "https://limban.com/#organization",
    name: "Limban Resort",
    alternateName: "Limban Safari Lodge",
    description:
      "A luxury safari sanctuary where architecture, wilderness, and soul converge. Crafted for those who seek meaning in nature, connection in simplicity, and magic in the moment.",
    slogan: "Where the Wild Meets the Soul",
    foundingDate: "2010",
    founder: [
      {
        "@type": "Person",
        name: "Amala Sheth",
        jobTitle: "Founder & Principal Architect",
        description:
          "Visionary architect whose revolutionary approach to sustainable luxury earned international recognition and redefined safari lodge design.",
        worksFor: {
          "@type": "Organization",
          name: "Metaphors Design",
          url: "http://www.metaphors-design.com/",
        },
        knowsAbout: [
          "Sustainable Architecture",
          "Luxury Resort Design",
          "Eco-Tourism",
        ],
        award: "International recognition for sustainable luxury design",
      },
      {
        "@type": "Person",
        name: "Anand Bhagat",
        jobTitle: "Founder & Principal Architect",
        description:
          "Architectural visionary dedicated to creating spaces that connect people with nature and conserve the wild.",
        worksFor: {
          "@type": "Organization",
          name: "Metaphors Design",
          url: "http://www.metaphors-design.com/",
        },
        knowsAbout: [
          "Sustainable Architecture",
          "Wildlife Conservation",
          "Eco-Tourism Design",
        ],
      },
    ],
  },
};
---

<link rel="preload" as="image" href={heroImageUrl} fetchpriority="high" />

<Layout
  title="About Limban Resort | Where the Wild Meets the Soul - Tadoba Safari Resort"
  description="Discover the philosophy behind Limban Resort - a luxury safari sanctuary crafted by visionary architects in the heart of Tadoba National Park. Experience where wilderness meets luxury."
  ogImage={ogImage}
  ogImageWidth={1200}
  ogImageHeight={675}
  ogType="website"
  ogUrl="https://limban.com/about"
>
  <AstroSEO slot="head" jsonLd={aboutPageSchema} />

  <div class="bg-gray-950 text-gray-100 selection:bg-gray-700">
    <!-- Hero Section -->
    <section
      class="relative min-h-screen flex items-center justify-center overflow-hidden"
    >
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-black/60 z-10"></div>
        {
          aboutPage?.heroImage && (
            <img
              src={heroImageUrl}
              alt="Limban Resort - Where wilderness meets luxury in Tadoba National Park"
              class="w-full h-full object-cover scale-105"
              fetchpriority="high"
            />
          )
        }
      </div>

      <div class="relative z-20 text-center max-w-5xl mx-auto px-6">
        <div class="space-y-8">
          <div
            class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-8"
          >
            <span
              class="text-amber-400 text-sm font-medium tracking-widest uppercase"
              >Since 2017</span
            >
          </div>
          <h1
            class="font-serif text-5xl md:text-7xl lg:text-8xl text-white mb-6 leading-none"
          >
            Where the Wild<br />
            <span class="text-amber-400">Meets the Soul</span>
          </h1>
          <p
            class="text-xl md:text-2xl text-gray-200 font-light leading-relaxed max-w-3xl mx-auto"
          >
            More than a destination - an awakening. A carefully crafted
            sanctuary where luxury, wilderness, and heritage converge in perfect
            harmony.
          </p>
          <div class="pt-8">
            <p class="text-2xl font-serif text-amber-400">Wildly Yours.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Breadcrumb Navigation -->
    <nav
      class="py-6 bg-gray-900/50 border-b border-gray-800"
      aria-label="Breadcrumb"
    >
      <div class="max-w-7xl mx-auto px-6">
        <ol class="flex items-center justify-center space-x-2 text-sm">
          <li>
            <a
              href="/"
              title="Return to Limban Resort homepage"
              class="text-gray-400 hover:text-amber-400 transition-colors duration-300 flex items-center"
            >
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path
                  d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                ></path>
              </svg>
              Home
            </a>
          </li>
          <li>
            <svg
              class="w-4 h-4 text-gray-600"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </li>
          <li>
            <span class="text-amber-400 font-medium">About</span>
          </li>
        </ol>
      </div>
    </nav>

    <!-- Philosophy Section -->
    <section class="py-32 bg-gray-0">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-20">
          <div
            class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-8"
          >
            <span
              class="text-amber-400 text-sm font-medium tracking-widest uppercase"
              >Our Philosophy</span
            >
          </div>
          <h2 class="font-serif text-4xl md:text-6xl text-white mb-8">
            A Sanctuary for the Soul
          </h2>
          <p
            class="text-xl text-gray-300 font-light leading-relaxed max-w-4xl mx-auto"
          >
            Tucked within the lush, untamed landscapes of Tadoba, Limban is more
            than a destination—it's an experience, a retreat, and a deep exhale.
            Crafted for those who seek meaning in nature, connection in
            simplicity, and magic in the moment.
          </p>
        </div>

        {
          philosophyImageUrl && (
            <div class="mb-20">
              <div class="relative aspect-[21/9] bg-gray-800 rounded-2xl overflow-hidden">
                <img
                  src={philosophyImageUrl}
                  alt="Limban Resort philosophy - sustainable luxury safari lodge architecture"
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-700"
                  loading="lazy"
                />
              </div>
            </div>
          )
        }

        <div class="text-center">
          <p
            class="text-2xl md:text-xl text-white font-light leading-relaxed max-w-5xl mx-auto"
          >
            From ethical safaris that trace the paths of tigers to intimate
            celebrations beneath ancient trees, Limban is a call back to what's
            real. We celebrate life's raw beauty, honour the wild with grace,
            and open our arms to those who want to experience something deeper,
            something unforgettable.
          </p>
        </div>
      </div>
    </section>

    <!-- The Architects Section -->
    <section class="py-32 bg-gray-1">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-20">
          <div
            class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-8"
          >
            <span
              class="text-amber-400 text-sm font-medium tracking-widest uppercase"
              >The Architects</span
            >
          </div>
          <h2 class="font-serif text-4xl md:text-6xl text-white mb-8">
            Amala Sheth and Anand Bhagat
          </h2>
          <p class="text-xl text-gray-300 font-light max-w-4xl mx-auto">
            Founders of Metaphors, one of India's leading architecture
            practices. Limban is their vision rendered in stone, steel, and
            living systems. Human hospitality operates within ecological
            boundaries here.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-start">
          <!-- IMAGE -->
          <div class="lg:col-span-5">
            {
              foundersImageUrl && (
                <div class="relative aspect-[2/3] bg-gray-800 rounded-xl overflow-hidden">
                  <img
                    src={foundersImageUrl}
                    alt="Amala Sheth and Anand Bhagat, founders of Metaphors Design and Limban Resort"
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                </div>
              )
            }
          </div>

          <!-- TEXT -->
          <div class="lg:col-span-7 space-y-12">
            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 mt-1">
                  <Icon
                    name="mdi:office-building"
                    class="w-6 h-6 text-amber-400"
                  />
                </div>
                <div>
                  <p
                    class="text-amber-400 font-bold text-sm uppercase tracking-wider mb-2"
                  >
                    Their Practice
                  </p>
                  <p class="text-gray-200 leading-relaxed">
                    Amala Sheth and Anand Bhagat founded Metaphors in Pune in
                    1989. Over three decades, they have designed landmark
                    corporate spaces, institutional campuses, and regenerative
                    projects across India. Their work centres on one principle:
                    buildings enhance their environment. <a
                      href="http://www.metaphors-design.com/"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="hover:text-amber-600 text-amber-400"
                    >
                      Visit Metaphors Design
                    </a>.
                  </p>
                </div>
              </div>
            </div>

            <div
              class="space-y-6 bg-amber-400/5 border border-amber-400/20 rounded-xl p-8"
            >
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 mt-1">
                  <Icon name="mdi:leaf-circle" class="w-6 h-6 text-amber-400" />
                </div>
                <div>
                  <p
                    class="text-amber-400 font-bold text-sm uppercase tracking-wider mb-3"
                  >
                    Why Limban
                  </p>
                  <p class="text-gray-200 leading-relaxed mb-4">
                    Limban is where their architectural philosophy meets
                    ecological reality. They designed Limban Resort to operate
                    within the life cycles of Tadoba's forest. Every system here
                    — energy, waste, guest movement, staff presence — is
                    calibrated around what the ecosystem can sustain
                    comfortably.
                  </p>
                  <p class="text-gray-200 leading-relaxed">
                    The rotations we implement, the materials we use, the way we
                    structure guest experiences are built on actual ecological
                    knowledge and site constraints. Luxury, and the instant
                    feeling of comfort happens because we extended the limits of
                    what's possible within the limits.
                  </p>
                </div>
              </div>
            </div>

            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 mt-1">
                  <Icon name="mdi:sprout" class="w-6 h-6 text-amber-400" />
                </div>
                <div>
                  <p
                    class="text-amber-400 font-bold text-sm uppercase tracking-wider mb-3"
                  >
                    Their Commitment
                  </p>
                  <p class="text-gray-200 leading-relaxed">
                    Together, Amala and Anand steward Limban as a working
                    laboratory for regenerative design. Staff practices,
                    conservation strategies, material sourcing, and guest
                    education flow from their conviction that hospitality
                    deepens ecological understanding. This resort is
                    architecture in service of the wild.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-32 bg-gray-0">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-20">
          <div
            class="inline-block px-6 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-8"
          >
            <span
              class="text-amber-400 text-sm font-medium tracking-widest uppercase"
              >How We Live Our Values</span
            >
          </div>
          <h2 class="font-serif text-4xl md:text-6xl text-white mb-8">
            Beyond Words. Into Action.
          </h2>
          <p
            class="text-xl text-gray-300 font-light leading-relaxed max-w-4xl mx-auto"
          >
            We don't believe in slogans. Here's what we actually do.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
          <!-- PEOPLE -->
          <div class="group">
            <div
              class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-xl border border-gray-700 rounded-3xl p-8 hover:border-amber-400/30 transition-all duration-500 h-full flex flex-col"
            >
              <div class="mb-6">
                <div class="inline-block p-3 bg-amber-400/10 rounded-xl mb-4">
                  <Icon
                    name="ion:people-sharp"
                    class="w-8 h-8 text-amber-400"
                  />
                </div>
                <h3 class="text-2xl font-serif text-white">Our People</h3>
              </div>
              <div class="space-y-4 flex-grow">
                <p class="text-gray-300 leading-relaxed">
                  Our team lives in the Tadoba region. We invest in ongoing
                  training, competitive wages, and genuine career growth — not
                  seasonal labour.
                </p>
                <ul class="space-y-3 text-gray-300 text-sm">
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-amber-400 mr-3 mt-0.5 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                    <span
                      >Annual skills training for all staff in guiding,
                      hospitality, and conservation practices</span
                    >
                  </li>
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-amber-400 mr-3 mt-0.5 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                    <span
                      >Fair wages designed to support families and local
                      economies</span
                    >
                  </li>
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-amber-400 mr-3 mt-0.5 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                    <span>Healthcare coverage extended to staff families</span>
                  </li>
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-amber-400 mr-3 mt-0.5 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                    <span
                      >Community scholarship program supporting local children's
                      education</span
                    >
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <!-- PLANET -->
          <div class="group">
            <div
              class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-xl border border-gray-700 rounded-3xl p-8 hover:border-amber-400/30 transition-all duration-500 h-full flex flex-col"
            >
              <div class="mb-6">
                <div class="inline-block p-3 bg-amber-400/10 rounded-xl mb-4">
                  <Icon name="ion:leaf-sharp" class="w-8 h-8 text-amber-400" />
                </div>
                <h3 class="text-2xl font-serif text-white">Our Planet</h3>
              </div>
              <div class="space-y-4 flex-grow">
                <p class="text-gray-300 leading-relaxed">
                  Conservation isn't marketing - it's infrastructure. We reduce
                  impact and actively restore the ecosystem we inhabit.
                </p>
                <ul class="space-y-3 text-gray-300 text-sm">
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-amber-400 mr-3 mt-0.5 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                    <span
                      >Renewable energy soon powering the entire resort through
                      solar and biogas systems</span
                    >
                  </li>
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-amber-400 mr-3 mt-0.5 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                    <span
                      >Zero single-use plastic on property, with composting and
                      recycling throughout</span
                    >
                  </li>
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-amber-400 mr-3 mt-0.5 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                    <span
                      >Active reforestation in partnership with the local forest
                      department</span
                    >
                  </li>
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-amber-400 mr-3 mt-0.5 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                    <span
                      >On-site wastewater treatment ensuring no discharge to
                      local waterways</span
                    >
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <!-- PURPOSE -->
          <div class="group">
            <div
              class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-xl border border-gray-700 rounded-3xl p-8 hover:border-amber-400/30 transition-all duration-500 h-full flex flex-col"
            >
              <div class="mb-6">
                <div class="inline-block p-3 bg-amber-400/10 rounded-xl mb-4">
                  <Icon
                    name="ion:compass-sharp"
                    class="w-8 h-8 text-amber-400"
                  />
                </div>
                <h3 class="text-2xl font-serif text-white">Our Purpose</h3>
              </div>
              <div class="space-y-4 flex-grow">
                <p class="text-gray-300 leading-relaxed">
                  We exist to prove that luxury and conservation strengthen each
                  other — not compete. Every guest leaves more committed to the
                  wild.
                </p>
                <ul class="space-y-3 text-gray-300 text-sm">
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-amber-400 mr-3 mt-0.5 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                    <span
                      >Expert naturalist guides trained in tiger behaviour and
                      ethical wildlife photography</span
                    >
                  </li>
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-amber-400 mr-3 mt-0.5 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
