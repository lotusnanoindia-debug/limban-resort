<script>
  // Parallax effect for hero section
  window.addEventListener("scroll", () => {
    const scrolled = window.pageYOffset;
    const hero = document.querySelector("section img");
    if (hero) {
      hero.style.transform = `translateY(${scrolled * 0.5}px) scale(1.05)`;
    }
  });

  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener("click", function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute("href"));
      if (target) {
        target.scrollIntoView({ behavior: "smooth" });
      }
    });
  });

  // Intersection Observer for fade-in animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: "0px 0px -50px 0px",
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = "1";
        entry.target.style.transform = "translateY(0)";
      }
    });
  }, observerOptions);

  // Observe elements for animation
  document.querySelectorAll("section > div").forEach((el) => {
    el.style.opacity = "0";
    el.style.transform = "translateY(30px)";
    el.style.transition = "opacity 0.8s ease, transform 0.8s ease";
    observer.observe(el);
  });
</script>


<script define:vars={{ aboutData }}>
  // Space descriptions

  // Prepare gallery images
  const spaceGalleryImages = aboutData.spaceImages?.map((space, index) => ({
    url: space.optimisedLarge || space.url,
    thumbnail: space.optimisedThumbnail || space.url,
    alt: space.alt || space.title || `Come and Experience The Limban Signature Space`,
    title: space.title || `Come and Experience The Limban Signature Space`,
    caption: space.alt || ''
  })) || [];

  let spacesCurrentIndex = 0;
  const spacesModal = document.getElementById('spaces-gallery-modal');
  const spacesModalImage = document.getElementById('spaces-modal-image');
  const spacesImageTitle = document.getElementById('spaces-image-title');
  const spacesImageCaption = document.getElementById('spaces-image-caption');
  const spacesCloseBtn = document.getElementById('close-spaces-gallery');
  const spacesPrevBtn = document.getElementById('spaces-prev-image');
  const spacesNextBtn = document.getElementById('spaces-next-image');
  const spacesGalleryItems = document.querySelectorAll('[data-gallery-index]');
  const spacesThumbnails = document.querySelectorAll('.spaces-thumbnail-nav');

  function openSpacesGallery(index) {
    spacesCurrentIndex = index;
    updateSpacesImage();
    spacesModal.classList.remove('hidden');
    spacesModal.classList.add('flex');
    document.body.style.overflow = 'hidden';
  }

  function closeSpacesGallery() {
    spacesModal.classList.add('hidden');
    spacesModal.classList.remove('flex');
    document.body.style.overflow = 'auto';
  }

  function updateSpacesImage() {
    const image = spaceGalleryImages[spacesCurrentIndex];
    if (image) {
      spacesModalImage.src = image.url;
      spacesModalImage.alt = image.alt;
      spacesImageTitle.textContent = image.title;
      spacesImageCaption.textContent = image.caption;
      
      // Update thumbnail active state
      spacesThumbnails.forEach((thumb, index) => {
        if (index === spacesCurrentIndex) {
          thumb.classList.add('border-white');
        } else {
          thumb.classList.remove('border-white');
        }
      });
    }
  }

  function nextSpacesImage() {
    spacesCurrentIndex = (spacesCurrentIndex + 1) % spaceGalleryImages.length;
    updateSpacesImage();
  }

  function prevSpacesImage() {
    spacesCurrentIndex = (spacesCurrentIndex - 1 + spaceGalleryImages.length) % spaceGalleryImages.length;
    updateSpacesImage();
  }

  // Event listeners
  spacesGalleryItems.forEach((item) => {
    item.addEventListener('click', () => {
      openSpacesGallery(parseInt(item.dataset.galleryIndex));
    });
  });

  spacesThumbnails.forEach((thumb) => {
    thumb.addEventListener('click', () => {
      spacesCurrentIndex = parseInt(thumb.dataset.index);
      updateSpacesImage();
    });
  });

  spacesCloseBtn.addEventListener('click', closeSpacesGallery);
  spacesPrevBtn.addEventListener('click', prevSpacesImage);
  spacesNextBtn.addEventListener('click', nextSpacesImage);

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (spacesModal.classList.contains('flex')) {
      if (e.key === 'Escape') closeSpacesGallery();
      if (e.key === 'ArrowLeft') prevSpacesImage();
      if (e.key === 'ArrowRight') nextSpacesImage();
    }
  });

  // Close on backdrop click
  spacesModal.addEventListener('click', (e) => {
    if (e.target === spacesModal) closeSpacesGallery();
  });
</script>