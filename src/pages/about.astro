---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { AstroSEO } from "astro-seo-plugin";
import UniversalGallery from "../components/UniversalGallery.astro";
import GalleryModal from "../components/GalleryModal.astro";
import TestimonialsSection from "../components/TestimonialsSection.astro";
import AwardsSection from "../components/AwardsSection.astro";
import imageService from "../utils/ImageService.js";
import { fetchAboutPage } from "../api.js";

const toCloudinaryJpg = (url: string) => {
  if (!url) return "";
  return `https://res.cloudinary.com/dfa5hhzej/image/fetch/w_1200,h_675,c_fill,q_85,f_jpg/${url}`;
};

let aboutData = null;
try {
  aboutData = await fetchAboutPage();
} catch (err) {
  console.error("Failed to load about data:", err);
  aboutData = {
    aboutPage: {},
    vibeGallery: { images: [] },
    guestGallery: { images: [] },
  };
}

const aboutPage = aboutData?.aboutPage || {};
const vibeGallery = aboutData?.vibeGallery || { images: [] };
const guestGallery = aboutData?.guestGallery || { images: [] };

const heroImageUrl = aboutPage?.heroImage
  ? imageService.processImage(aboutPage.heroImage, "heroDesktop", {
      quality: 80,
    })
  : "https://limban.com/img/about-hero.avif";

const philosophyImageUrl = aboutPage?.philosophyImage
  ? imageService.processImage(aboutPage.philosophyImage, "heroMobile", {
      quality: 80,
    })
  : "";

const foundersImageUrl = aboutPage?.foundersImage
  ? imageService.processImage(aboutPage.foundersImage, "subhero", {
      quality: 85,
    })
  : "";

const schemaImages = [
  aboutPage?.heroImage?.url ? toCloudinaryJpg(aboutPage.heroImage.url) : "",
  aboutPage?.philosophyImage?.url
    ? toCloudinaryJpg(aboutPage.philosophyImage.url)
    : "",
  aboutPage?.foundersImage?.url
    ? toCloudinaryJpg(aboutPage.foundersImage.url)
    : "",
].filter(Boolean);

const ogImage =
  schemaImages[0] ||
  "https://res.cloudinary.com/dfa5hhzej/image/fetch/w_1200,h_675,c_fill,q_85,f_jpg/https://limban.com/img/limban-default-og.jpg";

const aboutPageSchema = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "@id": "https://limban.com/about#page",
  name: "About Limban Resort Tadoba | Luxury Safari Lodge in Tiger Reserve",
  description:
    "Limban is a boutique luxury safari resort in Tadoba where guests arrive as strangers and leave as friends. Designed by India's leading architects, family-run with uncompromising standards.",
  url: "https://limban.com/about",
  image: schemaImages.map((img) => ({
    "@type": "ImageObject",
    url: img,
    width: 1200,
    height: 675,
  })),
  mainEntity: {
    "@type": "Hotel",
    "@id": "https://limban.com/#hotel",
    name: "Limban Resort",
  },
  about: {
    "@type": "Organization",
    "@id": "https://limban.com/#organization",
    name: "Limban Resort",
    alternateName: "Limban Safari Resort Tadoba",
    description:
      "A luxury safari resort in Tadoba National Park offering eco-conscious hospitality, conservation-focused wildlife experiences, and genuine human connection. Family-run, architecture-led, uncompromising on care.",
    foundingDate: "2017",
    founder: [
      {
        "@type": "Person",
        name: "Anand Bhagat",
        jobTitle: "Founder & Principal Architect",
        worksFor: {
          "@type": "Organization",
          name: "Metaphors Design",
          url: "http://www.metaphors-design.com/",
        },
      },
      {
        "@type": "Person",
        name: "Amala Sheth",
        jobTitle: "Founder & Principal Architect",
        worksFor: {
          "@type": "Organization",
          name: "Metaphors Design",
          url: "http://www.metaphors-design.com/",
        },
      },
    ],
  },
};
---

<link rel="preload" as="image" href={heroImageUrl} fetchpriority="high" />

<Layout
  title="About Limban Resort Tadoba | Boutique Luxury Safari Lodge & Tiger Reserve"
  description="Limban is a family-run luxury safari resort in Tadoba where you arrive as a stranger and leave as a friend. Boutique suites, conservation-focused, and uncompromising on care."
  ogImage={ogImage}
  ogImageWidth={1200}
  ogImageHeight={675}
  ogType="website"
  ogUrl="https://limban.com/about"
>
  <AstroSEO slot="head" jsonLd={aboutPageSchema} />

  <div class="bg-gray-950 text-gray-100 selection:bg-gray-700">
    <!-- Hero Section -->
    <section
      class="relative min-h-screen flex items-center justify-center overflow-hidden"
    >
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-black/60 z-10"></div>
        {
          aboutPage?.heroImage && (
            <img
              src={heroImageUrl}
              alt="Limban Resort Tadoba - Luxury safari lodge in the heart of Tadoba Tiger Reserve"
              class="w-full h-full object-cover scale-105"
              fetchpriority="high"
            />
          )
        }
      </div>

      <div class="relative z-20 text-center max-w-5xl mx-auto px-6">
        <div class="space-y-8">
          <h1
            class="font-serif text-5xl md:text-7xl lg:text-8xl text-white mb-6 leading-tight"
          >
            You'll know it<br />
            <span class="text-amber-400">the moment you arrive.</span>
          </h1>
          <p
            class="text-xl md:text-2xl text-gray-200 font-light leading-relaxed max-w-3xl mx-auto"
          >
            It’s not the design. It’s not the safaris. It’s not the comfort.
            <br />
            It’s something else entirely.
          </p>
        </div>
      </div>
    </section>

    <!-- Breadcrumb Navigation -->
    <nav
      class="py-6 bg-gray-900/50 border-b border-gray-800"
      aria-label="Breadcrumb"
    >
      <div class="max-w-7xl mx-auto px-6">
        <ol class="flex items-center justify-center space-x-2 text-sm">
          <li>
            <a
              href="/"
              title="Return to Limban Resort homepage"
              class="text-gray-400 hover:text-amber-400 transition-colors duration-300 flex items-center"
            >
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path
                  d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                ></path>
              </svg>
              Home
            </a>
          </li>
          <li>
            <svg
              class="w-4 h-4 text-gray-600"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </li>
          <li>
            <span class="text-amber-400 font-medium">About</span>
          </li>
        </ol>
      </div>
    </nav>

    <!-- What Actually Happens Here -->
    <section class="py-32 bg-gray-0">
      <div class="max-w-5xl mx-auto px-6">
        <div class="space-y-16">
          <!-- Core Hook: Redesigned for Clarity -->
          <div
            class="bg-gradient-to-br from-amber-400/5 via-gray-900/50 to-gray-950/50 border border-amber-400/20 rounded-2xl p-12 space-y-6"
          >
            <div class="space-y-4">
              <p class="text-base uppercase tracking-widest text-amber-400">
                Why People Return
              </p>
              <h2 class="font-serif text-4xl md:text-5xl text-white">
                Strangers Become Friends Here
              </h2>
            </div>
            <p class="text-lg text-gray-200 leading-relaxed">
              Those who stayed at Limban before don't return for the rooms,
              safaris, or comfort. They return because they <span
                class="text-amber-400 font-semibold"
              >
                left as someone's friend.</span
              > And that happens when you're genuinely cared for — without agenda,
              without extraction, without performance. Just warm people genuinely
              interested in who you are, why you're here, and what matters to you.
            </p>
            <p class="text-gray-300 leading-relaxed">
              That becomes the texture of your stay. Your guide catches it. The
              kitchen catches it. The person who brings your coffee catches it.
              It spreads. And when you leave, you carry it with you into dinner
              conversations with people you love.
            </p>
          </div>

          <!-- Three Core Reasons: Better Visual Design -->
          <div class="space-y-6">
            <p class="text-sm uppercase tracking-widest text-amber-400 px-2">
              Here's the secret
            </p>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <!-- Your Guide Knows -->
              <div
                class="group bg-gray-900/50 border border-gray-700 rounded-xl p-8 hover:border-amber-400/30 transition-all duration-500 space-y-4"
              >
                <div class="space-y-2">
                  <div class="inline-block p-2 bg-amber-400/10 rounded-lg">
                    <Icon
                      name="ion:compass-sharp"
                      class="w-5 h-5 text-amber-400"
                    />
                  </div>
                  <h3 class="font-serif text-2xl text-white">
                    Your Guide Knows the Forest
                  </h3>
                </div>
                <p class="text-gray-300 text-sm leading-relaxed">
                  Not because he read about it. Because he lives in it. Which
                  tiger uses which trail. Where the deer water at dawn. Why the
                  monkeys scatter at dusk. That <a
                    href="/vibe#safaris"
                    class="text-amber-400 hover:underline"
                    >lived knowledge—not learned from a manual—</a
                  > changes how a safari feels. It becomes real.
                </p>
              </div>

              <!-- Wilderness Moves People -->
              <div
                class="group bg-gray-900/50 border border-gray-700 rounded-xl p-8 hover:border-amber-400/30 transition-all duration-500 space-y-4"
              >
                <div class="space-y-2">
                  <div class="inline-block p-2 bg-amber-400/10 rounded-lg">
                    <Icon
                      name="ion:leaf-sharp"
                      class="w-5 h-5 text-amber-400"
                    />
                  </div>
                  <h3 class="font-serif text-2xl text-white">
                    Tigers will Move you
                  </h3>
                </div>
                <p class="text-gray-300 text-sm leading-relaxed">
                  When you're 15 metres from 250 kilos of raw nature and grace,
                  something inside you moves you. <span class="text-amber-400"
                    >Internal noise quiets. You are simply awestruck.</span
                  > Corporate teams solve in a couple of days what sterile city offices
                  couldn't crack in months. Families reconnect. Couples create bonding
                  memories. That's the sheer power of wilderness.
                </p>
              </div>

              <!-- Everything Fits -->
              <div
                class="group bg-gray-900/50 border border-gray-700 rounded-xl p-8 hover:border-amber-400/30 transition-all duration-500 space-y-4"
              >
                <div class="space-y-2">
                  <div class="inline-block p-2 bg-amber-400/10 rounded-lg">
                    <Icon
                      name="ion:checkmark-circle-outline"
                      class="w-5 h-5 text-amber-400"
                    />
                  </div>
                  <h3 class="font-serif text-2xl text-white">
                    Everything Is Thought Through - Naturally
                  </h3>
                </div>
                <p class="text-gray-300 text-sm leading-relaxed">
                  The design. The comfort. The rhythm of the day. <span
                    class="text-amber-400"
                    >Every surface is placed with intention.</span
                  > So you don't think about the architecture — you instantly feel
                  comfortable. Explore our <a
                    href="/rooms"
                    class="text-amber-400 hover:underline">boutique suites</a
                  > to see for yourself.
                </p>
              </div>
            </div>
          </div>

          <!-- The Lasting Thing -->
          <div
            class="bg-amber-400/5 border border-amber-400/20 rounded-2xl p-8 md:p-10 text-center space-y-4"
          >
            <p class="text-lg text-gray-200 leading-relaxed">
              But the thing that stays with you after you leave is this: the
              feeling of being genuinely welcomed. Of being seen. Of belonging,
              briefly, to a place where you've made lasting memories.
            </p>
            <p class="text-lg text-amber-400 font-light italic">
              You will spend months telling others about your Limban experience.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Moments Made at Limban -->
    <section class="py-32 bg-gray-1">
      <div class="max-w-7xl mx-auto px-6">
        <header class="text-center mb-16">
          <h2 class="font-serif text-4xl md:text-6xl text-white mb-6">
            Moments Made Here
          </h2>
          <p class="text-lg text-gray-300 max-w-2xl mx-auto">
            Real guests. Real connections. Real wilderness experiences at
            Limban's luxury safari resort in Tadoba.
          </p>
          <a href="/vibe#guest-gallery" class="cta-link-sm"
            >See All Guest Moments &rarr;</a
          >
        </header>

        <UniversalGallery rawImages={guestGallery.images} galleryType="guest" />
      </div>
    </section>

    <!-- The Vibe -->
    <section class="py-32 bg-gray-0">
      <div class="max-w-7xl mx-auto px-6">
        <header class="text-center mb-16">
          <h2 class="font-serif text-4xl md:text-6xl text-white mb-6">
            How It Feels
          </h2>
          <p class="text-lg text-gray-300 max-w-2xl mx-auto">
            From dawn to dusk. The vibe of a place designed in harmony with the
            wild.
          </p>
          <a href="/vibe" class="cta-link-sm">Explore the Limban Vibe &rarr;</a>
        </header>

        <UniversalGallery rawImages={vibeGallery.images} galleryType="vibe" />
      </div>
    </section>

    <!-- The People Behind This: Metaphors Link -->
    <section class="py-32 bg-gray-1">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center">
          <!-- IMAGE (Left) -->
          <div class="lg:col-span-5">
            {
              foundersImageUrl && (
                <div class="relative aspect-[2/3] bg-gray-800 rounded-xl overflow-hidden">
                  <img
                    src={foundersImageUrl}
                    alt="Anand Bhagat and Amala Sheth, founders of Metaphors Design and Limban Resort Tadoba"
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                </div>
              )
            }
          </div>

          <!-- TEXT (Right) -->
          <div class="lg:col-span-7 space-y-8">
            <div class="space-y-4">
              <p class="text-sm uppercase tracking-widest text-amber-400">
                The Founders
              </p>
              <h3 class="font-serif text-3xl md:text-4xl text-white">
                Anand Bhagat & Amala Sheth
              </h3>
              <p class="text-lg text-gray-200 leading-relaxed">
                Pune based Architects, who need little introduction. Builders of
                India's landmark corporate and private spaces, institutional
                campuses, and regenerative projects for over 30 years through <a
                  href="http://www.metaphors-design.com/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-amber-400 hover:text-amber-300 underline"
                  >Metaphors Design</a
                >.
              </p>
              <p class="text-lg text-gray-200 leading-relaxed">
                Back in 2010, they asked a different question: <span
                  class="text-amber-400"
                >
                  What if a place could enhance its ecosystem instead of
                  extracting from it?</span
                >
              </p>
              <p class="text-lg text-gray-200 leading-relaxed">
                Limban is their answer — a philosophy woven into every detail,
                where comfort and conservation are one. That story continues not
                in blueprints, but the experiences you take home from Limban.
                Your story is Limban's real legacy.
              </p>
            </div>

            <div
              class="bg-amber-400/5 border border-amber-400/20 rounded-xl p-6 space-y-3"
            >
              <p class="text-sm uppercase tracking-wider text-amber-400">
                Family-Run. Uncompromising.
              </p>
              <p class="text-gray-200 leading-relaxed">
                People who live here. Who know Tadoba. Who understand that
                hospitality is a conversation, not a transaction. That warmth is
                not taught or a mask — it's genuine interest in who you are and
                what brings you here.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- The Team Gallery -->
    <section class="py-32 bg-gray-0">
      <div class="max-w-7xl mx-auto px-6">
        <header class="text-center mb-16">
          <h2 class="font-serif text-4xl md:text-6xl text-white mb-6">
            The People Behind Limban
          </h2>
          <p class="text-lg text-gray-300 max-w-2xl mx-auto">
            Guides. Chefs. Naturalists. Keepers. Tadoba's own, dedicated to your
            experience and to the wild.
          </p>
          <a href="/vibe#team-gallery" class="cta-link-sm"
            >Meet the Full Team &rarr;</a
          >
        </header>

        <UniversalGallery rawImages={aboutPage.teamImages} galleryType="team" />
      </div>
    </section>

    <!-- What We Actually Do: Redesigned Section -->
    <section class="py-32 bg-gray-1">
      <div class="max-w-7xl mx-auto px-6">
        <div class="space-y-16">
          <!-- Header -->
          <div class="text-center space-y-4">
            <p class="text-sm uppercase tracking-widest text-amber-400">
              How We Operate
            </p>
            <h2 class="font-serif text-4xl md:text-5xl text-white">
              What We Actually Do
            </h2>
            <p class="text-lg text-gray-300 max-w-3xl mx-auto">
              We measure what matters. We improve what doesn't work. We share
              both wins and challenges. That's accountability. That's
              responsible hospitality.
            </p>
          </div>

          <!-- Three Pillars: Better Visual Design -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- OUR PEOPLE -->
            <div class="flex">
              <div
                class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 border border-gray-700 rounded-2xl p-8 space-y-6 flex flex-col"
              >
                <div class="space-y-3">
                  <div class="inline-block p-3 bg-amber-400/10 rounded-lg">
                    <Icon
                      name="ion:people-sharp"
                      class="w-6 h-6 text-amber-400"
                    />
                  </div>
                  <h3 class="font-serif text-2xl text-white">Our People</h3>
                  <p class="text-sm text-gray-400">
                    Staff aren't seasonal. They're permanent, trained, and part
                    of the Limban family and the Tadoba community. <a
                      href="/contact"
                      class="text-amber-400 hover:underline">Contact us</a
                    > to learn more.
                  </p>
                </div>

                <div class="space-y-3 pt-4 border-t border-gray-700">
                  <div class="flex items-start gap-3">
                    <Icon
                      name="ion:checkmark-circle"
                      class="w-5 h-5 text-amber-400 flex-shrink-0 mt-0.5"
                    />
                    <span class="text-gray-300 text-sm">
                      Annual training in guiding, hospitality, conservation
                    </span>
                  </div>
                  <div class="flex items-start gap-3">
                    <Icon
                      name="ion:checkmark-circle"
                      class="w-5 h-5 text-amber-400 flex-shrink-0 mt-0.5"
                    />
                    <span class="text-gray-300 text-sm">
                      Fair wages supporting families and local economies
                    </span>
                  </div>
                  <div class="flex items-start gap-3">
                    <Icon
                      name="ion:checkmark-circle"
                      class="w-5 h-5 text-amber-400 flex-shrink-0 mt-0.5"
                    />
                    <span class="text-gray-300 text-sm">
                      Healthcare extended to their families
                    </span>
                  </div>
                  <div class="flex items-start gap-3">
                    <Icon
                      name="ion:checkmark-circle"
                      class="w-5 h-5 text-amber-400 flex-shrink-0 mt-0.5"
                    />
                    <span class="text-gray-300 text-sm">
                      Community scholarships for local children
                    </span>
                  </div>
                </div>
              </div>
            </div>

            <!-- OUR PLANET -->
            <div class="flex">
              <div
                class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 border border-gray-700 rounded-2xl p-8 space-y-6 flex flex-col"
              >
                <div class="space-y-3">
                  <div class="inline-block p-3 bg-amber-400/10 rounded-lg">
                    <Icon
                      name="ion:leaf-sharp"
                      class="w-6 h-6 text-amber-400"
                    />
                  </div>
                  <h3 class="font-serif text-2xl text-white">Our Planet</h3>
                  <p class="text-sm text-gray-400">
                    Conservation isn't a marketing gimmik at Limban. It's built
                    into who we are and how we operate.
                  </p>
                </div>

                <div class="space-y-3 pt-4 border-t border-gray-700">
                  <div class="flex items-start gap-3">
                    <Icon
                      name="ion:checkmark-circle"
                      class="w-5 h-5 text-amber-400 flex-shrink-0 mt-0.5"
                    />
                    <span class="text-gray-300 text-sm">
                      Soon 100% Solar and biogas powering the resort
                    </span>
                  </div>
                  <div class="flex items-start gap-3">
                    <Icon
                      name="ion:checkmark-circle"
                      class="w-5 h-5 text-amber-400 flex-shrink-0 mt-0.5"
                    />
                    <span class="text-gray-300 text-sm">
                      Zero single-use plastic, on-site composting
                    </span>
                  </div>
                  <div class="flex items-start gap-3">
                    <Icon
                      name="ion:checkmark-circle"
                      class="w-5 h-5 text-amber-400 flex-shrink-0 mt-0.5"
                    />
                    <span class="text-gray-300 text-sm">
                      Active reforestation with forest department
                    </span>
                  </div>
                  <div class="flex items-start gap-3">
                    <Icon
                      name="ion:checkmark-circle"
                      class="w-5 h-5 text-amber-400 flex-shrink-0 mt-0.5"
                    />
                    <span class="text-gray-300 text-sm">
                      Wastewater treatment, zero discharge
                    </span>
                  </div>
                </div>
              </div>
            </div>

            <!-- OUR PURPOSE -->
            <div class="flex">
              <div
                class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 border border-gray-700 rounded-2xl p-8 space-y-6 flex flex-col"
              >
                <div class="space-y-3">
                  <div class="inline-block p-3 bg-amber-400/10 rounded-lg">
                    <Icon
                      name="ion:compass-sharp"
                      class="w-6 h-6 text-amber-400"
                    />
                  </div>
                  <h3 class="font-serif text-2xl text-white">Our Purpose</h3>
                  <p class="text-sm text-gray-400">
                    Every guest leaves understanding tigers, habitat, and why
                    conservation matters.
                  </p>
                </div>

                <div class="space-y-3 pt-4 border-t border-gray-700">
                  <div class="flex items-start gap-3">
                    <Icon
                      name="ion:checkmark-circle"
                      class="w-5 h-5 text-amber-400 flex-shrink-0 mt-0.5"
                    />
                    <span class="text-gray-300 text-sm">
                      Expert guides trained in tiger behaviour and ethical
                      wildlife photography
                    </span>
                  </div>
                  <div class="flex items-start gap-3">
                    <Icon
                      name="ion:checkmark-circle"
                      class="w-5 h-5 text-amber-400 flex-shrink-0 mt-0.5"
                    />
                    <span class="text-gray-300 text-sm">
                      Safari rotations designed to protect tiger territories
                    </span>
                  </div>
                  <div class="flex items-start gap-3">
                    <Icon
                      name="ion:checkmark-circle"
                      class="w-5 h-5 text-amber-400 flex-shrink-0 mt-0.5"
                    />
                    <span class="text-gray-300 text-sm">
                      Annual contributions to Tadoba wildlife research
                    </span>
                  </div>
                  <div class="flex items-start gap-3">
                    <Icon
                      name="ion:checkmark-circle"
                      class="w-5 h-5 text-amber-400 flex-shrink-0 mt-0.5"
                    />
                    <span class="text-gray-300 text-sm">
                      Every interaction deepens conservation understanding
                    </span>
                  </div>
                </div>
              </div>
