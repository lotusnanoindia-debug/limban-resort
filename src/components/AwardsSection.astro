---
const awards = [
  {
    logo: "/tripadvisor.png",
    alt: "TripAdvisor 4.9/5.0, Travellers' Choice 2023",
    title: "TripAdvisor",
    subtitle: "Rated 4.9 / 5.0",
    detail:
      "By hundreds of staying guests. Travellers' Choice 2023. Among top 10% of stays in India.",
  },
  {
    logo: "/google-g-logo.svg",
    alt: "Google Reviews 4.6/5.0",
    title: "Google Reviews",
    subtitle: "Rated 4.7 / 5.0",
    detail: "By hundreds of verified guest ratings from real visitors.",
  },
  {
    logo: "/logo-cnt-india-reverse.svg",
    alt: "Conde Nast Traveller India Logo",
    title: "Conde Nast Traveller",
    subtitle: "Feature Story",
    detail: "Featured for redefining eco-luxury in Tadoba.",
  },
  {
    logo: "/OLT_New_Logo_13.avif",
    alt: "Outlook Traveller Logo",
    title: "Outlook Traveller",
    subtitle: "India's Hidden Gem 2022",
    detail: "Praised for authentic safaris and warm hospitality.",
  },
];
---

<section id="awards" class="py-32 bg-gray-1">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Heading -->
    <header class="text-center mb-24">
      <p class="text-sm uppercase tracking-[0.25em] text-amber-500 mb-3">
        Recognition
      </p>
      <h2 class="font-serif text-4xl md:text-6xl text-white mb-6">
        Awards & Reviews
      </h2>
      <p class="text-lg text-gray-300 max-w-2xl mx-auto leading-relaxed">
        Independent voices and trusted platforms that recognise Limban's
        commitment to conservation luxury and thoughtful hospitality.
      </p>
    </header>

    <!-- Awards Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-10">
      {
        awards.map((entry, index) => (
          <div
            key={index}
            class="relative flex flex-col justify-between bg-gray-900/70 rounded-2xl border border-gray-800 hover:border-amber-500 hover:bg-gray-900 transition-all duration-300 p-8 text-center group"
          >
            <div class="flex flex-col items-center">
              <img
                src={entry.logo}
                alt={entry.alt}
                class="h-12 w-auto mb-6 opacity-90 group-hover:opacity-100 transition"
                loading="lazy"
                decoding="async"
              />
              <h3 class="text-xl text-white font-semibold mb-1">
                {entry.title}
              </h3>
              <p class="text-amber-400 text-sm mb-4">{entry.subtitle}</p>
              <p class="text-sm text-gray-400 leading-relaxed">
                {entry.detail}
              </p>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Subtext -->
    <div class="text-center mt-20">
      <hr class="border-gray-800 mb-8" />
      <p class="text-xs text-gray-500 max-w-lg mx-auto leading-relaxed">
        Limban appears only on independent platforms that value genuine guest
        experiences and verified recognition.
      </p>
    </div>
  </div>
</section>
