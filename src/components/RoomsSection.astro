---
// Same props interface and validation
const { rooms = [], specialDeal } = Astro.props;

const validatedRooms = rooms
  .filter(room => room?.roomName && room?.id)
  .map(room => ({
    ...room,
    imageUrl: room.heroImage?.optimisedCard || room.heroImage?.url || '/img/room-placeholder.jpg',
    safePrice: Number(room.basePrice) || 0,
    safeUrl: room.url?.startsWith('/') ? room.url : `/rooms/${room.url || room.id}`
  }));
---

<section id="accommodations" class="py-32 bg-gray-800">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Header -->
    <header class="text-center mb-20">
      <div class="text-sm text-gray-400 tracking-[0.2em] uppercase mb-4">
        Exceptional Accommodations!
      </div>
      <h2 class="font-serif italic text-4xl md:text-6xl text-white mb-8">
        Six Luxury Experiences
      </h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
        Six distinctive accommodation experiences designed for luxury, comfort, and authentic wilderness connection.
      </p>
    </header>

    <!-- Special Deal -->
    {specialDeal?.html && (
      <div class="max-w-4xl mx-auto mb-16 bg-gray-900/50 border border-yellow-600/30 rounded-xl p-6 text-center">
        <div class="font-semibold text-orange-300" set:html={specialDeal.html} />
      </div>
    )}

    <!-- Rooms Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {validatedRooms.length === 0 ? (
        <div class="col-span-full text-center py-12">
          <p class="text-gray-400 text-lg">Rooms are being updated. Please check back soon.</p>
        </div>
      ) : (
        validatedRooms.map((room) => (
          <article class="group bg-gray-800/50 backdrop-blur-xl border border-gray-500 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 flex flex-col hover:-translate-y-1">
            <!-- Image -->
            <div class="w-full h-64 overflow-hidden relative">
              <img
                src={room.imageUrl}
                alt={`${room.roomName} - Luxury accommodation at Limban Resort Tadoba`}
                class="w-full h-64 object-cover transition-transform duration-700 group-hover:scale-110"
                loading="lazy"
                decoding="async"
              />
            </div>
            
            <!-- Content -->
            <div class="p-8 flex flex-col flex-grow">
              <header class="flex items-center mb-3">
                <h3 class=" font-serif italic text-3xl text-white font-bold">{room.roomName}</h3>
              </header>
              
              <p class="text-gray-400 mb-6 text-sm leading-relaxed flex-grow">{room.shortDescription}</p>
              
              <div class="space-y-4">
                <div class="space-y-1">
                  <span class="text-2xl font-bold text-white">From â‚¹{room.safePrice.toLocaleString()}</span>
                  <span class="text-sm text-gray-400 block">per night</span>
                </div>
               
                <a href={room.safeUrl} class="action-btn">
                  {room.ctaText || 'Learn More'}
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a> 

              </div>
            </div>
          </article>
        ))
      )}
    </div>
  </div>
</section>
