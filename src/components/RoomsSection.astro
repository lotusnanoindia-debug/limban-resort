---
const { rooms = [], specialDeal } = Astro.props;

// ðŸŽ¯ SIMPLIFIED: Clean data validation
const validatedRooms = rooms
  .filter(room => room?.roomName && room?.id)
  .map(room => ({
    ...room,
    imageUrl: room.optimizedImage?.src || room.heroImage?.optimisedCard || '/img/room-placeholder.webp',
    imageLqip: room.optimizedImage?.lqip,
    safePrice: Number(room.basePrice) || 0,
    safeUrl: room.url?.startsWith('/') ? room.url : `/rooms/${room.url || room.id}`
  }));
---

<section id="accommodations" class="py-24 md:py-32 bg-gray-800" role="region" aria-labelledby="rooms-title">
  <div class="max-w-7xl mx-auto px-6">
    
    <!-- Header -->
    <header class="text-center mb-16">
      <div class="inline-block px-4 py-2 bg-amber-400/10 border border-amber-400/30 rounded-full mb-6">
        <span class="text-amber-400 text-xs font-medium tracking-widest uppercase">
          Luxury Accommodations
        </span>
      </div>
      <h2 id="rooms-title" class="font-serif italic text-3xl md:text-5xl lg:text-6xl text-white mb-6">
        Six Unique Experiences
      </h2>
      <p class="text-lg md:text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
        Distinctive accommodations designed for luxury, comfort, and authentic wilderness connection.
      </p>
    </header>

    <!-- ðŸŽ¯ SIMPLIFIED: Special Deal -->
    {specialDeal?.html && (
      <div class="max-w-4xl mx-auto mb-12 bg-gradient-to-r from-amber-400/10 to-orange-400/10 border border-amber-400/30 rounded-xl p-6 text-center">
        <div class="text-amber-300" set:html={specialDeal.html} />
      </div>
    )}

    <!-- Rooms Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {validatedRooms.length === 0 ? (
        <div class="col-span-full text-center py-16">
          <p class="text-gray-400 text-lg">Rooms information is being updated. Please contact us for availability.</p>
          <a href="/contact" class="inline-block mt-4 text-amber-400 hover:text-amber-300 underline">
            Contact Us
          </a>
        </div>
      ) : (
        validatedRooms.map((room, index) => (
          <article 
            key={room.id}
            class="group bg-gray-900/50 border border-gray-700 rounded-2xl overflow-hidden hover:border-gray-600 transition-all duration-500 hover:-translate-y-1 hover:shadow-xl"
          >
            
            <!-- ðŸŽ¯ OPTIMIZED: Image with LQIP -->
            <div class="relative aspect-[4/3] overflow-hidden bg-gray-800">
              {/* LQIP background */}
              {room.imageLqip && (
                <img
                  src={room.imageLqip}
                  alt=""
                  class="absolute inset-0 w-full h-full object-cover blur-sm"
                  aria-hidden="true"
                />
              )}
              
              {/* Main image */}
              <img
                src={room.imageUrl}
                alt={`${room.roomName} - luxury accommodation at Limban Resort Tadoba`}
                class="relative w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                loading={index < 3 ? "eager" : "lazy"}
                decoding="async"
                sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
              />
            </div>
            
            <!-- Content -->
            <div class="p-6">
              <h3 class="font-serif italic text-2xl text-white mb-3">
                {room.roomName}
              </h3>
              
              <p class="text-gray-400 text-sm leading-relaxed mb-6 line-clamp-3">
                {room.shortDescription}
              </p>
              
              <div class="flex items-center justify-between">
                <div>
                  <div class="flex items-baseline space-x-1">
                    <span class="text-sm text-gray-400">From</span>
                    <span class="text-xl font-bold text-white">â‚¹{room.safePrice.toLocaleString()}</span>
                  </div>
                  <div class="text-xs text-gray-500">per night â€¢ breakfast included</div>
                </div>
                
                <a 
                  href={room.safeUrl} 
                  class="home-cta"
                >
                  Learn More
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))
      )}
    </div>
  </div>
</section>

<style>
  /* ðŸŽ¯ UTILITY: Line clamp for consistent text height */
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* ðŸŽ¯ PERFORMANCE: Smooth transforms */
  .group {
    will-change: transform;
  }
</style>
