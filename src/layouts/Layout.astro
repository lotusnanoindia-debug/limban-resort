---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const { title = "Limban Resort, Tadoba" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.ico?v=2" sizes="32x32" />
    <link
      rel="apple-touch-icon"
      href="/apple-touch-icon.png?v=2"
      sizes="180x180"
    />
    <link rel="manifest" href="/site.webmanifest?v=2" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Figtree:wght@300;400;500;600;700&family=Libre+Baskerville:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site).href} />
    <slot name="head" />

    <script
      src="https://app.rybbit.io/api/script.js"
      data-site-id="7e46f64a8c2c"
      defer></script>
  </head>
  <body
    class="bg-[#1a1410] text-neutral-100 font-sans antialiased leading-relaxed selection:bg-amber-900/40"
  >
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
