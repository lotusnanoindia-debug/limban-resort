---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { title = "Limban Resort" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <slot name="head" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://ap-south-1.cdn.hygraph.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;1,400;1,600&display=swap"
      rel="stylesheet"
    />
    <link rel="dns-prefetch" href="https://ap-south-1.graphassets.com" />
    <link rel="preconnect" href="https://ap-south-1.graphassets.com" />
  </head>
  <body
    class="bg-gray-950 text-gray-100 font-sans antialiased selection:bg-gray-700"
  >
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <script>
      // Luxury page loader
      function showLoader() {
        const loader = document.createElement("div");
        loader.id = "page-loader";
        loader.className =
          "fixed inset-0 bg-gray-950/80 backdrop-blur-sm z-50 flex items-center justify-center";
        loader.innerHTML = `
        <div class="text-center">
          <div class="w-16 h-16 border-2 border-amber-400/30 border-t-amber-400 rounded-full animate-spin mx-auto mb-4"></div>
        </div>
      `;
        document.body.appendChild(loader);
      }

      function hideLoader() {
        const loader = document.getElementById("page-loader");
        if (loader) {
          loader.style.opacity = "0";
          loader.style.transition = "opacity 0.3s ease";
          setTimeout(() => loader.remove(), 300);
        }
      }

      // Show on any link click
      document.addEventListener("click", (e) => {
        if (
          e.target.tagName === "A" &&
          e.target.href &&
          !e.target.href.includes("#")
        ) {
          showLoader();
        }
      });

      // Hide when page loads
      window.addEventListener("load", hideLoader);
    </script>
  </body>
</html>
