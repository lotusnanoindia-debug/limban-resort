---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const { title = "Limban Resort" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <slot name="head" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://res.cloudinary.com" />
    <link
      <link
      href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,wght@1,400;1,700&display=swap"
      rel="stylesheet"
    />
    <script
      defer
      src="https://cloud.umami.is/script.js"
      data-website-id="248c09e7-93ae-4b3c-99f2-cb032da0ebf9"></script>
  </head>
  <body
    class="bg-gray-950 text-gray-100 font-sans antialiased selection:bg-gray-700"
  >
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
